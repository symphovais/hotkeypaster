<Window x:Class="TalkKeys.ComponentShowcaseWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="TalkKeys Design System Showcase"
        Height="800"
        Width="1200"
        WindowStartupLocation="CenterScreen"
        Background="{StaticResource BackgroundPrimary}">

    <Grid Margin="{StaticResource Spacing2XL}">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Left Column -->
        <ScrollViewer Grid.Column="0" VerticalScrollBarVisibility="Auto" Margin="0,0,12,0">
            <StackPanel>
                <!-- Header -->
                <TextBlock Style="{StaticResource DisplayText}" Text="Design System" Margin="0,0,0,8"/>
                <TextBlock Style="{StaticResource CaptionText}"
                          Text="Modern dark UI inspired by premium dashboards"
                          Margin="0,0,0,24"/>

                <!-- Stat Cards Demo -->
                <Border Style="{StaticResource Card}" Margin="0,0,0,20">
                    <StackPanel>
                        <TextBlock Style="{StaticResource TitleText}" Text="Stat Cards" Margin="0,0,0,16"/>

                        <UniformGrid Columns="2" HorizontalAlignment="Stretch">
                            <!-- Stat Card 1 -->
                            <Border Style="{StaticResource StatCard}" Margin="0,0,8,0">
                                <StackPanel>
                                    <TextBlock Style="{StaticResource StatLabel}" Text="Total Uses" Margin="0,0,0,8"/>
                                    <TextBlock Style="{StaticResource StatNumber}" Text="721K"/>
                                    <Border Style="{StaticResource TrendBadge}" Margin="0,8,0,0">
                                        <TextBlock Style="{StaticResource TrendText}" Text="â†‘ 11.01%"/>
                                    </Border>
                                </StackPanel>
                            </Border>

                            <!-- Stat Card 2 -->
                            <Border Style="{StaticResource StatCard}" Margin="8,0,0,0">
                                <StackPanel>
                                    <TextBlock Style="{StaticResource StatLabel}" Text="Accuracy" Margin="0,0,0,8"/>
                                    <TextBlock Style="{StaticResource StatNumber}" Text="95.6%"/>
                                    <Border Style="{StaticResource TrendBadge}" Margin="0,8,0,0">
                                        <TextBlock Style="{StaticResource TrendText}" Text="â†‘ 2.4%"/>
                                    </Border>
                                </StackPanel>
                            </Border>
                        </UniformGrid>
                    </StackPanel>
                </Border>

                <!-- Colors Section -->
                <Border Style="{StaticResource Card}" Margin="0,0,0,20">
                    <StackPanel>
                        <TextBlock Style="{StaticResource TitleText}" Text="Colors" Margin="0,0,0,16"/>

                        <!-- Backgrounds -->
                        <TextBlock Style="{StaticResource LabelText}" Text="Backgrounds" Margin="0,0,0,8"/>
                        <StackPanel Orientation="Horizontal" Margin="0,0,0,12">
                            <Border Width="60" Height="40" Background="{StaticResource BackgroundPrimary}"
                                   BorderBrush="{StaticResource BorderDefault}" BorderThickness="1" Margin="0,0,8,0">
                                <TextBlock Text="Primary" Style="{StaticResource SmallText}"
                                          VerticalAlignment="Center" HorizontalAlignment="Center"/>
                            </Border>
                            <Border Width="60" Height="40" Background="{StaticResource BackgroundSecondary}"
                                   BorderBrush="{StaticResource BorderDefault}" BorderThickness="1" Margin="0,0,8,0">
                                <TextBlock Text="Secondary" Style="{StaticResource SmallText}"
                                          VerticalAlignment="Center" HorizontalAlignment="Center"/>
                            </Border>
                            <Border Width="60" Height="40" Background="{StaticResource BackgroundTertiary}"
                                   BorderBrush="{StaticResource BorderDefault}" BorderThickness="1">
                                <TextBlock Text="Tertiary" Style="{StaticResource SmallText}"
                                          VerticalAlignment="Center" HorizontalAlignment="Center"/>
                            </Border>
                        </StackPanel>

                        <!-- Accent Colors -->
                        <TextBlock Style="{StaticResource LabelText}" Text="Accent Colors" Margin="0,12,0,8"/>
                        <StackPanel Orientation="Horizontal" Margin="0,0,0,12">
                            <Border Width="60" Height="40" Background="{StaticResource AccentPrimary}" Margin="0,0,8,0">
                                <TextBlock Text="Primary" Foreground="White" Style="{StaticResource SmallText}"
                                          VerticalAlignment="Center" HorizontalAlignment="Center"/>
                            </Border>
                            <Border Width="60" Height="40" Background="{StaticResource AccentSuccess}" Margin="0,0,8,0">
                                <TextBlock Text="Success" Foreground="White" Style="{StaticResource SmallText}"
                                          VerticalAlignment="Center" HorizontalAlignment="Center"/>
                            </Border>
                            <Border Width="60" Height="40" Background="{StaticResource AccentWarning}" Margin="0,0,8,0">
                                <TextBlock Text="Warning" Foreground="White" Style="{StaticResource SmallText}"
                                          VerticalAlignment="Center" HorizontalAlignment="Center"/>
                            </Border>
                            <Border Width="60" Height="40" Background="{StaticResource AccentError}">
                                <TextBlock Text="Error" Foreground="White" Style="{StaticResource SmallText}"
                                          VerticalAlignment="Center" HorizontalAlignment="Center"/>
                            </Border>
                        </StackPanel>

                        <!-- Text Colors -->
                        <TextBlock Style="{StaticResource LabelText}" Text="Text Colors" Margin="0,12,0,8"/>
                        <StackPanel Margin="0,0,0,0">
                            <TextBlock Foreground="{StaticResource TextPrimary}" Text="Primary Text" Margin="0,0,0,4"/>
                            <TextBlock Foreground="{StaticResource TextSecondary}" Text="Secondary Text" Margin="0,0,0,4"/>
                            <TextBlock Foreground="{StaticResource TextTertiary}" Text="Tertiary Text" Margin="0,0,0,4"/>
                            <TextBlock Foreground="{StaticResource TextMuted}" Text="Muted Text" Margin="0,0,0,4"/>
                            <TextBlock Foreground="{StaticResource TextDisabled}" Text="Disabled Text"/>
                        </StackPanel>
                    </StackPanel>
                </Border>

                <!-- Typography Section -->
                <Border Style="{StaticResource Card}" Margin="0,0,0,20">
                    <StackPanel>
                        <TextBlock Style="{StaticResource TitleText}" Text="Typography" Margin="0,0,0,16"/>

                        <TextBlock Style="{StaticResource DisplayText}" Text="Display Text (28px)" Margin="0,0,0,8"/>
                        <TextBlock Style="{StaticResource TitleText}" Text="Title Text (18px)" Margin="0,0,0,8"/>
                        <TextBlock Style="{StaticResource HeadingText}" Text="Heading Text (16px)" Margin="0,0,0,8"/>
                        <TextBlock Style="{StaticResource BodyText}" Text="Body Text (13px)" Margin="0,0,0,8"/>
                        <TextBlock Style="{StaticResource LabelText}" Text="Label Text (14px SemiBold)" Margin="0,0,0,8"/>
                        <TextBlock Style="{StaticResource CaptionText}"
                                  Text="Caption Text (12px) - Perfect for descriptions and hints that provide additional context to users. This text wraps automatically when it reaches the edge of its container."
                                  Margin="0,0,0,8"/>
                        <TextBlock Style="{StaticResource SmallText}" Text="Small Text (11px)"/>
                    </StackPanel>
                </Border>

                <!-- Buttons Section -->
                <Border Style="{StaticResource Card}" Margin="0,0,0,20">
                    <StackPanel>
                        <TextBlock Style="{StaticResource TitleText}" Text="Buttons" Margin="0,0,0,16"/>

                        <TextBlock Style="{StaticResource LabelText}" Text="Button Variants" Margin="0,0,0,8"/>
                        <StackPanel Orientation="Horizontal" Margin="0,0,0,12">
                            <Button Style="{StaticResource PrimaryButton}" Content="Primary" Margin="0,0,8,0"/>
                            <Button Style="{StaticResource SecondaryButton}" Content="Secondary" Margin="0,0,8,0"/>
                            <Button Style="{StaticResource AccentButton}" Content="Accent" Margin="0,0,8,0"/>
                            <Button Style="{StaticResource DangerButton}" Content="Danger"/>
                        </StackPanel>

                        <StackPanel Orientation="Horizontal" Margin="0,0,0,12">
                            <Button Style="{StaticResource GhostButton}" Content="Ghost" Margin="0,0,8,0"/>
                            <Button Style="{StaticResource PrimaryButton}" Content="Disabled" IsEnabled="False"/>
                        </StackPanel>

                        <TextBlock Style="{StaticResource LabelText}" Text="Icon Buttons" Margin="0,12,0,8"/>
                        <StackPanel Orientation="Horizontal">
                            <Button Style="{StaticResource IconButton}" Content="âœ•" Margin="0,0,8,0"/>
                            <Button Style="{StaticResource IconButton}" Content="âš™" Margin="0,0,8,0"/>
                            <Button Style="{StaticResource IconButton}" Content="?" Margin="0,0,8,0"/>
                            <Button Style="{StaticResource IconButton}" Content="ðŸ”"/>
                        </StackPanel>
                    </StackPanel>
                </Border>

                <!-- Inputs Section -->
                <Border Style="{StaticResource Card}">
                    <StackPanel>
                        <TextBlock Style="{StaticResource TitleText}" Text="Form Inputs" Margin="0,0,0,16"/>

                        <TextBlock Style="{StaticResource LabelText}" Text="Text Input" Margin="0,0,0,8"/>
                        <TextBox Style="{StaticResource TextBoxStyle}" Text="Sample text input" Margin="0,0,0,16"/>

                        <TextBlock Style="{StaticResource LabelText}" Text="Password Input" Margin="0,0,0,8"/>
                        <PasswordBox Style="{StaticResource PasswordBoxStyle}" Password="password123" Margin="0,0,0,16"/>

                        <TextBlock Style="{StaticResource LabelText}" Text="Disabled Input" Margin="0,0,0,8"/>
                        <TextBox Style="{StaticResource TextBoxStyle}" Text="Disabled field" IsEnabled="False" Margin="0,0,0,16"/>

                        <TextBlock Style="{StaticResource LabelText}" Text="With Caption" Margin="0,0,0,8"/>
                        <TextBox Style="{StaticResource TextBoxStyle}" Text="Enter your API key" Margin="0,0,0,4"/>
                        <TextBlock Style="{StaticResource CaptionText}"
                                  Text="Your API key will be stored securely and encrypted"/>
                    </StackPanel>
                </Border>
            </StackPanel>
        </ScrollViewer>

        <!-- Right Column -->
        <ScrollViewer Grid.Column="1" VerticalScrollBarVisibility="Auto" Margin="12,0,0,0">
            <StackPanel>
                <!-- Spacing for alignment -->
                <TextBlock Height="52"/>

                <!-- Dropdowns & Selections -->
                <Border Style="{StaticResource Card}" Margin="0,0,0,20">
                    <StackPanel>
                        <TextBlock Style="{StaticResource TitleText}" Text="Dropdowns &amp; Selections" Margin="0,0,0,16"/>

                        <TextBlock Style="{StaticResource LabelText}" Text="ComboBox" Margin="0,0,0,8"/>
                        <ComboBox Style="{StaticResource ComboBoxStyle}" SelectedIndex="0" Margin="0,0,0,16">
                            <ComboBoxItem Content="Option 1"/>
                            <ComboBoxItem Content="Option 2"/>
                            <ComboBoxItem Content="Option 3"/>
                            <ComboBoxItem Content="Option 4"/>
                        </ComboBox>

                        <TextBlock Style="{StaticResource LabelText}" Text="CheckBoxes" Margin="0,0,0,8"/>
                        <CheckBox Style="{StaticResource CheckBoxStyle}" Content="Enable feature A" IsChecked="True" Margin="0,0,0,8"/>
                        <CheckBox Style="{StaticResource CheckBoxStyle}" Content="Enable feature B" Margin="0,0,0,8"/>
                        <CheckBox Style="{StaticResource CheckBoxStyle}" Content="Disabled option" IsEnabled="False" Margin="0,0,0,16"/>

                        <TextBlock Style="{StaticResource LabelText}" Text="Radio Buttons" Margin="0,0,0,8"/>
                        <RadioButton Style="{StaticResource RadioButtonStyle}" GroupName="Demo" Content="Option A" IsChecked="True" Margin="0,0,0,8"/>
                        <RadioButton Style="{StaticResource RadioButtonStyle}" GroupName="Demo" Content="Option B" Margin="0,0,0,8"/>
                        <RadioButton Style="{StaticResource RadioButtonStyle}" GroupName="Demo" Content="Option C"/>
                    </StackPanel>
                </Border>

                <!-- List Items -->
                <Border Style="{StaticResource Card}" Margin="0,0,0,20">
                    <StackPanel>
                        <TextBlock Style="{StaticResource TitleText}" Text="List Items" Margin="0,0,0,16"/>

                        <!-- List Item 1 -->
                        <Border Style="{StaticResource ListItem}">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>

                                <Border Grid.Column="0" Style="{StaticResource Thumbnail}" Margin="0,0,12,0">
                                    <TextBlock Text="ðŸŽ¯" FontSize="24" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                                </Border>

                                <StackPanel Grid.Column="1" VerticalAlignment="Center">
                                    <TextBlock Style="{StaticResource BodyText}" Text="Pipeline Benchmark" FontWeight="SemiBold"/>
                                    <TextBlock Style="{StaticResource SubtitleText}" Text="95.5% accuracy"/>
                                </StackPanel>

                                <StackPanel Grid.Column="2" VerticalAlignment="Center" HorizontalAlignment="Right">
                                    <TextBlock Style="{StaticResource ValueText}" Text="1,250ms"/>
                                    <Border Style="{StaticResource TrendBadge}" HorizontalAlignment="Right" Margin="0,4,0,0">
                                        <TextBlock Style="{StaticResource TrendText}" Text="â†‘ 4.8%" FontSize="9"/>
                                    </Border>
                                </StackPanel>
                            </Grid>
                        </Border>

                        <!-- List Item 2 -->
                        <Border Style="{StaticResource ListItem}">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>

                                <Border Grid.Column="0" Style="{StaticResource Thumbnail}" Margin="0,0,12,0">
                                    <TextBlock Text="ðŸŽ¤" FontSize="24" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                                </Border>

                                <StackPanel Grid.Column="1" VerticalAlignment="Center">
                                    <TextBlock Style="{StaticResource BodyText}" Text="Voice Transcriptions" FontWeight="SemiBold"/>
                                    <TextBlock Style="{StaticResource SubtitleText}" Text="Total processed"/>
                                </StackPanel>

                                <TextBlock Grid.Column="2" Style="{StaticResource ValueText}" Text="721K" VerticalAlignment="Center"/>
                            </Grid>
                        </Border>

                        <!-- List Item 3 -->
                        <Border Style="{StaticResource ListItem}" Margin="0,0,0,0">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>

                                <Border Grid.Column="0" Style="{StaticResource Thumbnail}" Margin="0,0,12,0">
                                    <TextBlock Text="âš¡" FontSize="24" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                                </Border>

                                <StackPanel Grid.Column="1" VerticalAlignment="Center">
                                    <TextBlock Style="{StaticResource BodyText}" Text="Local Model" FontWeight="SemiBold"/>
                                    <TextBlock Style="{StaticResource SubtitleText}" Text="Whisper Base"/>
                                </StackPanel>

                                <Border Grid.Column="2" Style="{StaticResource Badge}" VerticalAlignment="Center">
                                    <TextBlock Style="{StaticResource BadgeText}" Text="Active"/>
                                </Border>
                            </Grid>
                        </Border>
                    </StackPanel>
                </Border>

                <!-- Containers Section -->
                <Border Style="{StaticResource Card}" Margin="0,0,0,20">
                    <StackPanel>
                        <TextBlock Style="{StaticResource TitleText}" Text="Containers" Margin="0,0,0,16"/>

                        <TextBlock Style="{StaticResource LabelText}" Text="Card (with shadow)" Margin="0,0,0,8"/>
                        <Border Style="{StaticResource Card}" Margin="0,0,0,16">
                            <TextBlock Style="{StaticResource BodyText}"
                                      Text="This is a card component with elevation shadow and rounded corners."/>
                        </Border>

                        <TextBlock Style="{StaticResource LabelText}" Text="Panel (flat)" Margin="0,0,0,8"/>
                        <Border Style="{StaticResource Panel}" Margin="0,0,0,16">
                            <TextBlock Style="{StaticResource BodyText}"
                                      Text="This is a panel component without shadow, good for less prominent sections."/>
                        </Border>

                        <TextBlock Style="{StaticResource LabelText}" Text="Dialog Container" Margin="0,0,0,8"/>
                        <Border Style="{StaticResource DialogContainer}">
                            <StackPanel>
                                <TextBlock Style="{StaticResource HeadingText}" Text="Dialog Header" Margin="0,0,0,8"/>
                                <TextBlock Style="{StaticResource BodyText}"
                                          Text="This container style is perfect for modal dialogs and important messages."/>
                            </StackPanel>
                        </Border>
                    </StackPanel>
                </Border>

                <!-- Progress & Feedback -->
                <Border Style="{StaticResource Card}" Margin="0,0,0,20">
                    <StackPanel>
                        <TextBlock Style="{StaticResource TitleText}" Text="Progress &amp; Feedback" Margin="0,0,0,16"/>

                        <TextBlock Style="{StaticResource LabelText}" Text="Progress Bar" Margin="0,0,0,8"/>
                        <ProgressBar Style="{StaticResource ProgressBarStyle}"
                                    Value="65"
                                    Maximum="100"
                                    Margin="0,0,0,4"/>
                        <TextBlock Style="{StaticResource CaptionText}" Text="65% complete" Margin="0,0,0,16"/>

                        <ProgressBar Style="{StaticResource ProgressBarStyle}"
                                    Value="100"
                                    Maximum="100"
                                    Margin="0,0,0,16"/>

                        <TextBlock Style="{StaticResource LabelText}" Text="Badges / Pills" Margin="0,0,0,8"/>
                        <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
                            <Border Style="{StaticResource Badge}" Background="{StaticResource AccentPrimary}" Margin="0,0,8,0">
                                <TextBlock Style="{StaticResource BadgeText}" Text="Primary"/>
                            </Border>
                            <Border Style="{StaticResource Badge}" Background="{StaticResource AccentSuccess}" Margin="0,0,8,0">
                                <TextBlock Style="{StaticResource BadgeText}" Text="Success"/>
                            </Border>
                            <Border Style="{StaticResource Badge}" Background="{StaticResource AccentWarning}" Margin="0,0,8,0">
                                <TextBlock Style="{StaticResource BadgeText}" Text="Warning"/>
                            </Border>
                            <Border Style="{StaticResource Badge}" Background="{StaticResource AccentError}">
                                <TextBlock Style="{StaticResource BadgeText}" Text="Error"/>
                            </Border>
                        </StackPanel>
                    </StackPanel>
                </Border>

                <!-- Spacing Examples -->
                <Border Style="{StaticResource Card}" Margin="0,0,0,20">
                    <StackPanel>
                        <TextBlock Style="{StaticResource TitleText}" Text="Spacing Scale" Margin="0,0,0,16"/>
                        <TextBlock Style="{StaticResource CaptionText}"
                                  Text="Consistent spacing creates visual rhythm and hierarchy"
                                  Margin="0,0,0,16"/>

                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>

                            <TextBlock Grid.Row="0" Grid.Column="0" Style="{StaticResource SmallText}" Text="XS (4px)" Margin="0,0,12,8"/>
                            <Border Grid.Row="0" Grid.Column="1" Height="4" Background="{StaticResource AccentPrimary}" HorizontalAlignment="Left" Width="40" Margin="0,0,0,8"/>

                            <TextBlock Grid.Row="1" Grid.Column="0" Style="{StaticResource SmallText}" Text="SM (8px)" Margin="0,0,12,8"/>
                            <Border Grid.Row="1" Grid.Column="1" Height="8" Background="{StaticResource AccentPrimary}" HorizontalAlignment="Left" Width="80" Margin="0,0,0,8"/>

                            <TextBlock Grid.Row="2" Grid.Column="0" Style="{StaticResource SmallText}" Text="MD (12px)" Margin="0,0,12,8"/>
                            <Border Grid.Row="2" Grid.Column="1" Height="12" Background="{StaticResource AccentPrimary}" HorizontalAlignment="Left" Width="120" Margin="0,0,0,8"/>

                            <TextBlock Grid.Row="3" Grid.Column="0" Style="{StaticResource SmallText}" Text="LG (16px)" Margin="0,0,12,8"/>
                            <Border Grid.Row="3" Grid.Column="1" Height="16" Background="{StaticResource AccentPrimary}" HorizontalAlignment="Left" Width="160" Margin="0,0,0,8"/>

                            <TextBlock Grid.Row="4" Grid.Column="0" Style="{StaticResource SmallText}" Text="XL (20px)" Margin="0,0,12,8"/>
                            <Border Grid.Row="4" Grid.Column="1" Height="20" Background="{StaticResource AccentPrimary}" HorizontalAlignment="Left" Width="200" Margin="0,0,0,8"/>

                            <TextBlock Grid.Row="5" Grid.Column="0" Style="{StaticResource SmallText}" Text="2XL (24px)" Margin="0,0,12,8"/>
                            <Border Grid.Row="5" Grid.Column="1" Height="24" Background="{StaticResource AccentPrimary}" HorizontalAlignment="Left" Width="240" Margin="0,0,0,8"/>

                            <TextBlock Grid.Row="6" Grid.Column="0" Style="{StaticResource SmallText}" Text="3XL (32px)" Margin="0,0,12,0"/>
                            <Border Grid.Row="6" Grid.Column="1" Height="32" Background="{StaticResource AccentPrimary}" HorizontalAlignment="Left" Width="280"/>
                        </Grid>
                    </StackPanel>
                </Border>

                <!-- Corner Radius Examples -->
                <Border Style="{StaticResource Card}">
                    <StackPanel>
                        <TextBlock Style="{StaticResource TitleText}" Text="Corner Radius" Margin="0,0,0,16"/>

                        <StackPanel Orientation="Horizontal" Margin="0,0,0,12">
                            <Border Width="80" Height="60"
                                   Background="{StaticResource BackgroundSecondary}"
                                   BorderBrush="{StaticResource BorderDefault}"
                                   BorderThickness="1"
                                   CornerRadius="{StaticResource CornerRadiusSmall}"
                                   Margin="0,0,12,0">
                                <TextBlock Style="{StaticResource CaptionText}" Text="Small (6px)"
                                          VerticalAlignment="Center" HorizontalAlignment="Center"/>
                            </Border>
                            <Border Width="80" Height="60"
                                   Background="{StaticResource BackgroundSecondary}"
                                   BorderBrush="{StaticResource BorderDefault}"
                                   BorderThickness="1"
                                   CornerRadius="{StaticResource CornerRadiusMedium}"
                                   Margin="0,0,12,0">
                                <TextBlock Style="{StaticResource CaptionText}" Text="Medium (8px)"
                                          VerticalAlignment="Center" HorizontalAlignment="Center"/>
                            </Border>
                            <Border Width="80" Height="60"
                                   Background="{StaticResource BackgroundSecondary}"
                                   BorderBrush="{StaticResource BorderDefault}"
                                   BorderThickness="1"
                                   CornerRadius="{StaticResource CornerRadiusLarge}">
                                <TextBlock Style="{StaticResource CaptionText}" Text="Large (12px)"
                                          VerticalAlignment="Center" HorizontalAlignment="Center"/>
                            </Border>
                        </StackPanel>
                    </StackPanel>
                </Border>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</Window>
