<Window x:Class="TalkKeys.PipelineDeathmatchWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Pipeline Benchmark"
        Height="500"
        Width="650"
        WindowStartupLocation="CenterScreen"
        Background="#1A1A1A"
        Foreground="#E5E7EB"
        ResizeMode="NoResize"
        WindowStyle="None"
        AllowsTransparency="True">

    <Border CornerRadius="12" Background="#1A1A1A" BorderThickness="1" BorderBrush="#333333">
        <Grid Margin="30">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Header -->
            <StackPanel Grid.Row="0" Margin="0,0,0,25">
                <TextBlock Text="ðŸ§ª Pipeline Benchmark" FontSize="24" FontWeight="Bold" Foreground="#E5E7EB"/>
                <TextBlock Text="Testing audio processing pipelines" FontSize="14" Foreground="#9CA3AF" Margin="0,5,0,0"/>
            </StackPanel>

            <!-- Instructions / Status Area -->
            <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
                <StackPanel>
                    <!-- Passage to read -->
                    <Border Background="#242424" CornerRadius="8" Padding="20" Margin="0,0,0,20" BorderBrush="#333333" BorderThickness="1">
                        <StackPanel>
                            <TextBlock Text="ðŸ“– Read this passage clearly:" FontSize="14" FontWeight="SemiBold" Foreground="#D1D5DB" Margin="0,0,0,10"/>
                            <TextBlock x:Name="PassageText"
                                       TextWrapping="Wrap"
                                       FontSize="13"
                                       Foreground="#E5E7EB"
                                       LineHeight="22"
                                       Text="The quick brown fox jumps over the lazy dog. The five boxing wizards jump quickly. Pack my box with five dozen liquor jugs. How vexingly quick daft zebras jump!"/>
                        </StackPanel>
                    </Border>

                    <!-- Recording Status -->
                    <TextBlock x:Name="StatusText"
                               Text="Click Record to start"
                               FontSize="14"
                               Foreground="#9CA3AF"
                               Margin="0,0,0,15"
                               TextWrapping="Wrap"/>

                    <!-- Progress -->
                    <StackPanel x:Name="ProgressPanel" Visibility="Collapsed" Margin="0,0,0,15">
                        <ProgressBar x:Name="ProgressBar"
                                     Height="4"
                                     IsIndeterminate="True"
                                     Foreground="#6366F1"
                                     Background="#242424"
                                     Margin="0,0,0,10"/>
                        <TextBlock x:Name="ProgressText"
                                   FontSize="12"
                                   Foreground="#9CA3AF"
                                   TextWrapping="Wrap"/>
                    </StackPanel>
                </StackPanel>
            </ScrollViewer>

            <!-- Action Buttons -->
            <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,20,0,0">
                <Button x:Name="RecordButton"
                        Content="ðŸŽ¤ Record"
                        Click="RecordButton_Click"
                        Padding="20,10"
                        Margin="0,0,10,0"
                        FontSize="14"
                        FontWeight="SemiBold"
                        Cursor="Hand">
                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="Background" Value="#10B981"/>
                            <Setter Property="Foreground" Value="White"/>
                            <Setter Property="BorderThickness" Value="0"/>
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="Button">
                                        <Border Background="{TemplateBinding Background}"
                                                CornerRadius="6"
                                                Padding="{TemplateBinding Padding}">
                                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                        </Border>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="#059669"/>
                                </Trigger>
                                <Trigger Property="IsEnabled" Value="False">
                                    <Setter Property="Background" Value="#374151"/>
                                    <Setter Property="Foreground" Value="#6B7280"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                </Button>

                <Button x:Name="StopButton"
                        Content="â¹ Stop"
                        Click="StopButton_Click"
                        IsEnabled="False"
                        Padding="20,10"
                        Margin="0,0,10,0"
                        FontSize="14"
                        FontWeight="SemiBold"
                        Cursor="Hand">
                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="Background" Value="#EF4444"/>
                            <Setter Property="Foreground" Value="White"/>
                            <Setter Property="BorderThickness" Value="0"/>
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="Button">
                                        <Border Background="{TemplateBinding Background}"
                                                CornerRadius="6"
                                                Padding="{TemplateBinding Padding}">
                                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                        </Border>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="#DC2626"/>
                                </Trigger>
                                <Trigger Property="IsEnabled" Value="False">
                                    <Setter Property="Background" Value="#374151"/>
                                    <Setter Property="Foreground" Value="#6B7280"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                </Button>

                <Button x:Name="LoadFileButton"
                        Content="ðŸ“ Load WAV File"
                        Click="LoadFileButton_Click"
                        Padding="20,10"
                        FontSize="14"
                        FontWeight="SemiBold"
                        Cursor="Hand">
                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="Background" Value="#3B82F6"/>
                            <Setter Property="Foreground" Value="White"/>
                            <Setter Property="BorderThickness" Value="0"/>
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="Button">
                                        <Border Background="{TemplateBinding Background}"
                                                CornerRadius="6"
                                                Padding="{TemplateBinding Padding}">
                                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                        </Border>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="#2563EB"/>
                                </Trigger>
                                <Trigger Property="IsEnabled" Value="False">
                                    <Setter Property="Background" Value="#374151"/>
                                    <Setter Property="Foreground" Value="#6B7280"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                </Button>
            </StackPanel>

            <!-- Close Button -->
            <Button Grid.Row="3"
                    x:Name="CloseButton"
                    Content="Close"
                    Click="CloseButton_Click"
                    Padding="20,10"
                    Margin="0,15,0,0"
                    HorizontalAlignment="Center"
                    FontSize="14"
                    FontWeight="SemiBold"
                    Cursor="Hand">
                <Button.Style>
                    <Style TargetType="Button">
                        <Setter Property="Background" Value="#6B7280"/>
                        <Setter Property="Foreground" Value="White"/>
                        <Setter Property="BorderThickness" Value="0"/>
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="Button">
                                    <Border Background="{TemplateBinding Background}"
                                            CornerRadius="6"
                                            Padding="{TemplateBinding Padding}">
                                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                    </Border>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                        <Style.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#9CA3AF"/>
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </Button.Style>
            </Button>
        </Grid>
    </Border>
</Window>
