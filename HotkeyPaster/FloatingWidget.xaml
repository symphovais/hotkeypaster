<Window x:Class="TalkKeys.FloatingWidget"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="TalkKeys"
        Width="90"
        Height="32"
        WindowStyle="None"
        ResizeMode="NoResize"
        Topmost="True"
        ShowInTaskbar="False"
        Background="Transparent"
        AllowsTransparency="True"
        WindowStartupLocation="Manual"
        MouseLeftButtonDown="Window_MouseLeftButtonDown"
        KeyDown="Window_KeyDown"
        Focusable="True">

    <Window.Resources>
        <!-- Pulse Animation for Recording -->
        <Storyboard x:Key="PulseAnimation" RepeatBehavior="Forever" AutoReverse="True">
            <DoubleAnimation Storyboard.TargetProperty="Opacity" From="1" To="0.5" Duration="0:0:1"/>
        </Storyboard>

        <!-- Slide In Animation for Toast -->
        <Storyboard x:Key="SlideInAnimation">
            <DoubleAnimation Storyboard.TargetProperty="(UIElement.RenderTransform).(TranslateTransform.Y)"
                             From="20" To="0" Duration="0:0:0.3">
                <DoubleAnimation.EasingFunction>
                    <CubicEase EasingMode="EaseOut"/>
                </DoubleAnimation.EasingFunction>
            </DoubleAnimation>
            <DoubleAnimation Storyboard.TargetProperty="Opacity"
                             From="0" To="1" Duration="0:0:0.25"/>
        </Storyboard>

        <!-- Slide Out Animation for Toast -->
        <Storyboard x:Key="SlideOutAnimation">
            <DoubleAnimation Storyboard.TargetProperty="(UIElement.RenderTransform).(TranslateTransform.Y)"
                             From="0" To="20" Duration="0:0:0.2">
                <DoubleAnimation.EasingFunction>
                    <CubicEase EasingMode="EaseIn"/>
                </DoubleAnimation.EasingFunction>
            </DoubleAnimation>
            <DoubleAnimation Storyboard.TargetProperty="Opacity"
                             From="1" To="0" Duration="0:0:0.2"/>
        </Storyboard>

        <!-- Expand Animation -->
        <Storyboard x:Key="ExpandAnimation">
            <DoubleAnimation Storyboard.TargetProperty="Opacity"
                             From="0" To="1" Duration="0:0:0.2"/>
        </Storyboard>
    </Window.Resources>

    <Grid x:Name="RootGrid">
        <!-- Compact State (Default) - Minimal mic + visualizer -->
        <Border x:Name="CompactPanel"
                CornerRadius="12"
                Height="32"
                Cursor="Hand"
                MouseEnter="CompactPanel_MouseEnter"
                MouseLeave="CompactPanel_MouseLeave"
                MouseLeftButtonUp="CompactButton_Click"
                ToolTip="Click or press Ctrl+Shift+Space to record">
            <Border.Background>
                <SolidColorBrush Color="#1F2937" Opacity="0.92"/>
            </Border.Background>
            <Border.Effect>
                <DropShadowEffect BlurRadius="12" ShadowDepth="1" Opacity="0.2" Color="#000000"/>
            </Border.Effect>

            <Grid Margin="10,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- Microphone Icon -->
                <Grid Grid.Column="0" Width="16" Height="16" Margin="0,0,8,0">
                    <Ellipse x:Name="MicDot" Width="16" Height="16" Fill="#374151"/>
                    <TextBlock Text="ðŸŽ¤" FontSize="9" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                </Grid>

                <!-- Audio Visualizer Bars -->
                <StackPanel x:Name="VisualizerBars" Grid.Column="1" Orientation="Horizontal" VerticalAlignment="Center">
                    <Border x:Name="Bar1" Width="2" Height="6" CornerRadius="1" Background="#6366F1" Margin="0,0,2,0"/>
                    <Border x:Name="Bar2" Width="2" Height="10" CornerRadius="1" Background="#6366F1" Margin="0,0,2,0"/>
                    <Border x:Name="Bar3" Width="2" Height="5" CornerRadius="1" Background="#6366F1" Margin="0,0,2,0"/>
                    <Border x:Name="Bar4" Width="2" Height="12" CornerRadius="1" Background="#6366F1" Margin="0,0,2,0"/>
                    <Border x:Name="Bar5" Width="2" Height="8" CornerRadius="1" Background="#6366F1"/>
                </StackPanel>

                <!-- Status Text (shown when not ready) -->
                <TextBlock x:Name="CompactStatus"
                           Grid.Column="2"
                           Text="!"
                           Foreground="#EF4444"
                           FontSize="10"
                           FontWeight="Bold"
                           VerticalAlignment="Center"
                           Margin="6,0,0,0"
                           Visibility="Collapsed"/>

                <!-- Close button (visible on hover) -->
                <Button x:Name="CompactCloseButton"
                        Grid.Column="2"
                        Content="âœ•"
                        Width="14"
                        Height="14"
                        FontSize="8"
                        Opacity="0"
                        Background="Transparent"
                        Foreground="#6B7280"
                        BorderThickness="0"
                        Cursor="Hand"
                        VerticalAlignment="Center"
                        Margin="6,0,0,0"
                        Click="CloseWidget_Click">
                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="Button">
                                        <Border Background="{TemplateBinding Background}" CornerRadius="7">
                                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                        </Border>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="#374151"/>
                                    <Setter Property="Foreground" Value="#EF4444"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                </Button>
            </Grid>
        </Border>

        <!-- Hidden elements for compatibility -->
        <TextBlock x:Name="CompactDeviceHint" Visibility="Collapsed"/>

        <!-- Expanded State (Recording UI) - Minimal dark pill style -->
        <Border x:Name="ExpandedPanel"
                Visibility="Collapsed"
                CornerRadius="16"
                Height="36">
            <Border.RenderTransform>
                <TranslateTransform/>
            </Border.RenderTransform>
            <Border.Background>
                <SolidColorBrush Color="#1F2937" Opacity="0.94"/>
            </Border.Background>
            <Border.Effect>
                <DropShadowEffect BlurRadius="16" ShadowDepth="2" Opacity="0.25" Color="#000000"/>
            </Border.Effect>

            <Grid Margin="12,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- Pulsing Recording Dot -->
                <Grid Grid.Column="0" Width="20" Height="20" Margin="0,0,10,0">
                    <Ellipse x:Name="RecordingPulse" Width="12" Height="12">
                        <Ellipse.Fill>
                            <RadialGradientBrush>
                                <GradientStop Color="#EF4444" Offset="0"/>
                                <GradientStop Color="#DC2626" Offset="1"/>
                            </RadialGradientBrush>
                        </Ellipse.Fill>
                    </Ellipse>
                </Grid>

                <!-- Timer -->
                <TextBlock x:Name="RecordingTimer"
                           Grid.Column="1"
                           Text="0:00"
                           Foreground="#FFFFFF"
                           FontSize="13"
                           FontWeight="SemiBold"
                           VerticalAlignment="Center"
                           Margin="0,0,12,0"/>

                <!-- Audio Level Bars (visualizer style) -->
                <StackPanel Grid.Column="2" Orientation="Horizontal" VerticalAlignment="Center" HorizontalAlignment="Left">
                    <Border x:Name="LevelBar1" Width="3" Height="8" CornerRadius="1" Background="#4B5563" Margin="0,0,2,0"/>
                    <Border x:Name="LevelBar2" Width="3" Height="12" CornerRadius="1" Background="#4B5563" Margin="0,0,2,0"/>
                    <Border x:Name="LevelBar3" Width="3" Height="6" CornerRadius="1" Background="#4B5563" Margin="0,0,2,0"/>
                    <Border x:Name="LevelBar4" Width="3" Height="14" CornerRadius="1" Background="#4B5563" Margin="0,0,2,0"/>
                    <Border x:Name="LevelBar5" Width="3" Height="10" CornerRadius="1" Background="#4B5563"/>
                </StackPanel>

                <!-- Stop hint -->
                <TextBlock x:Name="StopHintText"
                           Grid.Column="3"
                           Text="Ctrl+Shift+Space"
                           Foreground="#6B7280"
                           FontSize="9"
                           FontWeight="SemiBold"
                           VerticalAlignment="Center"
                           Margin="12,0,0,0"
                           ToolTip="Press again to stop recording"/>
            </Grid>
        </Border>

        <!-- Hidden elements for code compatibility -->
        <TextBlock x:Name="RecordingStatus" Visibility="Collapsed"/>
        <TextBlock x:Name="SubStatus" Visibility="Collapsed"/>
        <TextBlock x:Name="RecordingIcon" Visibility="Collapsed"/>
        <ProgressBar x:Name="AudioLevelBar" Visibility="Collapsed"/>
        <TextBlock x:Name="KeyboardHints" Visibility="Collapsed"/>
        <StackPanel x:Name="RecordingPanel" Visibility="Collapsed"/>

        <!-- Success Toast (slides up from below compact widget) -->
        <Border x:Name="SuccessToast"
                Visibility="Collapsed"
                CornerRadius="12"
                Width="260"
                Height="160"
                VerticalAlignment="Top"
                HorizontalAlignment="Left"
                Opacity="0">
            <Border.RenderTransform>
                <TranslateTransform Y="20"/>
            </Border.RenderTransform>
            <Border.Background>
                <SolidColorBrush Color="#FFFFFF" Opacity="0.95"/>
            </Border.Background>
            <Border.BorderBrush>
                <SolidColorBrush Color="#E5E7EB"/>
            </Border.BorderBrush>
            <Border.BorderThickness>
                <Thickness>1</Thickness>
            </Border.BorderThickness>
            <Border.Effect>
                <DropShadowEffect BlurRadius="20" ShadowDepth="3" Opacity="0.15" Color="#000000"/>
            </Border.Effect>

            <Grid Margin="12">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- Success Header -->
                <Grid Grid.Row="0" Margin="0,0,0,8">
                    <StackPanel Orientation="Horizontal">
                        <Border Width="20" Height="20" CornerRadius="10" Background="#DCFCE7" Margin="0,0,8,0">
                            <TextBlock Text="âœ“"
                                       Foreground="#16A34A"
                                       FontSize="11"
                                       FontWeight="Bold"
                                       HorizontalAlignment="Center"
                                       VerticalAlignment="Center"/>
                        </Border>
                        <TextBlock Text="Transcribed"
                                   Foreground="#111827"
                                   FontSize="13"
                                   FontWeight="SemiBold"
                                   VerticalAlignment="Center"/>
                        <TextBlock x:Name="AutoCollapseText"
                                   Text="â€¢ 5s"
                                   Foreground="#9CA3AF"
                                   FontSize="10"
                                   Margin="6,0,0,0"
                                   VerticalAlignment="Center"/>
                    </StackPanel>

                    <Button x:Name="ToastCloseButton"
                            Content="âœ•"
                            HorizontalAlignment="Right"
                            Click="CollapseToast_Click"
                            Background="Transparent"
                            Foreground="#9CA3AF"
                            FontSize="10"
                            BorderThickness="0"
                            Width="18"
                            Height="18"
                            Cursor="Hand">
                        <Button.Style>
                            <Style TargetType="Button">
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="Button">
                                            <Border Background="{TemplateBinding Background}" CornerRadius="9">
                                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                            </Border>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background" Value="#F3F4F6"/>
                                        <Setter Property="Foreground" Value="#374151"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                    </Button>
                </Grid>

                <!-- Transcribed Text -->
                <Border Grid.Row="1"
                        Background="#F9FAFB"
                        CornerRadius="8"
                        BorderThickness="1"
                        BorderBrush="#F3F4F6"
                        Padding="10"
                        Margin="0,0,0,8">
                    <ScrollViewer VerticalScrollBarVisibility="Auto"
                                  HorizontalScrollBarVisibility="Disabled"
                                  MaxHeight="60">
                        <TextBlock x:Name="TranscribedText"
                                   Text=""
                                   Foreground="#374151"
                                   FontSize="12"
                                   TextWrapping="Wrap"
                                   LineHeight="17"/>
                    </ScrollViewer>
                </Border>

                <!-- Copy Button -->
                <Button x:Name="CopyButton"
                        Grid.Row="2"
                        Content="ðŸ“‹ Copy to clipboard"
                        Click="CopyButton_Click"
                        Background="#F3F4F6"
                        Foreground="#374151"
                        BorderThickness="0"
                        Height="30"
                        HorizontalAlignment="Stretch"
                        Cursor="Hand"
                        FontSize="11"
                        FontWeight="Medium">
                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="Button">
                                        <Border x:Name="bg" Background="{TemplateBinding Background}" CornerRadius="6">
                                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                        </Border>
                                        <ControlTemplate.Triggers>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter TargetName="bg" Property="Background" Value="#E5E7EB"/>
                                            </Trigger>
                                        </ControlTemplate.Triggers>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                        </Style>
                    </Button.Style>
                </Button>
            </Grid>
        </Border>
    </Grid>
</Window>
