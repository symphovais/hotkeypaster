<Window x:Class="TalkKeys.FloatingWidget"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:controls="clr-namespace:TalkKeys.Controls"
        Title="TalkKeys"
        Width="110"
        Height="44"
        WindowStyle="None"
        ResizeMode="NoResize"
        Topmost="True"
        ShowInTaskbar="False"
        Background="Transparent"
        AllowsTransparency="True"
        WindowStartupLocation="Manual"
        MouseLeftButtonDown="Window_MouseLeftButtonDown"
        KeyDown="Window_KeyDown"
        Focusable="True">

    <Window.Resources>
        <!-- Subtle breathing animation for mic button (very slow, heartbeat-style) -->
        <Storyboard x:Key="BreathingAnimation" RepeatBehavior="Forever" AutoReverse="True">
            <DoubleAnimation Storyboard.TargetProperty="Opacity" From="0.15" To="0.35" Duration="0:0:2.5">
                <DoubleAnimation.EasingFunction>
                    <SineEase EasingMode="EaseInOut"/>
                </DoubleAnimation.EasingFunction>
            </DoubleAnimation>
        </Storyboard>

        <!-- Pulse Animation for Recording (visual feedback only, doesn't block) -->
        <Storyboard x:Key="PulseAnimation" RepeatBehavior="Forever" AutoReverse="True">
            <DoubleAnimation Storyboard.TargetProperty="Opacity" From="1" To="0.5" Duration="0:0:1"/>
        </Storyboard>

        <!-- Slide In Animation for Toast - instant -->
        <Storyboard x:Key="SlideInAnimation">
            <DoubleAnimation Storyboard.TargetProperty="(UIElement.RenderTransform).(TranslateTransform.Y)"
                             From="0" To="0" Duration="0:0:0"/>
            <DoubleAnimation Storyboard.TargetProperty="Opacity"
                             From="1" To="1" Duration="0:0:0"/>
        </Storyboard>

        <!-- Slide Out Animation for Toast - instant -->
        <Storyboard x:Key="SlideOutAnimation">
            <DoubleAnimation Storyboard.TargetProperty="(UIElement.RenderTransform).(TranslateTransform.Y)"
                             From="0" To="0" Duration="0:0:0"/>
            <DoubleAnimation Storyboard.TargetProperty="Opacity"
                             From="0" To="0" Duration="0:0:0"/>
        </Storyboard>

        <!-- Expand Animation - instant -->
        <Storyboard x:Key="ExpandAnimation">
            <DoubleAnimation Storyboard.TargetProperty="Opacity"
                             From="1" To="1" Duration="0:0:0"/>
        </Storyboard>

        <!-- Dark Theme Slim ScrollBar Thumb -->
        <Style x:Key="DarkSlimScrollBarThumb" TargetType="Thumb">
            <Setter Property="OverridesDefaultStyle" Value="True"/>
            <Setter Property="IsTabStop" Value="False"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Thumb">
                        <Border x:Name="thumbBorder"
                                Background="#6B7280"
                                CornerRadius="2"
                                Margin="1,0"/>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="thumbBorder" Property="Background" Value="#9CA3AF"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Dark Theme Slim Vertical ScrollBar -->
        <Style x:Key="DarkSlimScrollBarStyle" TargetType="ScrollBar">
            <Setter Property="OverridesDefaultStyle" Value="True"/>
            <Setter Property="Width" Value="6"/>
            <Setter Property="MinWidth" Value="6"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ScrollBar">
                        <Grid Background="Transparent">
                            <Track x:Name="PART_Track" IsDirectionReversed="True">
                                <Track.Thumb>
                                    <Thumb Style="{StaticResource DarkSlimScrollBarThumb}"/>
                                </Track.Thumb>
                            </Track>
                        </Grid>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Dark Theme ScrollViewer Style -->
        <Style x:Key="DarkSlimScrollViewerStyle" TargetType="ScrollViewer">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ScrollViewer">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <ScrollContentPresenter Grid.Column="0" Margin="{TemplateBinding Padding}"/>
                            <ScrollBar x:Name="PART_VerticalScrollBar"
                                       Grid.Column="1"
                                       Style="{StaticResource DarkSlimScrollBarStyle}"
                                       Value="{TemplateBinding VerticalOffset}"
                                       Maximum="{TemplateBinding ScrollableHeight}"
                                       ViewportSize="{TemplateBinding ViewportHeight}"
                                       Visibility="{TemplateBinding ComputedVerticalScrollBarVisibility}"
                                       Margin="2,0,0,0"
                                       Opacity="0.5"/>
                        </Grid>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="PART_VerticalScrollBar" Property="Opacity" Value="0.8"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Grid x:Name="RootGrid">
        <!-- Compact State (Default) - Minimal pill with raised mic button -->
        <Border x:Name="CompactPanel"
                CornerRadius="20"
                Height="40"
                Cursor="Hand"
                MouseEnter="CompactPanel_MouseEnter"
                MouseLeave="CompactPanel_MouseLeave"
                MouseLeftButtonUp="CompactButton_Click"
                ToolTip="Click or press Ctrl+Shift+Space to record">
            <Border.Background>
                <SolidColorBrush Color="#1a1d24"/>
            </Border.Background>
            <Border.BorderBrush>
                <SolidColorBrush Color="#2a2f3a"/>
            </Border.BorderBrush>
            <Border.BorderThickness>1</Border.BorderThickness>
            <Border.Effect>
                <DropShadowEffect BlurRadius="12" ShadowDepth="2" Opacity="0.25" Color="#000000"/>
            </Border.Effect>

            <Grid Margin="4,0,12,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- Raised Microphone Button - Primary action, highest contrast -->
                <Grid Grid.Column="0" Width="32" Height="32">
                    <!-- Outer glow ring (breathing animation target) -->
                    <Ellipse x:Name="MicGlowRing"
                             Width="32" Height="32"
                             Opacity="0.2">
                        <Ellipse.Fill>
                            <RadialGradientBrush>
                                <GradientStop Color="#7C3AED" Offset="0.5"/>
                                <GradientStop Color="Transparent" Offset="1"/>
                            </RadialGradientBrush>
                        </Ellipse.Fill>
                    </Ellipse>
                    <!-- Button surface -->
                    <Ellipse Width="28" Height="28">
                        <Ellipse.Fill>
                            <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                                <GradientStop Color="#3d4250" Offset="0"/>
                                <GradientStop Color="#2d323d" Offset="1"/>
                            </LinearGradientBrush>
                        </Ellipse.Fill>
                    </Ellipse>
                    <!-- Inner highlight ring -->
                    <Ellipse Width="26" Height="26" StrokeThickness="1">
                        <Ellipse.Stroke>
                            <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                                <GradientStop Color="#4a5060" Offset="0"/>
                                <GradientStop Color="#2a2f3a" Offset="1"/>
                            </LinearGradientBrush>
                        </Ellipse.Stroke>
                    </Ellipse>
                    <!-- Mic icon -->
                    <TextBlock x:Name="MicIcon"
                               Text="&#xE720;"
                               FontFamily="Segoe MDL2 Assets"
                               FontSize="12"
                               Foreground="#e0e4eb"
                               HorizontalAlignment="Center"
                               VerticalAlignment="Center"/>
                </Grid>

                <!-- Static Ready Indicators - Minimal dots (no waveform in idle) -->
                <StackPanel x:Name="VisualizerBars" Grid.Column="1" Orientation="Horizontal" VerticalAlignment="Center" Margin="8,0,0,0">
                    <Ellipse x:Name="Bar1" Width="4" Height="4" Fill="#3d4250" Margin="0,0,4,0"/>
                    <Ellipse x:Name="Bar2" Width="4" Height="4" Fill="#3d4250" Margin="0,0,4,0"/>
                    <Ellipse x:Name="Bar3" Width="4" Height="4" Fill="#3d4250"/>
                </StackPanel>

                <!-- Status Text (shown when not ready) -->
                <TextBlock x:Name="CompactStatus"
                           Grid.Column="2"
                           Text="!"
                           Foreground="#EF4444"
                           FontSize="10"
                           FontWeight="Bold"
                           VerticalAlignment="Center"
                           Margin="8,0,0,0"
                           Visibility="Collapsed"/>

                <!-- Close button (visible on hover) -->
                <Button x:Name="CompactCloseButton"
                        Grid.Column="2"
                        Content="&#xE711;"
                        FontFamily="Segoe MDL2 Assets"
                        Width="18"
                        Height="18"
                        FontSize="8"
                        Opacity="0"
                        Background="Transparent"
                        Foreground="#6B7280"
                        BorderThickness="0"
                        Cursor="Hand"
                        VerticalAlignment="Center"
                        Margin="6,0,0,0"
                        Click="CloseWidget_Click">
                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="Button">
                                        <Border Background="{TemplateBinding Background}" CornerRadius="9">
                                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                        </Border>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="#2d323d"/>
                                    <Setter Property="Foreground" Value="#EF4444"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                </Button>
            </Grid>
        </Border>

        <!-- Hidden for compatibility -->
        <Ellipse x:Name="MicDot" Visibility="Collapsed"/>
        <Border x:Name="Bar4" Visibility="Collapsed"/>
        <Border x:Name="Bar5" Visibility="Collapsed"/>

        <!-- Hidden elements for compatibility -->
        <TextBlock x:Name="CompactDeviceHint" Visibility="Collapsed"/>

        <!-- Expanded State (Recording UI) - Minimal with subtle purple accent -->
        <Border x:Name="ExpandedPanel"
                Visibility="Collapsed"
                CornerRadius="20"
                Height="40"
                VerticalAlignment="Center">
            <Border.RenderTransform>
                <TranslateTransform/>
            </Border.RenderTransform>
            <Border.Background>
                <SolidColorBrush Color="#1a1d24"/>
            </Border.Background>
            <Border.BorderBrush>
                <SolidColorBrush Color="#7C3AED"/>
            </Border.BorderBrush>
            <Border.BorderThickness>1.5</Border.BorderThickness>
            <Border.Effect>
                <DropShadowEffect BlurRadius="16" ShadowDepth="0" Opacity="0.35" Color="#7C3AED"/>
            </Border.Effect>

            <Grid Margin="12,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- Recording Indicator (pulsing dot, timer, level bars) -->
                <controls:RecordingIndicator x:Name="WidgetRecordingIndicator"
                                              Grid.Column="0"
                                              ShowTimer="True"/>

                <!-- Stop hint - subtle keyboard badge -->
                <Border Grid.Column="1"
                        Background="#2a2f3a"
                        CornerRadius="4"
                        Padding="6,3"
                        Margin="10,0,0,0"
                        VerticalAlignment="Center">
                    <TextBlock x:Name="StopHintText"
                               Text="Ctrl+Shift+Space"
                               Foreground="#6B7280"
                               FontSize="9"
                               VerticalAlignment="Center"
                               ToolTip="Press again to stop recording"/>
                </Border>
            </Grid>
        </Border>

        <!-- Hidden elements for code compatibility -->
        <TextBlock x:Name="RecordingStatus" Visibility="Collapsed"/>
        <TextBlock x:Name="SubStatus" Visibility="Collapsed"/>
        <TextBlock x:Name="RecordingIcon" Visibility="Collapsed"/>
        <ProgressBar x:Name="AudioLevelBar" Visibility="Collapsed"/>
        <TextBlock x:Name="KeyboardHints" Visibility="Collapsed"/>
        <StackPanel x:Name="RecordingPanel" Visibility="Collapsed"/>

        <!-- Text View Panel (shows transcribed text after recording) -->
        <Border x:Name="TextViewPanel"
                Visibility="Collapsed"
                CornerRadius="12"
                Width="280"
                VerticalAlignment="Top"
                HorizontalAlignment="Left">
            <Border.RenderTransform>
                <TranslateTransform Y="0"/>
            </Border.RenderTransform>
            <Border.Background>
                <SolidColorBrush Color="#1a1d24"/>
            </Border.Background>
            <Border.BorderBrush>
                <SolidColorBrush Color="#2a2f3a"/>
            </Border.BorderBrush>
            <Border.BorderThickness>1</Border.BorderThickness>
            <Border.Effect>
                <DropShadowEffect BlurRadius="16" ShadowDepth="3" Opacity="0.3" Color="#000000"/>
            </Border.Effect>

            <Grid Margin="12">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- Header - Minimal -->
                <Grid Grid.Row="0" Margin="0,0,0,10">
                    <StackPanel Orientation="Horizontal">
                        <Ellipse Width="8" Height="8" Fill="#22C55E" Margin="0,0,8,0" VerticalAlignment="Center"/>
                        <TextBlock Text="Transcribed"
                                   Foreground="#e0e4eb"
                                   FontSize="13"
                                   FontWeight="Medium"
                                   VerticalAlignment="Center"/>
                        <TextBlock x:Name="AutoCollapseText"
                                   Text="10s"
                                   Foreground="#4a5060"
                                   FontSize="11"
                                   Margin="8,0,0,0"
                                   VerticalAlignment="Center"/>
                    </StackPanel>

                    <Button x:Name="ToastCloseButton"
                            Content="&#xE711;"
                            FontFamily="Segoe MDL2 Assets"
                            HorizontalAlignment="Right"
                            Click="CollapseToast_Click"
                            Background="Transparent"
                            Foreground="#4a5060"
                            FontSize="9"
                            BorderThickness="0"
                            Width="20"
                            Height="20"
                            Cursor="Hand">
                        <Button.Style>
                            <Style TargetType="Button">
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="Button">
                                            <Border Background="{TemplateBinding Background}" CornerRadius="10">
                                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                            </Border>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background" Value="#2a2f3a"/>
                                        <Setter Property="Foreground" Value="#e0e4eb"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                    </Button>
                </Grid>

                <!-- Transcribed Text Area -->
                <Border x:Name="TextAreaBorder"
                        Grid.Row="1"
                        Background="#22262e"
                        CornerRadius="8"
                        Padding="10"
                        Margin="0,0,0,10">
                    <ScrollViewer Style="{StaticResource DarkSlimScrollViewerStyle}"
                                  VerticalScrollBarVisibility="Auto"
                                  HorizontalScrollBarVisibility="Disabled">
                        <TextBlock x:Name="TranscribedText"
                                   Text=""
                                   Foreground="#c8ccd4"
                                   FontSize="13"
                                   TextWrapping="Wrap"
                                   LineHeight="19"/>
                    </ScrollViewer>
                </Border>

                <!-- Action Buttons - Minimal -->
                <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Left">
                    <Button x:Name="CopyButton"
                            Click="CopyButton_Click"
                            Background="#2a2f3a"
                            BorderThickness="0"
                            Height="26"
                            Cursor="Hand">
                        <Button.Style>
                            <Style TargetType="Button">
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="Button">
                                            <Border x:Name="bg" Background="{TemplateBinding Background}" CornerRadius="5" Padding="8,4">
                                                <StackPanel Orientation="Horizontal">
                                                    <TextBlock Text="&#xE8C8;"
                                                               FontFamily="Segoe MDL2 Assets"
                                                               FontSize="10"
                                                               Foreground="#6B7280"
                                                               VerticalAlignment="Center"
                                                               Margin="0,0,5,0"/>
                                                    <TextBlock Text="Copy"
                                                               FontSize="11"
                                                               Foreground="#9CA3AF"
                                                               VerticalAlignment="Center"/>
                                                </StackPanel>
                                            </Border>
                                            <ControlTemplate.Triggers>
                                                <Trigger Property="IsMouseOver" Value="True">
                                                    <Setter TargetName="bg" Property="Background" Value="#3d4250"/>
                                                </Trigger>
                                            </ControlTemplate.Triggers>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                            </Style>
                        </Button.Style>
                    </Button>

                    <TextBlock x:Name="SuggestionHintText"
                               Text=""
                               Foreground="#6B7280"
                               FontSize="11"
                               Margin="8,0,0,0"
                               VerticalAlignment="Center"
                               MaxWidth="120"
                               TextTrimming="CharacterEllipsis"
                               ToolTip="{Binding Text, RelativeSource={RelativeSource Self}}"
                               Visibility="Collapsed"/>

                    <Button x:Name="SuggestionsButton"
                            Click="SuggestionsButton_Click"
                            Background="Transparent"
                            BorderThickness="0"
                            Height="26"
                            Cursor="Hand"
                            Margin="6,0,0,0"
                            Visibility="Collapsed">
                        <Button.Style>
                            <Style TargetType="Button">
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="Button">
                                            <Border x:Name="bg" Background="{TemplateBinding Background}" CornerRadius="5" Padding="8,4">
                                                <StackPanel Orientation="Horizontal">
                                                    <TextBlock Text="&#xE70F;"
                                                               FontFamily="Segoe MDL2 Assets"
                                                               FontSize="10"
                                                               Foreground="#7C3AED"
                                                               VerticalAlignment="Center"
                                                               Margin="0,0,5,0"/>
                                                    <TextBlock Text="Rewrite"
                                                               FontSize="11"
                                                               Foreground="#7C3AED"
                                                               VerticalAlignment="Center"/>
                                                </StackPanel>
                                            </Border>
                                            <ControlTemplate.Triggers>
                                                <Trigger Property="IsMouseOver" Value="True">
                                                    <Setter TargetName="bg" Property="Background" Value="#2a2f3a"/>
                                                </Trigger>
                                            </ControlTemplate.Triggers>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                            </Style>
                        </Button.Style>
                    </Button>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Legacy name for compatibility -->
        <Border x:Name="SuccessToast" Visibility="Collapsed"/>
    </Grid>
</Window>
