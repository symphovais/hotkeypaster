<Window x:Class="TalkKeys.FloatingWidget"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="TalkKeys"
        Width="150"
        Height="72"
        WindowStyle="None"
        ResizeMode="NoResize"
        Topmost="True"
        ShowInTaskbar="False"
        Background="Transparent"
        AllowsTransparency="True"
        WindowStartupLocation="Manual"
        MouseLeftButtonDown="Window_MouseLeftButtonDown"
        KeyDown="Window_KeyDown"
        Focusable="True">

    <Window.Resources>
        <!-- Pulse Animation for Recording -->
        <Storyboard x:Key="PulseAnimation" RepeatBehavior="Forever" AutoReverse="True">
            <DoubleAnimation Storyboard.TargetProperty="Opacity" From="1" To="0.5" Duration="0:0:1"/>
        </Storyboard>

        <!-- Slide In Animation for Toast -->
        <Storyboard x:Key="SlideInAnimation">
            <DoubleAnimation Storyboard.TargetProperty="(UIElement.RenderTransform).(TranslateTransform.Y)"
                             From="20" To="0" Duration="0:0:0.3">
                <DoubleAnimation.EasingFunction>
                    <CubicEase EasingMode="EaseOut"/>
                </DoubleAnimation.EasingFunction>
            </DoubleAnimation>
            <DoubleAnimation Storyboard.TargetProperty="Opacity"
                             From="0" To="1" Duration="0:0:0.25"/>
        </Storyboard>

        <!-- Slide Out Animation for Toast -->
        <Storyboard x:Key="SlideOutAnimation">
            <DoubleAnimation Storyboard.TargetProperty="(UIElement.RenderTransform).(TranslateTransform.Y)"
                             From="0" To="20" Duration="0:0:0.2">
                <DoubleAnimation.EasingFunction>
                    <CubicEase EasingMode="EaseIn"/>
                </DoubleAnimation.EasingFunction>
            </DoubleAnimation>
            <DoubleAnimation Storyboard.TargetProperty="Opacity"
                             From="1" To="0" Duration="0:0:0.2"/>
        </Storyboard>

        <!-- Expand Animation -->
        <Storyboard x:Key="ExpandAnimation">
            <DoubleAnimation Storyboard.TargetProperty="Opacity"
                             From="0" To="1" Duration="0:0:0.2"/>
        </Storyboard>
    </Window.Resources>

    <Grid x:Name="RootGrid">
        <!-- Compact State (Default) - Sleek card style -->
        <Border x:Name="CompactPanel"
                CornerRadius="12"
                Width="150"
                Height="72"
                Cursor="Hand"
                MouseEnter="CompactPanel_MouseEnter"
                MouseLeave="CompactPanel_MouseLeave"
                MouseLeftButtonUp="CompactButton_Click"
                ToolTip="Click or press Ctrl+Alt+Q to record">
            <Border.Background>
                <SolidColorBrush Color="#FFFFFF" Opacity="0.75"/>
            </Border.Background>
            <Border.BorderBrush>
                <SolidColorBrush Color="#E5E7EB"/>
            </Border.BorderBrush>
            <Border.BorderThickness>
                <Thickness>1</Thickness>
            </Border.BorderThickness>
            <Border.Effect>
                <DropShadowEffect BlurRadius="12" ShadowDepth="1" Opacity="0.12" Color="#000000"/>
            </Border.Effect>

            <Grid Margin="10,8">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- Title row with close button -->
                <Grid Grid.Row="0">
                    <TextBlock Text="TalkKeys"
                               Foreground="#111827"
                               FontSize="11"
                               FontWeight="SemiBold"
                               HorizontalAlignment="Left"/>

                    <!-- Close button (visible on hover) -->
                    <Button x:Name="CompactCloseButton"
                            Content="âœ•"
                            HorizontalAlignment="Right"
                            VerticalAlignment="Top"
                            Width="16"
                            Height="16"
                            FontSize="9"
                            Opacity="0"
                            Background="Transparent"
                            Foreground="#9CA3AF"
                            BorderThickness="0"
                            Cursor="Hand"
                            Click="CloseWidget_Click">
                        <Button.Style>
                            <Style TargetType="Button">
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="Button">
                                            <Border Background="{TemplateBinding Background}"
                                                    CornerRadius="8">
                                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                            </Border>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background" Value="#F3F4F6"/>
                                        <Setter Property="Foreground" Value="#EF4444"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                    </Button>
                </Grid>

                <!-- Status text -->
                <StackPanel Grid.Row="1" VerticalAlignment="Center">
                    <TextBlock x:Name="CompactStatus"
                               Text="Ready"
                               Foreground="#6366F1"
                               FontSize="12"
                               FontWeight="SemiBold"/>
                </StackPanel>

                <!-- Device hint -->
                <TextBlock Grid.Row="2"
                           x:Name="CompactDeviceHint"
                           Text="Microphone"
                           Foreground="#9CA3AF"
                           FontSize="9"
                           TextTrimming="CharacterEllipsis"/>
            </Grid>
        </Border>

        <!-- Expanded State (Recording UI) - More compact -->
        <Border x:Name="ExpandedPanel"
                Visibility="Collapsed"
                CornerRadius="14"
                Width="280"
                Height="120">
            <Border.RenderTransform>
                <TranslateTransform/>
            </Border.RenderTransform>
            <Border.Background>
                <SolidColorBrush Color="#FFFFFF" Opacity="0.92"/>
            </Border.Background>
            <Border.BorderBrush>
                <SolidColorBrush Color="#E5E7EB"/>
            </Border.BorderBrush>
            <Border.BorderThickness>
                <Thickness>1</Thickness>
            </Border.BorderThickness>
            <Border.Effect>
                <DropShadowEffect BlurRadius="24" ShadowDepth="3" Opacity="0.18" Color="#000000"/>
            </Border.Effect>

            <Grid Margin="14">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <!-- Header -->
                <Grid Grid.Row="0" Margin="0,0,0,10">
                    <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                        <Ellipse x:Name="HeaderDot" Width="8" Height="8" Fill="#EF4444" Margin="0,0,8,0"/>
                        <TextBlock Text="Voice Transcription"
                                   Foreground="#111827"
                                   FontSize="12"
                                   FontWeight="SemiBold"/>
                    </StackPanel>

                    <Button HorizontalAlignment="Right"
                            Content="âœ•"
                            Click="CollapseWidget_Click"
                            Background="Transparent"
                            Foreground="#9CA3AF"
                            FontSize="12"
                            BorderThickness="0"
                            Width="22"
                            Height="22"
                            Cursor="Hand">
                        <Button.Style>
                            <Style TargetType="Button">
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="Button">
                                            <Border Background="{TemplateBinding Background}"
                                                    CornerRadius="11">
                                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                            </Border>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background" Value="#F3F4F6"/>
                                        <Setter Property="Foreground" Value="#EF4444"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                    </Button>
                </Grid>

                <!-- Recording Content -->
                <Grid Grid.Row="1">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <!-- Recording Indicator -->
                    <Grid Grid.Column="0" Height="44" Width="44" Margin="0,0,12,0" VerticalAlignment="Top">
                        <Ellipse Fill="#FEE2E2" Width="44" Height="44"/>
                        <Ellipse x:Name="RecordingPulse" Width="32" Height="32">
                            <Ellipse.Fill>
                                <RadialGradientBrush>
                                    <GradientStop Color="#EF4444" Offset="0"/>
                                    <GradientStop Color="#DC2626" Offset="1"/>
                                </RadialGradientBrush>
                            </Ellipse.Fill>
                        </Ellipse>
                        <TextBlock x:Name="RecordingIcon"
                                   Text="ðŸŽ™ï¸"
                                   FontSize="16"
                                   HorizontalAlignment="Center"
                                   VerticalAlignment="Center"/>
                    </Grid>

                    <!-- Status Panel -->
                    <StackPanel x:Name="RecordingPanel" Grid.Column="1" VerticalAlignment="Center">
                        <StackPanel Orientation="Horizontal" Margin="0,0,0,2">
                            <TextBlock x:Name="RecordingStatus"
                                       Text="Recording..."
                                       Foreground="#111827"
                                       FontSize="14"
                                       FontWeight="SemiBold"/>
                            <TextBlock x:Name="RecordingTimer"
                                       Text="0:00"
                                       Foreground="#6366F1"
                                       FontSize="13"
                                       FontWeight="SemiBold"
                                       Margin="8,0,0,0"/>
                        </StackPanel>

                        <TextBlock x:Name="SubStatus"
                                   Text="Speak clearly"
                                   Foreground="#6B7280"
                                   FontSize="11"
                                   TextTrimming="CharacterEllipsis"
                                   Margin="0,0,0,6"/>

                        <!-- Audio Level Indicator -->
                        <ProgressBar x:Name="AudioLevelBar"
                                     Height="3"
                                     Minimum="0"
                                     Maximum="1"
                                     Value="0"
                                     BorderThickness="0"
                                     Background="#E5E7EB"
                                     Foreground="#10B981"
                                     Margin="0,0,0,4">
                            <ProgressBar.Style>
                                <Style TargetType="ProgressBar">
                                    <Setter Property="Template">
                                        <Setter.Value>
                                            <ControlTemplate TargetType="ProgressBar">
                                                <Border Background="{TemplateBinding Background}" CornerRadius="2">
                                                    <Border x:Name="PART_Track">
                                                        <Border x:Name="PART_Indicator"
                                                                HorizontalAlignment="Left"
                                                                Background="{TemplateBinding Foreground}"
                                                                CornerRadius="2"/>
                                                    </Border>
                                                </Border>
                                            </ControlTemplate>
                                        </Setter.Value>
                                    </Setter>
                                </Style>
                            </ProgressBar.Style>
                        </ProgressBar>

                        <!-- Keyboard Hints -->
                        <TextBlock x:Name="KeyboardHints"
                                   Text="SPACE to stop â€¢ ESC to cancel"
                                   Foreground="#9CA3AF"
                                   FontSize="9"
                                   Visibility="Visible"/>
                    </StackPanel>
                </Grid>
            </Grid>
        </Border>

        <!-- Success Toast (slides up from below compact widget) -->
        <Border x:Name="SuccessToast"
                Visibility="Collapsed"
                CornerRadius="12"
                Width="260"
                Height="160"
                VerticalAlignment="Top"
                HorizontalAlignment="Left"
                Opacity="0">
            <Border.RenderTransform>
                <TranslateTransform Y="20"/>
            </Border.RenderTransform>
            <Border.Background>
                <SolidColorBrush Color="#FFFFFF" Opacity="0.95"/>
            </Border.Background>
            <Border.BorderBrush>
                <SolidColorBrush Color="#E5E7EB"/>
            </Border.BorderBrush>
            <Border.BorderThickness>
                <Thickness>1</Thickness>
            </Border.BorderThickness>
            <Border.Effect>
                <DropShadowEffect BlurRadius="20" ShadowDepth="3" Opacity="0.15" Color="#000000"/>
            </Border.Effect>

            <Grid Margin="12">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- Success Header -->
                <Grid Grid.Row="0" Margin="0,0,0,8">
                    <StackPanel Orientation="Horizontal">
                        <Border Width="20" Height="20" CornerRadius="10" Background="#DCFCE7" Margin="0,0,8,0">
                            <TextBlock Text="âœ“"
                                       Foreground="#16A34A"
                                       FontSize="11"
                                       FontWeight="Bold"
                                       HorizontalAlignment="Center"
                                       VerticalAlignment="Center"/>
                        </Border>
                        <TextBlock Text="Transcribed"
                                   Foreground="#111827"
                                   FontSize="13"
                                   FontWeight="SemiBold"
                                   VerticalAlignment="Center"/>
                        <TextBlock x:Name="AutoCollapseText"
                                   Text="â€¢ 5s"
                                   Foreground="#9CA3AF"
                                   FontSize="10"
                                   Margin="6,0,0,0"
                                   VerticalAlignment="Center"/>
                    </StackPanel>

                    <Button x:Name="ToastCloseButton"
                            Content="âœ•"
                            HorizontalAlignment="Right"
                            Click="CollapseToast_Click"
                            Background="Transparent"
                            Foreground="#9CA3AF"
                            FontSize="10"
                            BorderThickness="0"
                            Width="18"
                            Height="18"
                            Cursor="Hand">
                        <Button.Style>
                            <Style TargetType="Button">
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="Button">
                                            <Border Background="{TemplateBinding Background}" CornerRadius="9">
                                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                            </Border>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background" Value="#F3F4F6"/>
                                        <Setter Property="Foreground" Value="#374151"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                    </Button>
                </Grid>

                <!-- Transcribed Text -->
                <Border Grid.Row="1"
                        Background="#F9FAFB"
                        CornerRadius="8"
                        BorderThickness="1"
                        BorderBrush="#F3F4F6"
                        Padding="10"
                        Margin="0,0,0,8">
                    <ScrollViewer VerticalScrollBarVisibility="Auto"
                                  HorizontalScrollBarVisibility="Disabled"
                                  MaxHeight="60">
                        <TextBlock x:Name="TranscribedText"
                                   Text=""
                                   Foreground="#374151"
                                   FontSize="12"
                                   TextWrapping="Wrap"
                                   LineHeight="17"/>
                    </ScrollViewer>
                </Border>

                <!-- Copy Button -->
                <Button x:Name="CopyButton"
                        Grid.Row="2"
                        Content="ðŸ“‹ Copy to clipboard"
                        Click="CopyButton_Click"
                        Background="#F3F4F6"
                        Foreground="#374151"
                        BorderThickness="0"
                        Height="30"
                        HorizontalAlignment="Stretch"
                        Cursor="Hand"
                        FontSize="11"
                        FontWeight="Medium">
                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="Button">
                                        <Border x:Name="bg" Background="{TemplateBinding Background}" CornerRadius="6">
                                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                        </Border>
                                        <ControlTemplate.Triggers>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter TargetName="bg" Property="Background" Value="#E5E7EB"/>
                                            </Trigger>
                                        </ControlTemplate.Triggers>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                        </Style>
                    </Button.Style>
                </Button>
            </Grid>
        </Border>
    </Grid>
</Window>
