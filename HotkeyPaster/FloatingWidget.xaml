<Window x:Class="TalkKeys.FloatingWidget"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="TalkKeys"
        Width="150"
        Height="72"
        WindowStyle="None"
        ResizeMode="NoResize"
        Topmost="True"
        ShowInTaskbar="False"
        Background="Transparent"
        AllowsTransparency="True"
        WindowStartupLocation="Manual"
        MouseLeftButtonDown="Window_MouseLeftButtonDown"
        KeyDown="Window_KeyDown"
        Focusable="True">

    <Window.Resources>
        <!-- Pulse Animation for Recording -->
        <Storyboard x:Key="PulseAnimation" RepeatBehavior="Forever" AutoReverse="True">
            <DoubleAnimation Storyboard.TargetProperty="Opacity" From="1" To="0.5" Duration="0:0:1"/>
        </Storyboard>
    </Window.Resources>

    <Grid x:Name="RootGrid">
        <!-- Compact State (Default) - Sleek card style -->
        <Border x:Name="CompactPanel"
                CornerRadius="12"
                Width="150"
                Height="72"
                Cursor="Hand"
                MouseEnter="CompactPanel_MouseEnter"
                MouseLeave="CompactPanel_MouseLeave"
                MouseLeftButtonUp="CompactButton_Click"
                ToolTip="Click or press Ctrl+Alt+Q to record">
            <Border.Background>
                <SolidColorBrush Color="#FFFFFF" Opacity="0.75"/>
            </Border.Background>
            <Border.BorderBrush>
                <SolidColorBrush Color="#E5E7EB"/>
            </Border.BorderBrush>
            <Border.BorderThickness>
                <Thickness>1</Thickness>
            </Border.BorderThickness>
            <Border.Effect>
                <DropShadowEffect BlurRadius="12" ShadowDepth="1" Opacity="0.12" Color="#000000"/>
            </Border.Effect>

            <Grid Margin="10,8">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- Title row with close button -->
                <Grid Grid.Row="0">
                    <TextBlock Text="TalkKeys"
                               Foreground="#111827"
                               FontSize="11"
                               FontWeight="SemiBold"
                               HorizontalAlignment="Left"/>

                    <!-- Close button (visible on hover) -->
                    <Button x:Name="CompactCloseButton"
                            Content="âœ•"
                            HorizontalAlignment="Right"
                            VerticalAlignment="Top"
                            Width="16"
                            Height="16"
                            FontSize="9"
                            Opacity="0"
                            Background="Transparent"
                            Foreground="#9CA3AF"
                            BorderThickness="0"
                            Cursor="Hand"
                            Click="CloseWidget_Click">
                        <Button.Style>
                            <Style TargetType="Button">
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="Button">
                                            <Border Background="{TemplateBinding Background}"
                                                    CornerRadius="8">
                                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                            </Border>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background" Value="#F3F4F6"/>
                                        <Setter Property="Foreground" Value="#EF4444"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                    </Button>
                </Grid>

                <!-- Status text -->
                <StackPanel Grid.Row="1" VerticalAlignment="Center">
                    <TextBlock x:Name="CompactStatus"
                               Text="Ready"
                               Foreground="#6366F1"
                               FontSize="12"
                               FontWeight="SemiBold"/>
                </StackPanel>

                <!-- Device hint -->
                <TextBlock Grid.Row="2"
                           x:Name="CompactDeviceHint"
                           Text="Microphone"
                           Foreground="#9CA3AF"
                           FontSize="9"
                           TextTrimming="CharacterEllipsis"/>
            </Grid>
        </Border>

        <!-- Expanded State (Recording UI) -->
        <Border x:Name="ExpandedPanel"
                Visibility="Collapsed"
                CornerRadius="16"
                Width="320"
                Height="200">
            <Border.Background>
                <SolidColorBrush Color="#FFFFFF" Opacity="0.82"/>
            </Border.Background>
            <Border.BorderBrush>
                <SolidColorBrush Color="#E5E7EB"/>
            </Border.BorderBrush>
            <Border.BorderThickness>
                <Thickness>1</Thickness>
            </Border.BorderThickness>
            <Border.Effect>
                <DropShadowEffect BlurRadius="32" ShadowDepth="4" Opacity="0.2" Color="#000000"/>
            </Border.Effect>

            <Grid Margin="16">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <!-- Header -->
                <Grid Grid.Row="0" Margin="0,0,0,12">
                    <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                        <Ellipse x:Name="HeaderDot" Width="8" Height="8" Fill="#EF4444" Margin="0,0,8,0"/>
                        <TextBlock Text="Voice Transcription"
                                   Foreground="#111827"
                                   FontSize="13"
                                   FontWeight="SemiBold"/>
                    </StackPanel>

                    <Button HorizontalAlignment="Right"
                            Content="âœ•"
                            Click="CollapseWidget_Click"
                            Background="Transparent"
                            Foreground="#9CA3AF"
                            FontSize="14"
                            BorderThickness="0"
                            Width="24"
                            Height="24"
                            Cursor="Hand">
                        <Button.Style>
                            <Style TargetType="Button">
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="Button">
                                            <Border Background="{TemplateBinding Background}"
                                                    CornerRadius="12">
                                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                            </Border>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background" Value="#F3F4F6"/>
                                        <Setter Property="Foreground" Value="#EF4444"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                    </Button>
                </Grid>

                <!-- Recording Content -->
                <Grid Grid.Row="1">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <!-- Recording Indicator -->
                    <Grid Grid.Column="0" Height="48" Width="48" Margin="0,0,14,0" VerticalAlignment="Top">
                        <Ellipse Fill="#FEE2E2" Width="48" Height="48"/>
                        <Ellipse x:Name="RecordingPulse" Width="36" Height="36">
                            <Ellipse.Fill>
                                <RadialGradientBrush>
                                    <GradientStop Color="#EF4444" Offset="0"/>
                                    <GradientStop Color="#DC2626" Offset="1"/>
                                </RadialGradientBrush>
                            </Ellipse.Fill>
                        </Ellipse>
                        <TextBlock x:Name="RecordingIcon"
                                   Text="ðŸŽ™ï¸"
                                   FontSize="20"
                                   HorizontalAlignment="Center"
                                   VerticalAlignment="Center"/>
                    </Grid>

                    <!-- Status Panel -->
                    <StackPanel x:Name="RecordingPanel" Grid.Column="1" VerticalAlignment="Top">
                        <StackPanel Orientation="Horizontal" Margin="0,0,0,4">
                            <TextBlock x:Name="RecordingStatus"
                                       Text="Recording..."
                                       Foreground="#111827"
                                       FontSize="15"
                                       FontWeight="SemiBold"/>
                            <TextBlock x:Name="RecordingTimer"
                                       Text="0:00"
                                       Foreground="#6366F1"
                                       FontSize="14"
                                       FontWeight="SemiBold"
                                       Margin="10,0,0,0"/>
                        </StackPanel>

                        <TextBlock x:Name="SubStatus"
                                   Text="Speak clearly"
                                   Foreground="#6B7280"
                                   FontSize="12"
                                   TextTrimming="CharacterEllipsis"
                                   Margin="0,0,0,8"/>

                        <!-- Audio Level Indicator -->
                        <ProgressBar x:Name="AudioLevelBar"
                                     Height="4"
                                     Minimum="0"
                                     Maximum="1"
                                     Value="0"
                                     BorderThickness="0"
                                     Background="#E5E7EB"
                                     Foreground="#10B981"
                                     Margin="0,0,0,8">
                            <ProgressBar.Style>
                                <Style TargetType="ProgressBar">
                                    <Setter Property="Template">
                                        <Setter.Value>
                                            <ControlTemplate TargetType="ProgressBar">
                                                <Border Background="{TemplateBinding Background}" CornerRadius="2">
                                                    <Border x:Name="PART_Track">
                                                        <Border x:Name="PART_Indicator"
                                                                HorizontalAlignment="Left"
                                                                Background="{TemplateBinding Foreground}"
                                                                CornerRadius="2"/>
                                                    </Border>
                                                </Border>
                                            </ControlTemplate>
                                        </Setter.Value>
                                    </Setter>
                                </Style>
                            </ProgressBar.Style>
                        </ProgressBar>

                        <!-- Keyboard Hints -->
                        <TextBlock x:Name="KeyboardHints"
                                   Text="SPACE to stop â€¢ ESC to cancel"
                                   Foreground="#9CA3AF"
                                   FontSize="10"
                                   Visibility="Visible"/>
                    </StackPanel>

                    <!-- Success/Complete State -->
                    <StackPanel x:Name="SuccessPanel" Grid.Column="1" Visibility="Collapsed" VerticalAlignment="Top">
                        <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
                            <TextBlock Text="âœ“"
                                       Foreground="#10B981"
                                       FontSize="16"
                                       FontWeight="Bold"
                                       Margin="0,0,6,0"/>
                            <TextBlock Text="Complete!"
                                       Foreground="#111827"
                                       FontSize="15"
                                       FontWeight="SemiBold"/>
                            <TextBlock x:Name="AutoCollapseText"
                                       Text="â€¢ Collapsing in 5s"
                                       Foreground="#9CA3AF"
                                       FontSize="11"
                                       Margin="8,2,0,0"/>
                        </StackPanel>

                        <Border Background="#F9FAFB"
                                CornerRadius="8"
                                BorderThickness="1"
                                BorderBrush="#E5E7EB"
                                Padding="10"
                                Margin="0,0,0,8">
                            <ScrollViewer VerticalScrollBarVisibility="Auto"
                                          HorizontalScrollBarVisibility="Disabled"
                                          MaxHeight="45">
                                <TextBlock x:Name="TranscribedText"
                                           Text=""
                                           Foreground="#374151"
                                           FontSize="12"
                                           TextWrapping="Wrap"
                                           LineHeight="18"/>
                            </ScrollViewer>
                        </Border>

                        <Button x:Name="CopyButton"
                                Content="ðŸ“‹ Copy"
                                Click="CopyButton_Click"
                                Background="#F3F4F6"
                                Foreground="#374151"
                                BorderThickness="1"
                                BorderBrush="#E5E7EB"
                                Padding="12,6"
                                HorizontalAlignment="Left"
                                Cursor="Hand"
                                FontSize="11">
                            <Button.Style>
                                <Style TargetType="Button">
                                    <Setter Property="Template">
                                        <Setter.Value>
                                            <ControlTemplate TargetType="Button">
                                                <Border Background="{TemplateBinding Background}"
                                                        BorderBrush="{TemplateBinding BorderBrush}"
                                                        BorderThickness="{TemplateBinding BorderThickness}"
                                                        CornerRadius="6"
                                                        Padding="{TemplateBinding Padding}">
                                                    <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                                </Border>
                                            </ControlTemplate>
                                        </Setter.Value>
                                    </Setter>
                                    <Style.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter Property="Background" Value="#E5E7EB"/>
                                        </Trigger>
                                    </Style.Triggers>
                                </Style>
                            </Button.Style>
                        </Button>
                    </StackPanel>
                </Grid>
            </Grid>
        </Border>
    </Grid>
</Window>
