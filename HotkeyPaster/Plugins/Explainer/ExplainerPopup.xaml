<Window x:Class="TalkKeys.Plugins.Explainer.ExplainerPopup"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Explainer"
        WindowStyle="None"
        ResizeMode="NoResize"
        Topmost="True"
        ShowInTaskbar="False"
        Background="Transparent"
        AllowsTransparency="True"
        WindowStartupLocation="Manual"
        Width="320"
        SizeToContent="Height"
        MaxHeight="250"
        MouseDown="Window_MouseDown"
        KeyDown="Window_KeyDown"
        Focusable="True">

    <Window.Resources>
        <!-- Fade in animation -->
        <Storyboard x:Key="FadeIn">
            <DoubleAnimation Storyboard.TargetProperty="Opacity"
                           From="0" To="1" Duration="0:0:0.15"/>
        </Storyboard>

        <!-- Fade out animation -->
        <Storyboard x:Key="FadeOut">
            <DoubleAnimation Storyboard.TargetProperty="Opacity"
                           From="1" To="0" Duration="0:0:0.1"/>
        </Storyboard>

        <!-- Card flip out (first half) -->
        <Storyboard x:Key="FlipOut">
            <DoubleAnimation Storyboard.TargetName="ContentScaleTransform"
                           Storyboard.TargetProperty="ScaleX"
                           From="1" To="0" Duration="0:0:0.15">
                <DoubleAnimation.EasingFunction>
                    <CubicEase EasingMode="EaseIn"/>
                </DoubleAnimation.EasingFunction>
            </DoubleAnimation>
        </Storyboard>

        <!-- Card flip in (second half) -->
        <Storyboard x:Key="FlipIn">
            <DoubleAnimation Storyboard.TargetName="ContentScaleTransform"
                           Storyboard.TargetProperty="ScaleX"
                           From="0" To="1" Duration="0:0:0.15">
                <DoubleAnimation.EasingFunction>
                    <CubicEase EasingMode="EaseOut"/>
                </DoubleAnimation.EasingFunction>
            </DoubleAnimation>
        </Storyboard>
    </Window.Resources>

    <Border CornerRadius="12" Margin="8">
        <Border.Background>
            <SolidColorBrush Color="#1F2937" Opacity="0.95"/>
        </Border.Background>
        <Border.Effect>
            <DropShadowEffect BlurRadius="16" ShadowDepth="2" Opacity="0.4" Color="Black"/>
        </Border.Effect>

        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- Loading state -->
            <StackPanel x:Name="LoadingPanel" Grid.Row="0" Grid.RowSpan="2"
                       Visibility="Collapsed"
                       HorizontalAlignment="Center"
                       VerticalAlignment="Center"
                       Margin="20">
                <TextBlock Text="Thinking..."
                          Foreground="#9CA3AF"
                          FontSize="14"
                          HorizontalAlignment="Center"/>
                <ProgressBar IsIndeterminate="True"
                            Width="100"
                            Height="3"
                            Margin="0,10,0,0"
                            Background="#374151"
                            Foreground="#8B5CF6"/>
            </StackPanel>

            <!-- Content -->
            <Grid x:Name="ContentPanel" Visibility="Visible">
                <Grid.RenderTransform>
                    <ScaleTransform x:Name="ContentScaleTransform" ScaleX="1" CenterX="160"/>
                </Grid.RenderTransform>

                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- Header with mode indicator, countdown, and close button -->
                <Grid Grid.Row="0" Margin="16,12,16,0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <!-- Mode indicator (changes with flip) -->
                    <TextBlock x:Name="ModeIcon" Grid.Column="0" Text="ðŸ”¥" FontSize="14" VerticalAlignment="Center"/>
                    <TextBlock x:Name="ModeLabel" Grid.Column="1" Text="WTF"
                              Foreground="#9CA3AF" FontSize="11" FontWeight="SemiBold"
                              VerticalAlignment="Center" Margin="6,0,0,0"/>

                    <TextBlock x:Name="CountdownText"
                              Grid.Column="3"
                              Text="20s"
                              Foreground="#6B7280"
                              FontSize="11"
                              VerticalAlignment="Center"
                              Margin="0,0,8,0"/>

                    <!-- Close button -->
                    <Button x:Name="CloseButton"
                            Grid.Column="4"
                            Content="âœ•"
                            FontSize="12"
                            Width="20"
                            Height="20"
                            Padding="0"
                            Background="Transparent"
                            Foreground="#6B7280"
                            BorderThickness="0"
                            Cursor="Hand"
                            Click="CloseButton_Click"
                            ToolTip="Close">
                        <Button.Style>
                            <Style TargetType="Button">
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Foreground" Value="White"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                    </Button>
                </Grid>

                <!-- Message text (clickable to flip) -->
                <Border Grid.Row="1" Margin="16,8,16,8" Cursor="Hand"
                        Background="Transparent" MouseLeftButtonUp="Content_Click">
                    <ScrollViewer VerticalScrollBarVisibility="Auto" MaxHeight="160">
                        <TextBlock x:Name="MessageText"
                                  Text=""
                                  Foreground="White"
                                  FontSize="15"
                                  FontWeight="Medium"
                                  TextWrapping="Wrap"
                                  LineHeight="22"/>
                    </ScrollViewer>
                </Border>

                <!-- Flip hint at bottom -->
                <Border x:Name="FlipHint" Grid.Row="2"
                        HorizontalAlignment="Center"
                        Margin="0,4,0,12"
                        Padding="12,6"
                        CornerRadius="14"
                        Background="#374151"
                        Cursor="Hand"
                        Visibility="Collapsed"
                        MouseLeftButtonUp="Content_Click">
                    <TextBlock x:Name="FlipHintText"
                              Text="tap to flip â†’"
                              Foreground="#A78BFA"
                              FontSize="11"
                              FontWeight="SemiBold"/>
                </Border>
            </Grid>

            <!-- Error state overlay -->
            <Border x:Name="ErrorBorder"
                   Grid.Row="0" Grid.RowSpan="2"
                   Visibility="Collapsed"
                   Background="#7F1D1D"
                   CornerRadius="12">
                <TextBlock x:Name="ErrorText"
                          Text=""
                          Foreground="#FCA5A5"
                          FontSize="14"
                          TextWrapping="Wrap"
                          HorizontalAlignment="Center"
                          VerticalAlignment="Center"
                          Margin="20"/>
            </Border>
        </Grid>
    </Border>
</Window>
