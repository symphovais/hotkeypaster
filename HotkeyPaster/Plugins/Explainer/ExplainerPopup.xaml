<Window x:Class="TalkKeys.Plugins.Explainer.ExplainerPopup"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Insights"
        WindowStyle="None"
        ResizeMode="NoResize"
        Topmost="True"
        ShowInTaskbar="False"
        Background="Transparent"
        AllowsTransparency="True"
        WindowStartupLocation="Manual"
        Width="320"
        SizeToContent="Height"
        MaxHeight="450"
        MouseDown="Window_MouseDown"
        KeyDown="Window_KeyDown"
        Focusable="True">

    <Window.Resources>
        <!-- Bool to Visibility converter -->
        <BooleanToVisibilityConverter x:Key="BoolToVisConverter"/>

        <!-- Fade in animation -->
        <Storyboard x:Key="FadeIn">
            <DoubleAnimation Storyboard.TargetProperty="Opacity"
                           From="0" To="1" Duration="0:0:0.15"/>
        </Storyboard>

        <!-- Fade out animation -->
        <Storyboard x:Key="FadeOut">
            <DoubleAnimation Storyboard.TargetProperty="Opacity"
                           From="1" To="0" Duration="0:0:0.1"/>
        </Storyboard>

        <!-- Section card style -->
        <Style x:Key="SectionCard" TargetType="Border">
            <Setter Property="Background" Value="#374151"/>
            <Setter Property="CornerRadius" Value="8"/>
            <Setter Property="Padding" Value="12,10"/>
            <Setter Property="Margin" Value="0,0,0,8"/>
        </Style>

        <!-- Section header style -->
        <Style x:Key="SectionHeader" TargetType="TextBlock">
            <Setter Property="Foreground" Value="#9CA3AF"/>
            <Setter Property="FontSize" Value="11"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Margin" Value="0,0,0,6"/>
        </Style>

        <!-- Content text style -->
        <Style x:Key="ContentText" TargetType="TextBlock">
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="TextWrapping" Value="Wrap"/>
            <Setter Property="LineHeight" Value="20"/>
        </Style>
    </Window.Resources>

    <Border CornerRadius="12" Margin="8" Cursor="SizeAll">
        <Border.Background>
            <SolidColorBrush Color="#1F2937" Opacity="0.85"/>
        </Border.Background>
        <Border.Effect>
            <DropShadowEffect BlurRadius="16" ShadowDepth="2" Opacity="0.4" Color="Black"/>
        </Border.Effect>

        <Grid>
            <!-- Loading state -->
            <StackPanel x:Name="LoadingPanel"
                       Visibility="Collapsed"
                       HorizontalAlignment="Center"
                       VerticalAlignment="Center"
                       Margin="20,40">
                <TextBlock Text="Analyzing..."
                          Foreground="#9CA3AF"
                          FontSize="14"
                          HorizontalAlignment="Center"/>
                <ProgressBar IsIndeterminate="True"
                            Width="100"
                            Height="3"
                            Margin="0,10,0,0"
                            Background="#374151"
                            Foreground="#8B5CF6"/>
            </StackPanel>

            <!-- Main content -->
            <Grid x:Name="ContentPanel" Visibility="Collapsed">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <!-- Header -->
                <Grid Grid.Row="0" Margin="16,12,16,8">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <TextBlock Grid.Column="0" Text="ðŸ’¡" FontSize="14" VerticalAlignment="Center"/>
                    <TextBlock Grid.Column="1" Text="Insights"
                              Foreground="#E5E7EB" FontSize="13" FontWeight="SemiBold"
                              VerticalAlignment="Center" Margin="6,0,0,0"/>

                    <TextBlock x:Name="CountdownText"
                              Grid.Column="3"
                              Text="20s"
                              Foreground="#6B7280"
                              FontSize="11"
                              VerticalAlignment="Center"
                              Margin="0,0,8,0"/>

                    <Button x:Name="CloseButton"
                            Grid.Column="4"
                            Content="âœ•"
                            FontSize="12"
                            Width="20"
                            Height="20"
                            Padding="0"
                            Background="Transparent"
                            Foreground="#6B7280"
                            BorderThickness="0"
                            Cursor="Hand"
                            Click="CloseButton_Click"
                            ToolTip="Close">
                        <Button.Style>
                            <Style TargetType="Button">
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Foreground" Value="White"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                    </Button>
                </Grid>

                <!-- Scrollable content area -->
                <ScrollViewer Grid.Row="1"
                             VerticalScrollBarVisibility="Auto"
                             Margin="12,0,12,12"
                             MaxHeight="380">
                    <StackPanel>
                        <!-- What They Really Mean (WTF) -->
                        <Border Style="{StaticResource SectionCard}">
                            <StackPanel>
                                <TextBlock Style="{StaticResource SectionHeader}">
                                    <Run Text="ðŸ”¥"/>
                                    <Run Text=" What They Really Mean"/>
                                </TextBlock>
                                <TextBlock x:Name="WtfText"
                                          Style="{StaticResource ContentText}"
                                          FontWeight="Medium"/>
                            </StackPanel>
                        </Border>

                        <!-- What's Being Said (Plain) -->
                        <Border Style="{StaticResource SectionCard}" Margin="0">
                            <StackPanel>
                                <TextBlock Style="{StaticResource SectionHeader}">
                                    <Run Text="ðŸ“‹"/>
                                    <Run Text=" What's Being Said"/>
                                </TextBlock>
                                <TextBlock x:Name="PlainText"
                                          Style="{StaticResource ContentText}"/>
                            </StackPanel>
                        </Border>
                    </StackPanel>
                </ScrollViewer>
            </Grid>

            <!-- Error state overlay -->
            <Border x:Name="ErrorBorder"
                   Visibility="Collapsed"
                   Background="#7F1D1D"
                   CornerRadius="12">
                <TextBlock x:Name="ErrorText"
                          Text=""
                          Foreground="#FCA5A5"
                          FontSize="14"
                          TextWrapping="Wrap"
                          HorizontalAlignment="Center"
                          VerticalAlignment="Center"
                          Margin="20"/>
            </Border>
        </Grid>
    </Border>
</Window>
