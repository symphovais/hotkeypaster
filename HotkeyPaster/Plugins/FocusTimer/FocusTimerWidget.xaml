<Window x:Class="TalkKeys.Plugins.FocusTimer.FocusTimerWidget"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Focus Timer"
        Width="200"
        Height="240"
        WindowStyle="None"
        ResizeMode="NoResize"
        Topmost="True"
        ShowInTaskbar="False"
        Background="Transparent"
        AllowsTransparency="True"
        WindowStartupLocation="Manual"
        MouseLeftButtonDown="Window_MouseLeftButtonDown"
        MouseRightButtonDown="Window_MouseRightButtonDown">

    <Window.Resources>
        <!-- Pulse Animation for active timer -->
        <Storyboard x:Key="PulseAnimation" RepeatBehavior="Forever" AutoReverse="True">
            <DoubleAnimation Storyboard.TargetProperty="Opacity" From="1" To="0.5" Duration="0:0:0.8"/>
        </Storyboard>
    </Window.Resources>

    <Grid x:Name="RootGrid">
        <!-- Context Menu -->
        <Grid.ContextMenu>
            <ContextMenu x:Name="WidgetContextMenu">
                <!-- Quick Start Options -->
                <MenuItem Header="ðŸš€ Quick Start" IsEnabled="False" FontWeight="SemiBold"/>
                <MenuItem x:Name="QuickStart15" Header="  15 min Focus" Click="QuickStart_Click" Tag="15"/>
                <MenuItem x:Name="QuickStart25" Header="  25 min Focus" Click="QuickStart_Click" Tag="25"/>
                <MenuItem x:Name="QuickStart45" Header="  45 min Focus" Click="QuickStart_Click" Tag="45"/>
                <MenuItem x:Name="QuickStart90" Header="  90 min Deep Work" Click="QuickStart_Click" Tag="90"/>
                <Separator/>
                
                <!-- Session Control -->
                <MenuItem x:Name="MenuPauseResume" Header="â¸ï¸ Pause Session" Click="PauseResume_Click" Visibility="Collapsed"/>
                <MenuItem x:Name="MenuStop" Header="â¹ï¸ Stop Session" Click="Stop_Click" Visibility="Collapsed"/>
                <Separator x:Name="ControlSeparator" Visibility="Collapsed"/>
                
                <!-- Settings -->
                <MenuItem Header="âš™ï¸ Timer Settings" Click="Settings_Click"/>
                <MenuItem Header="ðŸ“Š View Stats" Click="Stats_Click"/>
                <Separator/>
                <MenuItem Header="âŒ Hide Widget" Click="Hide_Click"/>
            </ContextMenu>
        </Grid.ContextMenu>
        
        <!-- Main Widget Container -->
        <Border x:Name="MainPanel" CornerRadius="14" Cursor="Hand">
            <Border.Background>
                <SolidColorBrush Color="#1F2937" Opacity="0.96"/>
            </Border.Background>
            <Border.Effect>
                <DropShadowEffect BlurRadius="20" ShadowDepth="2" Opacity="0.3" Color="#000000"/>
            </Border.Effect>

            <Grid Margin="16,14">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- Header with close button -->
                <Grid Grid.Row="0" Margin="0,0,0,6">
                    <TextBlock Text="Focus Timer"
                               Foreground="#9CA3AF"
                               FontSize="12"
                               FontWeight="Medium"
                               HorizontalAlignment="Center"/>

                    <!-- Close button (X) -->
                    <TextBlock x:Name="CloseButton"
                               Text="Ã—"
                               Foreground="#4B5563"
                               FontSize="14"
                               FontWeight="Bold"
                               HorizontalAlignment="Right"
                               VerticalAlignment="Top"
                               Margin="0,-4,-4,0"
                               Cursor="Hand"
                               MouseLeftButtonDown="CloseButton_Click"
                               ToolTip="Hide widget">
                        <TextBlock.Style>
                            <Style TargetType="TextBlock">
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Foreground" Value="#9CA3AF"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </TextBlock.Style>
                    </TextBlock>
                </Grid>

                <!-- IDLE STATE -->
                <Grid x:Name="IdlePanel" Grid.Row="1" VerticalAlignment="Center" HorizontalAlignment="Center">
                    <Button x:Name="StartFocusButton"
                            Content="Start Focus"
                            Click="StartFocusButton_Click"
                            Background="#10B981"
                            Foreground="White"
                            BorderThickness="0"
                            Padding="24,12"
                            FontSize="15"
                            FontWeight="SemiBold"
                            Cursor="Hand">
                        <Button.Style>
                            <Style TargetType="Button">
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="Button">
                                            <Border x:Name="bg" Background="{TemplateBinding Background}" CornerRadius="8" Padding="{TemplateBinding Padding}">
                                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                            </Border>
                                            <ControlTemplate.Triggers>
                                                <Trigger Property="IsMouseOver" Value="True">
                                                    <Setter TargetName="bg" Property="Background" Value="#059669"/>
                                                </Trigger>
                                            </ControlTemplate.Triggers>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                            </Style>
                        </Button.Style>
                    </Button>
                </Grid>

                <!-- ACTIVE STATE -->
                <Grid x:Name="ActivePanel" Grid.Row="1" VerticalAlignment="Center" Visibility="Collapsed">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <!-- Progress Ring and Timer -->
                    <Grid Grid.Row="0" 
                          HorizontalAlignment="Center" 
                          VerticalAlignment="Center"
                          Width="110" Height="110"
                          Margin="10,15,10,5">
                        <!-- Background Ring -->
                        <Ellipse Width="110" Height="110" 
                                 Stroke="#374151" 
                                 StrokeThickness="5" 
                                 Fill="Transparent"
                                 HorizontalAlignment="Center"
                                 VerticalAlignment="Center"/>
                        
                        <!-- Progress Ring -->
                        <Ellipse x:Name="ProgressRing" 
                                 Width="110" Height="110" 
                                 Stroke="#10B981" 
                                 StrokeThickness="5" 
                                 Fill="Transparent"
                                 StrokeDashArray="346" 
                                 StrokeDashOffset="346"
                                 RenderTransformOrigin="0.5,0.5"
                                 HorizontalAlignment="Center"
                                 VerticalAlignment="Center">
                            <Ellipse.RenderTransform>
                                <RotateTransform Angle="-90"/>
                            </Ellipse.RenderTransform>
                        </Ellipse>
                        
                        <!-- Timer Content -->
                        <Grid VerticalAlignment="Center" HorizontalAlignment="Center">
                            <!-- Mode Indicator -->
                            <Ellipse x:Name="ModeIndicator" 
                                     Width="8" Height="8" 
                                     Fill="#10B981" 
                                     HorizontalAlignment="Center" 
                                     VerticalAlignment="Top"
                                     Margin="0,20,0,0"/>
                            
                            <!-- Timer Display -->
                            <TextBlock x:Name="TimerDisplay"
                                       Text="25:00"
                                       Foreground="#FFFFFF"
                                       FontSize="24"
                                       FontWeight="SemiBold"
                                       FontFamily="Segoe UI"
                                       HorizontalAlignment="Center"
                                       VerticalAlignment="Center"
                                       TextAlignment="Center"/>
                        </Grid>
                    </Grid>

                    <!-- End session link -->
                    <TextBlock Grid.Row="1"
                               x:Name="StopLink"
                               Text="end"
                               Foreground="#6B7280"
                               FontSize="11"
                               HorizontalAlignment="Center"
                               Margin="0,4,0,0"
                               Cursor="Hand"
                               MouseLeftButtonDown="StopButton_Click"
                               ToolTip="End session">
                        <TextBlock.Style>
                            <Style TargetType="TextBlock">
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Foreground" Value="#EF4444"/>
                                        <Setter Property="TextDecorations" Value="Underline"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </TextBlock.Style>
                    </TextBlock>
                </Grid>

                <!-- SUGGESTION STATE -->
                <Grid x:Name="SuggestionPanel" Grid.Row="1" VerticalAlignment="Center" HorizontalAlignment="Center" Visibility="Collapsed">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    <TextBlock x:Name="SuggestionText"
                               Grid.Row="0"
                               Text="Break?"
                               Foreground="#FFFFFF"
                               FontSize="14"
                               FontWeight="Medium"
                               HorizontalAlignment="Center"
                               VerticalAlignment="Center"
                               Margin="0,0,0,10"/>

                    <StackPanel Grid.Row="1" 
                                Orientation="Horizontal" 
                                HorizontalAlignment="Center"
                                VerticalAlignment="Center">
                        <Button x:Name="SuggestionPrimaryButton"
                                Content="Yes"
                                Click="SuggestionPrimaryButton_Click"
                                Background="#3B82F6"
                                Foreground="White"
                                BorderThickness="0"
                                Padding="12,6"
                                FontSize="12"
                                FontWeight="Medium"
                                Cursor="Hand"
                                Margin="0,0,6,0">
                            <Button.Style>
                                <Style TargetType="Button">
                                    <Setter Property="Template">
                                        <Setter.Value>
                                            <ControlTemplate TargetType="Button">
                                                <Border x:Name="bg" Background="{TemplateBinding Background}" CornerRadius="6" Padding="{TemplateBinding Padding}">
                                                    <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                                </Border>
                                                <ControlTemplate.Triggers>
                                                    <Trigger Property="IsMouseOver" Value="True">
                                                        <Setter TargetName="bg" Property="Background" Value="#2563EB"/>
                                                    </Trigger>
                                                </ControlTemplate.Triggers>
                                            </ControlTemplate>
                                        </Setter.Value>
                                    </Setter>
                                </Style>
                            </Button.Style>
                        </Button>

                        <Button x:Name="SuggestionSecondaryButton"
                                Content="No"
                                Click="SuggestionSecondaryButton_Click"
                                Background="Transparent"
                                Foreground="#9CA3AF"
                                BorderThickness="1"
                                BorderBrush="#4B5563"
                                Padding="12,6"
                                FontSize="12"
                                FontWeight="Medium"
                                Cursor="Hand">
                            <Button.Style>
                                <Style TargetType="Button">
                                    <Setter Property="Template">
                                        <Setter.Value>
                                            <ControlTemplate TargetType="Button">
                                                <Border x:Name="bg" Background="{TemplateBinding Background}"
                                                        BorderBrush="{TemplateBinding BorderBrush}"
                                                        BorderThickness="{TemplateBinding BorderThickness}"
                                                        CornerRadius="6"
                                                        Padding="{TemplateBinding Padding}">
                                                    <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                                </Border>
                                                <ControlTemplate.Triggers>
                                                    <Trigger Property="IsMouseOver" Value="True">
                                                        <Setter TargetName="bg" Property="Background" Value="#374151"/>
                                                        <Setter Property="Foreground" Value="#FFFFFF"/>
                                                    </Trigger>
                                                </ControlTemplate.Triggers>
                                            </ControlTemplate>
                                        </Setter.Value>
                                    </Setter>
                                </Style>
                            </Button.Style>
                        </Button>
                    </StackPanel>
                </Grid>

                <!-- Footer: Today's time -->
                <TextBlock x:Name="TodayTimeDisplay"
                           Grid.Row="2"
                           Text="Today: 0m"
                           Foreground="#4B5563"
                           FontSize="10"
                           HorizontalAlignment="Center"
                           Margin="0,8,0,0"/>
            </Grid>
        </Border>
    </Grid>
</Window>
