<Window x:Class="TalkKeys.Plugins.FocusTimer.FocusTimerWidget"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Focus Timer"
        Width="130"
        Height="125"
        WindowStyle="None"
        ResizeMode="NoResize"
        Topmost="True"
        ShowInTaskbar="False"
        Background="Transparent"
        AllowsTransparency="True"
        WindowStartupLocation="Manual"
        MouseLeftButtonDown="Window_MouseLeftButtonDown">

    <Window.Resources>
        <!-- Pulse Animation for active timer -->
        <Storyboard x:Key="PulseAnimation" RepeatBehavior="Forever" AutoReverse="True">
            <DoubleAnimation Storyboard.TargetProperty="Opacity" From="1" To="0.5" Duration="0:0:0.8"/>
        </Storyboard>
    </Window.Resources>

    <Grid x:Name="RootGrid">
        <!-- Main Widget Container -->
        <Border x:Name="MainPanel" CornerRadius="14" Cursor="Hand">
            <Border.Background>
                <SolidColorBrush Color="#1F2937" Opacity="0.96"/>
            </Border.Background>
            <Border.Effect>
                <DropShadowEffect BlurRadius="20" ShadowDepth="2" Opacity="0.3" Color="#000000"/>
            </Border.Effect>

            <Grid Margin="14,12">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- Header with close button -->
                <Grid Grid.Row="0" Margin="0,0,0,8">
                    <TextBlock Text="Focus"
                               Foreground="#9CA3AF"
                               FontSize="11"
                               FontWeight="Medium"
                               HorizontalAlignment="Center"/>

                    <!-- Close button (X) -->
                    <TextBlock x:Name="CloseButton"
                               Text="Ã—"
                               Foreground="#4B5563"
                               FontSize="14"
                               FontWeight="Bold"
                               HorizontalAlignment="Right"
                               VerticalAlignment="Top"
                               Margin="0,-4,-4,0"
                               Cursor="Hand"
                               MouseLeftButtonDown="CloseButton_Click"
                               ToolTip="Hide widget">
                        <TextBlock.Style>
                            <Style TargetType="TextBlock">
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Foreground" Value="#9CA3AF"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </TextBlock.Style>
                    </TextBlock>
                </Grid>

                <!-- IDLE STATE -->
                <StackPanel x:Name="IdlePanel" Grid.Row="1" VerticalAlignment="Center" HorizontalAlignment="Center">
                    <Button x:Name="StartFocusButton"
                            Content="Start"
                            Click="StartFocusButton_Click"
                            Background="#10B981"
                            Foreground="White"
                            BorderThickness="0"
                            Padding="20,10"
                            FontSize="14"
                            FontWeight="SemiBold"
                            Cursor="Hand">
                        <Button.Style>
                            <Style TargetType="Button">
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="Button">
                                            <Border x:Name="bg" Background="{TemplateBinding Background}" CornerRadius="8" Padding="{TemplateBinding Padding}">
                                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                            </Border>
                                            <ControlTemplate.Triggers>
                                                <Trigger Property="IsMouseOver" Value="True">
                                                    <Setter TargetName="bg" Property="Background" Value="#059669"/>
                                                </Trigger>
                                            </ControlTemplate.Triggers>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                            </Style>
                        </Button.Style>
                    </Button>
                </StackPanel>

                <!-- ACTIVE STATE -->
                <Grid x:Name="ActivePanel" Grid.Row="1" VerticalAlignment="Center" Visibility="Collapsed">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <!-- Timer with indicator -->
                    <StackPanel Grid.Row="0" Orientation="Horizontal" HorizontalAlignment="Center">
                        <Ellipse x:Name="ModeIndicator" Width="8" Height="8" Fill="#10B981" Margin="0,0,8,0" VerticalAlignment="Center"/>
                        <TextBlock x:Name="TimerDisplay"
                                   Text="25:00"
                                   Foreground="#FFFFFF"
                                   FontSize="24"
                                   FontWeight="SemiBold"
                                   FontFamily="Segoe UI"
                                   VerticalAlignment="Center"/>
                    </StackPanel>

                    <!-- End session link -->
                    <TextBlock Grid.Row="1"
                               x:Name="StopLink"
                               Text="end"
                               Foreground="#6B7280"
                               FontSize="11"
                               HorizontalAlignment="Center"
                               Margin="0,6,0,0"
                               Cursor="Hand"
                               MouseLeftButtonDown="StopButton_Click"
                               ToolTip="End session">
                        <TextBlock.Style>
                            <Style TargetType="TextBlock">
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Foreground" Value="#EF4444"/>
                                        <Setter Property="TextDecorations" Value="Underline"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </TextBlock.Style>
                    </TextBlock>
                </Grid>

                <!-- SUGGESTION STATE -->
                <StackPanel x:Name="SuggestionPanel" Grid.Row="1" VerticalAlignment="Center" HorizontalAlignment="Center" Visibility="Collapsed">
                    <TextBlock x:Name="SuggestionText"
                               Text="Break?"
                               Foreground="#FFFFFF"
                               FontSize="14"
                               FontWeight="Medium"
                               HorizontalAlignment="Center"
                               Margin="0,0,0,10"/>

                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                        <Button x:Name="SuggestionPrimaryButton"
                                Content="Yes"
                                Click="SuggestionPrimaryButton_Click"
                                Background="#3B82F6"
                                Foreground="White"
                                BorderThickness="0"
                                Padding="12,6"
                                FontSize="12"
                                FontWeight="Medium"
                                Cursor="Hand"
                                Margin="0,0,6,0">
                            <Button.Style>
                                <Style TargetType="Button">
                                    <Setter Property="Template">
                                        <Setter.Value>
                                            <ControlTemplate TargetType="Button">
                                                <Border x:Name="bg" Background="{TemplateBinding Background}" CornerRadius="6" Padding="{TemplateBinding Padding}">
                                                    <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                                </Border>
                                                <ControlTemplate.Triggers>
                                                    <Trigger Property="IsMouseOver" Value="True">
                                                        <Setter TargetName="bg" Property="Background" Value="#2563EB"/>
                                                    </Trigger>
                                                </ControlTemplate.Triggers>
                                            </ControlTemplate>
                                        </Setter.Value>
                                    </Setter>
                                </Style>
                            </Button.Style>
                        </Button>

                        <Button x:Name="SuggestionSecondaryButton"
                                Content="No"
                                Click="SuggestionSecondaryButton_Click"
                                Background="Transparent"
                                Foreground="#9CA3AF"
                                BorderThickness="1"
                                BorderBrush="#4B5563"
                                Padding="12,6"
                                FontSize="12"
                                FontWeight="Medium"
                                Cursor="Hand">
                            <Button.Style>
                                <Style TargetType="Button">
                                    <Setter Property="Template">
                                        <Setter.Value>
                                            <ControlTemplate TargetType="Button">
                                                <Border x:Name="bg" Background="{TemplateBinding Background}"
                                                        BorderBrush="{TemplateBinding BorderBrush}"
                                                        BorderThickness="{TemplateBinding BorderThickness}"
                                                        CornerRadius="6"
                                                        Padding="{TemplateBinding Padding}">
                                                    <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                                </Border>
                                                <ControlTemplate.Triggers>
                                                    <Trigger Property="IsMouseOver" Value="True">
                                                        <Setter TargetName="bg" Property="Background" Value="#374151"/>
                                                        <Setter Property="Foreground" Value="#FFFFFF"/>
                                                    </Trigger>
                                                </ControlTemplate.Triggers>
                                            </ControlTemplate>
                                        </Setter.Value>
                                    </Setter>
                                </Style>
                            </Button.Style>
                        </Button>
                    </StackPanel>
                </StackPanel>

                <!-- Footer: Today's time -->
                <TextBlock x:Name="TodayTimeDisplay"
                           Grid.Row="2"
                           Text="Today: 0m"
                           Foreground="#4B5563"
                           FontSize="10"
                           HorizontalAlignment="Center"
                           Margin="0,10,0,0"/>
            </Grid>
        </Border>
    </Grid>
</Window>
