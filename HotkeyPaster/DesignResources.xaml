<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!-- ============================================ -->
    <!-- COLOR PALETTE -->
    <!-- ============================================ -->

    <!-- Background Colors -->
    <SolidColorBrush x:Key="BackgroundPrimary" Color="#1A1A1A"/>
    <SolidColorBrush x:Key="BackgroundSecondary" Color="#242424"/>
    <SolidColorBrush x:Key="BackgroundTertiary" Color="#2A2A2A"/>
    <SolidColorBrush x:Key="BackgroundElevated" Color="#1A2332"/>

    <!-- Border Colors -->
    <SolidColorBrush x:Key="BorderDefault" Color="#333333"/>
    <SolidColorBrush x:Key="BorderInput" Color="#444444"/>
    <SolidColorBrush x:Key="BorderSubtle" Color="#2D3748"/>

    <!-- Text Colors -->
    <SolidColorBrush x:Key="TextPrimary" Color="#E5E7EB"/>
    <SolidColorBrush x:Key="TextSecondary" Color="#D1D5DB"/>
    <SolidColorBrush x:Key="TextTertiary" Color="#9CA3AF"/>
    <SolidColorBrush x:Key="TextMuted" Color="#6B7280"/>
    <SolidColorBrush x:Key="TextDisabled" Color="#4B5563"/>

    <!-- Accent Colors - Primary (Indigo) -->
    <SolidColorBrush x:Key="AccentPrimary" Color="#4F46E5"/>
    <SolidColorBrush x:Key="AccentPrimaryHover" Color="#6366F1"/>
    <SolidColorBrush x:Key="AccentPrimaryPressed" Color="#4338CA"/>
    <SolidColorBrush x:Key="AccentPrimaryLight" Color="#818CF8"/>

    <!-- Accent Colors - Success (Green) -->
    <SolidColorBrush x:Key="AccentSuccess" Color="#10B981"/>
    <SolidColorBrush x:Key="AccentSuccessHover" Color="#34D399"/>
    <SolidColorBrush x:Key="AccentSuccessPressed" Color="#059669"/>

    <!-- Accent Colors - Warning (Amber) -->
    <SolidColorBrush x:Key="AccentWarning" Color="#F59E0B"/>
    <SolidColorBrush x:Key="AccentWarningHover" Color="#FBBF24"/>
    <SolidColorBrush x:Key="AccentWarningPressed" Color="#D97706"/>

    <!-- Accent Colors - Error (Red) -->
    <SolidColorBrush x:Key="AccentError" Color="#EF4444"/>
    <SolidColorBrush x:Key="AccentErrorHover" Color="#F87171"/>
    <SolidColorBrush x:Key="AccentErrorPressed" Color="#DC2626"/>

    <!-- Accent Colors - Info (Blue) -->
    <SolidColorBrush x:Key="AccentInfo" Color="#60A5FA"/>
    <SolidColorBrush x:Key="AccentInfoHover" Color="#93C5FD"/>
    <SolidColorBrush x:Key="AccentInfoPressed" Color="#3B82F6"/>

    <!-- Gradient Brushes -->
    <LinearGradientBrush x:Key="GradientAccent" StartPoint="0,0" EndPoint="1,1">
        <GradientStop Color="#6366F1" Offset="0"/>
        <GradientStop Color="#8B5CF6" Offset="0.5"/>
        <GradientStop Color="#EC4899" Offset="1"/>
    </LinearGradientBrush>

    <LinearGradientBrush x:Key="GradientSuccess" StartPoint="0,0" EndPoint="1,1">
        <GradientStop Color="#10B981" Offset="0"/>
        <GradientStop Color="#34D399" Offset="1"/>
    </LinearGradientBrush>

    <!-- Surface Colors (for overlays, dialogs) -->
    <SolidColorBrush x:Key="SurfaceDefault" Color="#242424"/>
    <SolidColorBrush x:Key="SurfaceElevated" Color="#2D2D2D"/>
    <SolidColorBrush x:Key="SurfaceOverlay" Color="#80000000"/>

    <!-- ============================================ -->
    <!-- TYPOGRAPHY -->
    <!-- ============================================ -->

    <!-- Font Families -->
    <FontFamily x:Key="FontFamilyBase">Segoe UI</FontFamily>

    <!-- Font Sizes -->
    <System:Double x:Key="FontSizeDisplay" xmlns:System="clr-namespace:System;assembly=mscorlib">28</System:Double>
    <System:Double x:Key="FontSizeTitle" xmlns:System="clr-namespace:System;assembly=mscorlib">18</System:Double>
    <System:Double x:Key="FontSizeHeading" xmlns:System="clr-namespace:System;assembly=mscorlib">16</System:Double>
    <System:Double x:Key="FontSizeBodyLarge" xmlns:System="clr-namespace:System;assembly=mscorlib">14</System:Double>
    <System:Double x:Key="FontSizeBody" xmlns:System="clr-namespace:System;assembly=mscorlib">13</System:Double>
    <System:Double x:Key="FontSizeCaption" xmlns:System="clr-namespace:System;assembly=mscorlib">12</System:Double>
    <System:Double x:Key="FontSizeSmall" xmlns:System="clr-namespace:System;assembly=mscorlib">11</System:Double>

    <!-- ============================================ -->
    <!-- SPACING -->
    <!-- ============================================ -->

    <Thickness x:Key="SpacingXS">4</Thickness>
    <Thickness x:Key="SpacingSM">8</Thickness>
    <Thickness x:Key="SpacingMD">12</Thickness>
    <Thickness x:Key="SpacingLG">16</Thickness>
    <Thickness x:Key="SpacingXL">20</Thickness>
    <Thickness x:Key="Spacing2XL">24</Thickness>
    <Thickness x:Key="Spacing3XL">32</Thickness>

    <!-- Spacing Values (for when Thickness isn't appropriate) -->
    <System:Double x:Key="SpacingXSValue" xmlns:System="clr-namespace:System;assembly=mscorlib">4</System:Double>
    <System:Double x:Key="SpacingSMValue" xmlns:System="clr-namespace:System;assembly=mscorlib">8</System:Double>
    <System:Double x:Key="SpacingMDValue" xmlns:System="clr-namespace:System;assembly=mscorlib">12</System:Double>
    <System:Double x:Key="SpacingLGValue" xmlns:System="clr-namespace:System;assembly=mscorlib">16</System:Double>
    <System:Double x:Key="SpacingXLValue" xmlns:System="clr-namespace:System;assembly=mscorlib">20</System:Double>
    <System:Double x:Key="Spacing2XLValue" xmlns:System="clr-namespace:System;assembly=mscorlib">24</System:Double>
    <System:Double x:Key="Spacing3XLValue" xmlns:System="clr-namespace:System;assembly=mscorlib">32</System:Double>

    <!-- ============================================ -->
    <!-- CORNER RADIUS -->
    <!-- ============================================ -->

    <CornerRadius x:Key="CornerRadiusSmall">6</CornerRadius>
    <CornerRadius x:Key="CornerRadiusMedium">8</CornerRadius>
    <CornerRadius x:Key="CornerRadiusLarge">12</CornerRadius>

    <!-- ============================================ -->
    <!-- SHADOWS & EFFECTS -->
    <!-- ============================================ -->

    <!-- Elevation Shadows -->
    <DropShadowEffect x:Key="ShadowElevation1"
                      BlurRadius="12"
                      ShadowDepth="2"
                      Opacity="0.1"
                      Color="#000000"/>

    <DropShadowEffect x:Key="ShadowElevation2"
                      BlurRadius="24"
                      ShadowDepth="4"
                      Opacity="0.2"
                      Color="#000000"/>

    <DropShadowEffect x:Key="ShadowElevation3"
                      BlurRadius="32"
                      ShadowDepth="8"
                      Opacity="0.25"
                      Color="#000000"/>

    <!-- Glow Effects (for accents) -->
    <DropShadowEffect x:Key="GlowAccent"
                      BlurRadius="24"
                      ShadowDepth="0"
                      Opacity="0.5"
                      Color="#6366F1"/>

    <DropShadowEffect x:Key="GlowSuccess"
                      BlurRadius="24"
                      ShadowDepth="0"
                      Opacity="0.4"
                      Color="#10B981"/>

    <DropShadowEffect x:Key="GlowError"
                      BlurRadius="24"
                      ShadowDepth="0"
                      Opacity="0.4"
                      Color="#EF4444"/>

    <!-- ============================================ -->
    <!-- DURATIONS & EASING -->
    <!-- ============================================ -->

    <Duration x:Key="AnimationFast" xmlns:System="clr-namespace:System;assembly=mscorlib">0:0:0.15</Duration>
    <Duration x:Key="AnimationNormal" xmlns:System="clr-namespace:System;assembly=mscorlib">0:0:0.25</Duration>
    <Duration x:Key="AnimationSlow" xmlns:System="clr-namespace:System;assembly=mscorlib">0:0:0.35</Duration>

    <!-- ============================================ -->
    <!-- COMPONENT DIMENSIONS -->
    <!-- ============================================ -->

    <!-- Button Sizes -->
    <System:Double x:Key="ButtonHeightSmall" xmlns:System="clr-namespace:System;assembly=mscorlib">32</System:Double>
    <System:Double x:Key="ButtonHeightMedium" xmlns:System="clr-namespace:System;assembly=mscorlib">36</System:Double>
    <System:Double x:Key="ButtonHeightLarge" xmlns:System="clr-namespace:System;assembly=mscorlib">44</System:Double>

    <!-- Input Sizes -->
    <System:Double x:Key="InputHeight" xmlns:System="clr-namespace:System;assembly=mscorlib">36</System:Double>
    <Thickness x:Key="InputPadding">10,8</Thickness>

    <!-- Icon Sizes -->
    <System:Double x:Key="IconSizeSmall" xmlns:System="clr-namespace:System;assembly=mscorlib">16</System:Double>
    <System:Double x:Key="IconSizeMedium" xmlns:System="clr-namespace:System;assembly=mscorlib">20</System:Double>
    <System:Double x:Key="IconSizeLarge" xmlns:System="clr-namespace:System;assembly=mscorlib">24</System:Double>

</ResourceDictionary>
