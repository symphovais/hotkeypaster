<Window x:Class="TalkKeys.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Voice Transcription"
        Height="120"
        Width="320"
        WindowStyle="None"
        ResizeMode="NoResize"
        Topmost="True"
        ShowInTaskbar="False"
        Background="Transparent"
        AllowsTransparency="True"
        WindowStartupLocation="Manual"
        Loaded="Window_Loaded"
        Closing="Window_Closing"
        KeyDown="Window_KeyDown"
        Focusable="True">
    <Window.Resources>
        <!-- Fade In Animation -->
        <Storyboard x:Key="FadeIn">
            <DoubleAnimation Storyboard.TargetProperty="Opacity" From="0" To="1" Duration="0:0:0.3"/>
        </Storyboard>
        
        <!-- Pulse Animation for Recording -->
        <Storyboard x:Key="PulseAnimation" RepeatBehavior="Forever" AutoReverse="True">
            <DoubleAnimation Storyboard.TargetProperty="Opacity" From="1" To="0.5" Duration="0:0:1"/>
        </Storyboard>
    </Window.Resources>
    
    <Border CornerRadius="12" BorderThickness="1.5" Margin="8" Opacity="0.95">
        <Border.Background>
            <SolidColorBrush Color="#F5F5F5" Opacity="0.85"/>
        </Border.Background>
        <Border.BorderBrush>
            <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                <GradientStop Color="#E0E0E0" Offset="0"/>
                <GradientStop Color="#C0C0C0" Offset="0.5"/>
                <GradientStop Color="#D0D0D0" Offset="1"/>
            </LinearGradientBrush>
        </Border.BorderBrush>
        <Border.Effect>
            <DropShadowEffect BlurRadius="32" ShadowDepth="4" Opacity="0.3" Color="#000000"/>
        </Border.Effect>
        
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            
            <!-- Header -->
            <Grid Grid.Row="0" Margin="12,8,12,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                    <Ellipse Width="6" Height="6" Fill="#FF6B47" Margin="0,0,6,0"/>
                    <TextBlock Text="Voice Transcription"
                               Foreground="#424242"
                               FontSize="11"
                               FontWeight="Medium"
                               Opacity="0.8"/>
                </StackPanel>

                <Button Grid.Column="1"
                        Content="âœ•"
                        Click="CloseButton_Click"
                        Background="Transparent"
                        Foreground="#757575"
                        FontSize="14"
                        FontWeight="Light"
                        BorderThickness="0"
                        Width="24"
                        Height="24"
                        Cursor="Hand"
                        Padding="0">
                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="Background" Value="Transparent"/>
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="Button">
                                        <Border Background="{TemplateBinding Background}"
                                                CornerRadius="6"
                                                Padding="{TemplateBinding Padding}">
                                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                        </Border>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="#E0E0E0"/>
                                    <Setter Property="Foreground" Value="#212121"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                </Button>
            </Grid>
            
            <!-- Compact Content -->
            <Grid Grid.Row="1" Margin="12,8,12,12">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                
                <!-- Compact Recording Indicator -->
                <Grid Grid.Column="0" Height="36" Width="36" Margin="0,0,10,0" VerticalAlignment="Center">
                    <Ellipse Fill="#E8E8E8" Width="36" Height="36"/>
                    <Ellipse x:Name="RecordingPulse" Width="28" Height="28">
                        <Ellipse.Fill>
                            <RadialGradientBrush>
                                <GradientStop Color="#EF4444" Offset="0"/>
                                <GradientStop Color="#DC2626" Offset="1"/>
                            </RadialGradientBrush>
                        </Ellipse.Fill>
                    </Ellipse>
                    <TextBlock x:Name="RecordingIcon"
                               Text="ðŸŽ™ï¸"
                               FontSize="18"
                               HorizontalAlignment="Center"
                               VerticalAlignment="Center"/>
                </Grid>

                <!-- Compact Status -->
                <StackPanel Grid.Column="1" VerticalAlignment="Center">
                    <TextBlock x:Name="RecordingStatus"
                               Text="Recording..."
                               Foreground="#212121"
                               FontSize="14"
                               FontWeight="SemiBold"
                               Margin="0,0,0,2"/>

                    <TextBlock x:Name="SubStatus"
                               Text="Speak clearly"
                               Foreground="#616161"
                               FontSize="11"
                               TextTrimming="CharacterEllipsis"/>
                </StackPanel>
            </Grid>
            
            <!-- Compact Action Button (Hidden, only shows on hover or when needed) -->
            <Button x:Name="ActionButton"
                    Grid.Row="1"
                    Content="â¹"
                    Click="StopRecordingButton_Click"
                    Width="24"
                    Height="24"
                    FontSize="12"
                    BorderThickness="0"
                    Cursor="Hand"
                    HorizontalAlignment="Right"
                    VerticalAlignment="Center"
                    Margin="0,0,12,0"
                    Opacity="0.6">
                <Button.Style>
                    <Style TargetType="Button">
                        <Setter Property="Background">
                            <Setter.Value>
                                <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                                    <GradientStop Color="#FF6B47" Offset="0"/>
                                    <GradientStop Color="#FF8566" Offset="1"/>
                                </LinearGradientBrush>
                            </Setter.Value>
                        </Setter>
                        <Setter Property="Foreground" Value="#FFFFFF"/>
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="Button">
                                    <Border Background="{TemplateBinding Background}"
                                            CornerRadius="8"
                                            Padding="{TemplateBinding Padding}">
                                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                    </Border>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                        <Style.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Opacity" Value="1"/>
                                <Setter Property="Background">
                                    <Setter.Value>
                                        <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                                            <GradientStop Color="#FFA088" Offset="0"/>
                                            <GradientStop Color="#FF8566" Offset="1"/>
                                        </LinearGradientBrush>
                                    </Setter.Value>
                                </Setter>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter Property="Opacity" Value="0.3"/>
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </Button.Style>
            </Button>
        </Grid>
    </Border>
</Window>