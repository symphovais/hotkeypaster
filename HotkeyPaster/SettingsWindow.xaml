<Window x:Class="TalkKeys.SettingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Settings - TalkKeys"
        Height="700"
        Width="800"
        WindowStartupLocation="CenterScreen"
        ResizeMode="CanResize"
        Background="{StaticResource BackgroundPrimary}">

    <Grid Margin="25">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <StackPanel Grid.Row="0" Margin="0,0,0,20">
            <TextBlock Text="âš™ï¸ Settings" Style="{StaticResource DisplayText}"/>
            <TextBlock Text="Configure transcription and application preferences"
                       Style="{StaticResource BodyText}"
                       Foreground="{StaticResource TextTertiary}"
                       Margin="0,5,0,0"/>
        </StackPanel>

        <!-- Settings Content -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
            <StackPanel>
                
                <!-- Pipeline Configuration Section -->
                <Border Style="{StaticResource Card}">
                    <StackPanel>
                        <TextBlock Text="ðŸŽ¯ Pipeline Configuration" Style="{StaticResource TitleText}"/>
                        <TextBlock Text="Choose the processing pipeline that works best for your needs:"
                                   Style="{StaticResource CaptionText}"
                                   Foreground="{StaticResource TextTertiary}"
                                   Margin="0,0,0,12"/>

                        <RadioButton x:Name="MaximumQualityRadio"
                                     GroupName="Pipeline"
                                     Style="{StaticResource RadioButtonStyle}"
                                     Checked="PipelinePreset_Changed">
                            <StackPanel>
                                <Grid>
                                    <StackPanel>
                                        <TextBlock Text="ðŸ† Maximum Quality" Style="{StaticResource BodyText}" FontWeight="SemiBold"/>
                                        <TextBlock Text="Best accuracy â€¢ Noise reduction + Silence removal + Cloud processing"
                                                   Style="{StaticResource CaptionText}"
                                                   Foreground="{StaticResource TextTertiary}"/>
                                    </StackPanel>
                                </Grid>
                                <Border x:Name="MaximumQualityResult"
                                        Visibility="Collapsed"
                                        Background="{StaticResource BackgroundElevated}"
                                        CornerRadius="6"
                                        Padding="10,8"
                                        Margin="0,8,0,0"
                                        BorderBrush="{StaticResource BorderSubtle}"
                                        BorderThickness="1">
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="*"/>
                                        </Grid.ColumnDefinitions>
                                        <TextBlock Grid.Column="0" Text="Accuracy:" Foreground="{StaticResource TextTertiary}" FontSize="11" Margin="0,0,6,0"/>
                                        <TextBlock Grid.Column="1" x:Name="MaximumQualityAccuracy" FontWeight="Bold" Foreground="{StaticResource AccentSuccess}" FontSize="11"/>
                                        <TextBlock Grid.Column="2" Text="Speed:" Foreground="{StaticResource TextTertiary}" FontSize="11" Margin="12,0,6,0"/>
                                        <TextBlock Grid.Column="3" x:Name="MaximumQualitySpeed" FontWeight="Bold" Foreground="{StaticResource AccentInfo}" FontSize="11"/>
                                    </Grid>
                                </Border>
                            </StackPanel>
                        </RadioButton>

                        <RadioButton x:Name="BalancedQualityRadio"
                                     GroupName="Pipeline"
                                     Style="{StaticResource RadioButtonStyle}"
                                     Checked="PipelinePreset_Changed">
                            <StackPanel>
                                <Grid>
                                    <StackPanel>
                                        <TextBlock Text="âš–ï¸ Balanced Quality" FontWeight="SemiBold" FontSize="14"/>
                                        <TextBlock Text="Good accuracy â€¢ Noise reduction + Cloud processing â€¢ Faster than maximum"
                                                   Style="{StaticResource CaptionText}" Foreground="{StaticResource TextTertiary}"/>
                                    </StackPanel>
                                </Grid>
                                <Border x:Name="BalancedQualityResult"
                                        Visibility="Collapsed"
                                        Background="{StaticResource BackgroundElevated}"
                                        CornerRadius="6"
                                        Padding="10,8"
                                        Margin="0,8,0,0"
                                        BorderBrush="{StaticResource BorderSubtle}"
                                        BorderThickness="1">
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="*"/>
                                        </Grid.ColumnDefinitions>
                                        <TextBlock Grid.Column="0" Text="Accuracy:" Foreground="{StaticResource TextTertiary}" FontSize="11" Margin="0,0,6,0"/>
                                        <TextBlock Grid.Column="1" x:Name="BalancedQualityAccuracy" FontWeight="Bold" Foreground="{StaticResource AccentSuccess}" FontSize="11"/>
                                        <TextBlock Grid.Column="2" Text="Speed:" Foreground="{StaticResource TextTertiary}" FontSize="11" Margin="12,0,6,0"/>
                                        <TextBlock Grid.Column="3" x:Name="BalancedQualitySpeed" FontWeight="Bold" Foreground="{StaticResource AccentInfo}" FontSize="11"/>
                                    </Grid>
                                </Border>
                            </StackPanel>
                        </RadioButton>

                        <RadioButton x:Name="FastCloudRadio"
                                     GroupName="Pipeline"
                                     Style="{StaticResource RadioButtonStyle}"
                                     Checked="PipelinePreset_Changed">
                            <StackPanel>
                                <Grid>
                                    <StackPanel>
                                        <TextBlock Text="âš¡ Fast Cloud" FontWeight="SemiBold" FontSize="14"/>
                                        <TextBlock Text="Fastest cloud option â€¢ No preprocessing â€¢ Best for quiet environments"
                                                   Style="{StaticResource CaptionText}" Foreground="{StaticResource TextTertiary}"/>
                                    </StackPanel>
                                </Grid>
                                <Border x:Name="FastCloudResult"
                                        Visibility="Collapsed"
                                        Background="{StaticResource BackgroundElevated}"
                                        CornerRadius="6"
                                        Padding="10,8"
                                        Margin="0,8,0,0"
                                        BorderBrush="{StaticResource BorderSubtle}"
                                        BorderThickness="1">
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="*"/>
                                        </Grid.ColumnDefinitions>
                                        <TextBlock Grid.Column="0" Text="Accuracy:" Foreground="{StaticResource TextTertiary}" FontSize="11" Margin="0,0,6,0"/>
                                        <TextBlock Grid.Column="1" x:Name="FastCloudAccuracy" FontWeight="Bold" Foreground="{StaticResource AccentSuccess}" FontSize="11"/>
                                        <TextBlock Grid.Column="2" Text="Speed:" Foreground="{StaticResource TextTertiary}" FontSize="11" Margin="12,0,6,0"/>
                                        <TextBlock Grid.Column="3" x:Name="FastCloudSpeed" FontWeight="Bold" Foreground="{StaticResource AccentInfo}" FontSize="11"/>
                                    </Grid>
                                </Border>
                            </StackPanel>
                        </RadioButton>

                        <RadioButton x:Name="MaximumPrivacyRadio"
                                     GroupName="Pipeline"
                                     Style="{StaticResource RadioButtonStyle}"
                                     Checked="PipelinePreset_Changed">
                            <StackPanel>
                                <Grid>
                                    <StackPanel>
                                        <TextBlock Text="ðŸ”’ Maximum Privacy" FontWeight="SemiBold" FontSize="14"/>
                                        <TextBlock Text="Best for privacy â€¢ Noise reduction + Silence removal + Local processing â€¢ Runs entirely on your device"
                                                   Style="{StaticResource CaptionText}" Foreground="{StaticResource TextTertiary}"/>
                                    </StackPanel>
                                </Grid>
                                <Border x:Name="MaximumPrivacyResult"
                                        Visibility="Collapsed"
                                        Background="{StaticResource BackgroundElevated}"
                                        CornerRadius="6"
                                        Padding="10,8"
                                        Margin="0,8,0,0"
                                        BorderBrush="{StaticResource BorderSubtle}"
                                        BorderThickness="1">
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="*"/>
                                        </Grid.ColumnDefinitions>
                                        <TextBlock Grid.Column="0" Text="Accuracy:" Foreground="{StaticResource TextTertiary}" FontSize="11" Margin="0,0,6,0"/>
                                        <TextBlock Grid.Column="1" x:Name="MaximumPrivacyAccuracy" FontWeight="Bold" Foreground="{StaticResource AccentSuccess}" FontSize="11"/>
                                        <TextBlock Grid.Column="2" Text="Speed:" Foreground="{StaticResource TextTertiary}" FontSize="11" Margin="12,0,6,0"/>
                                        <TextBlock Grid.Column="3" x:Name="MaximumPrivacySpeed" FontWeight="Bold" Foreground="{StaticResource AccentInfo}" FontSize="11"/>
                                    </Grid>
                                </Border>
                            </StackPanel>
                        </RadioButton>

                        <RadioButton x:Name="FastLocalRadio"
                                     GroupName="Pipeline"
                                     Style="{StaticResource RadioButtonStyle}"
                                     Checked="PipelinePreset_Changed">
                            <StackPanel>
                                <Grid>
                                    <StackPanel>
                                        <TextBlock Text="ðŸš€ Fast Local" FontWeight="SemiBold" FontSize="14"/>
                                        <TextBlock Text="Fastest offline option â€¢ Local processing only â€¢ Completely private"
                                                   Style="{StaticResource CaptionText}" Foreground="{StaticResource TextTertiary}"/>
                                    </StackPanel>
                                </Grid>
                                <Border x:Name="FastLocalResult"
                                        Visibility="Collapsed"
                                        Background="{StaticResource BackgroundElevated}"
                                        CornerRadius="6"
                                        Padding="10,8"
                                        Margin="0,8,0,0"
                                        BorderBrush="{StaticResource BorderSubtle}"
                                        BorderThickness="1">
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="*"/>
                                        </Grid.ColumnDefinitions>
                                        <TextBlock Grid.Column="0" Text="Accuracy:" Foreground="{StaticResource TextTertiary}" FontSize="11" Margin="0,0,6,0"/>
                                        <TextBlock Grid.Column="1" x:Name="FastLocalAccuracy" FontWeight="Bold" Foreground="{StaticResource AccentSuccess}" FontSize="11"/>
                                        <TextBlock Grid.Column="2" Text="Speed:" Foreground="{StaticResource TextTertiary}" FontSize="11" Margin="12,0,6,0"/>
                                        <TextBlock Grid.Column="3" x:Name="FastLocalSpeed" FontWeight="Bold" Foreground="{StaticResource AccentInfo}" FontSize="11"/>
                                    </Grid>
                                </Border>
                            </StackPanel>
                        </RadioButton>

                        <!-- Local Model Selection (shown for privacy options) -->
                        <StackPanel x:Name="LocalModelPanel" Visibility="Collapsed" Margin="0,10,0,0">
                            <TextBlock Text="Select Local Model:" Style="{StaticResource LabelText}"/>
                            <ComboBox x:Name="LocalModelComboBox"
                                      Style="{StaticResource ComboBoxStyle}"
                                      SelectionChanged="LocalModel_Changed"/>
                            <TextBlock x:Name="ModelInfoText"
                                       Style="{StaticResource CaptionText}"
                                       Foreground="{StaticResource AccentSuccess}"/>

                            <!-- Download Models Button -->
                            <Button x:Name="DownloadModelsButton"
                                    Content="ðŸ“¥ Download More Models"
                                    Click="DownloadModels_Click"
                                    Style="{StaticResource ButtonSecondary}"
                                    HorizontalAlignment="Stretch"
                                    Margin="0,15,0,0"/>
                        </StackPanel>

                        <Button x:Name="DeathmatchButton"
                                Content="ðŸ§ª Pipeline Benchmark - Test &amp; Compare All"
                                Style="{StaticResource ButtonPrimary}"
                                Click="Deathmatch_Click"
                                Margin="0,15,0,0"
                                HorizontalAlignment="Stretch"/>

                        <TextBlock Text="ðŸ’¡ Run the benchmark to test all configurations and find the best one for your needs!"
                                   Style="{StaticResource CaptionText}"
                                   Foreground="{StaticResource AccentSuccess}"
                                   FontStyle="Italic"
                                   Margin="0,8,0,0"/>
                    </StackPanel>
                </Border>

                <!-- API Configuration Section -->
                <Border Style="{StaticResource Card}">
                    <StackPanel>
                        <TextBlock Text="ðŸ”‘ API Configuration" Style="{StaticResource TitleText}"/>

                        <TextBlock Text="OpenAI API Key:" Style="{StaticResource LabelText}"/>
                        <TextBox x:Name="ApiKeyTextBox"
                                 Style="{StaticResource TextBoxStyle}"
                                 TextChanged="ApiKey_Changed"/>
                        <TextBlock Text="Required for Cloud pipelines. Get your key from platform.openai.com"
                                   Style="{StaticResource CaptionText}" Foreground="{StaticResource TextTertiary}"/>
                    </StackPanel>
                </Border>

            </StackPanel>
        </ScrollViewer>

        <!-- Action Buttons -->
        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,20,0,0">
            <Button x:Name="SaveCloseButton"
                    Content="Save &amp; Close" 
                    Style="{StaticResource ButtonPrimary}"
                    Click="SaveClose_Click"
                    Margin="0,0,10,0"/>
            <Button x:Name="CloseButton"
                    Content="Close" 
                    Style="{StaticResource ButtonSecondary}"
                    Click="Close_Click"/>
        </StackPanel>
    </Grid>
</Window>
