<Window x:Class="HotkeyPaster.SettingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Settings - Hotkey Paster" 
        Height="700" 
        Width="800"
        WindowStartupLocation="CenterScreen"
        ResizeMode="CanResize"
        Background="#F5F5F5">

    <Window.Resources>
        <!-- Card Style -->
        <Style x:Key="CardStyle" TargetType="Border">
            <Setter Property="Background" Value="White"/>
            <Setter Property="CornerRadius" Value="8"/>
            <Setter Property="Padding" Value="25"/>
            <Setter Property="Margin" Value="0,0,0,20"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect Color="#000000" Opacity="0.08" BlurRadius="15" ShadowDepth="2"/>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Section Title Style -->
        <Style x:Key="SectionTitleStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="18"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Foreground" Value="#1F2937"/>
            <Setter Property="Margin" Value="0,0,0,15"/>
        </Style>

        <!-- Label Style -->
        <Style x:Key="LabelStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Foreground" Value="#374151"/>
            <Setter Property="Margin" Value="0,0,0,8"/>
        </Style>

        <!-- Description Style -->
        <Style x:Key="DescriptionStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="Foreground" Value="#6B7280"/>
            <Setter Property="TextWrapping" Value="Wrap"/>
            <Setter Property="Margin" Value="0,5,0,0"/>
        </Style>

        <!-- Radio Button Style -->
        <Style x:Key="RadioButtonStyle" TargetType="RadioButton">
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Foreground" Value="#374151"/>
            <Setter Property="Margin" Value="0,0,0,15"/>
            <Setter Property="Cursor" Value="Hand"/>
        </Style>

        <!-- CheckBox Style -->
        <Style x:Key="CheckBoxStyle" TargetType="CheckBox">
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Foreground" Value="#374151"/>
            <Setter Property="Margin" Value="0,0,0,10"/>
            <Setter Property="Cursor" Value="Hand"/>
        </Style>

        <!-- ComboBox Style -->
        <Style x:Key="ComboBoxStyle" TargetType="ComboBox">
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="Padding" Value="10,8"/>
            <Setter Property="Margin" Value="0,0,0,10"/>
        </Style>

        <!-- TextBox Style -->
        <Style x:Key="TextBoxStyle" TargetType="TextBox">
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="Padding" Value="10,8"/>
            <Setter Property="Margin" Value="0,0,0,10"/>
            <Setter Property="BorderBrush" Value="#D1D5DB"/>
            <Setter Property="BorderThickness" Value="1"/>
        </Style>

        <!-- Button Style -->
        <Style x:Key="PrimaryButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#4F46E5"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Padding" Value="24,12"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="6" 
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#6366F1"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="SecondaryButtonStyle" TargetType="Button" BasedOn="{StaticResource PrimaryButtonStyle}">
            <Setter Property="Background" Value="#6B7280"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#9CA3AF"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="AccentButtonStyle" TargetType="Button" BasedOn="{StaticResource PrimaryButtonStyle}">
            <Setter Property="Background" Value="#10B981"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#34D399"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>

    <Grid Margin="25">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <StackPanel Grid.Row="0" Margin="0,0,0,20">
            <TextBlock Text="âš™ï¸ Settings" FontSize="28" FontWeight="Bold" Foreground="#111827"/>
            <TextBlock Text="Configure transcription and application preferences" 
                       FontSize="14" 
                       Foreground="#6B7280" 
                       Margin="0,5,0,0"/>
        </StackPanel>

        <!-- Settings Content -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
            <StackPanel>
                
                <!-- Transcription Mode Section -->
                <Border Style="{StaticResource CardStyle}">
                    <StackPanel>
                        <TextBlock Text="ðŸŽ™ï¸ Transcription Mode" Style="{StaticResource SectionTitleStyle}"/>
                        
                        <RadioButton x:Name="CloudModeRadio" 
                                     GroupName="TranscriptionMode"
                                     Style="{StaticResource RadioButtonStyle}"
                                     Checked="TranscriptionMode_Changed">
                            <StackPanel>
                                <TextBlock Text="â˜ï¸ Cloud (OpenAI Whisper)" FontWeight="SemiBold" FontSize="14"/>
                                <TextBlock Text="Uses OpenAI's API for transcription. Requires API key and internet connection. Most accurate." 
                                           Style="{StaticResource DescriptionStyle}"/>
                            </StackPanel>
                        </RadioButton>

                        <RadioButton x:Name="LocalModeRadio" 
                                     GroupName="TranscriptionMode"
                                     Style="{StaticResource RadioButtonStyle}"
                                     Checked="TranscriptionMode_Changed">
                            <StackPanel>
                                <TextBlock Text="ðŸ“ Local (Whisper.net)" FontWeight="SemiBold" FontSize="14"/>
                                <TextBlock Text="Runs transcription locally on your machine. Private, free, works offline." 
                                           Style="{StaticResource DescriptionStyle}"/>
                            </StackPanel>
                        </RadioButton>

                        <!-- Local Model Selection (shown when Local mode is selected) -->
                        <StackPanel x:Name="LocalModelPanel" Visibility="Collapsed" Margin="25,10,0,0">
                            <TextBlock Text="Select Local Model:" Style="{StaticResource LabelStyle}"/>
                            <ComboBox x:Name="LocalModelComboBox" 
                                      Style="{StaticResource ComboBoxStyle}"
                                      SelectionChanged="LocalModel_Changed"/>
                            <TextBlock x:Name="ModelInfoText" 
                                       Style="{StaticResource DescriptionStyle}"
                                       Foreground="#059669"/>
                        </StackPanel>
                    </StackPanel>
                </Border>

                <!-- API Configuration Section -->
                <Border Style="{StaticResource CardStyle}">
                    <StackPanel>
                        <TextBlock Text="ðŸ”‘ API Configuration" Style="{StaticResource SectionTitleStyle}"/>
                        
                        <TextBlock Text="OpenAI API Key:" Style="{StaticResource LabelStyle}"/>
                        <TextBox x:Name="ApiKeyTextBox" 
                                 Style="{StaticResource TextBoxStyle}"
                                 TextChanged="ApiKey_Changed"/>
                        <TextBlock Text="Required for Cloud mode and optional text cleaning in Local mode. Get your key from platform.openai.com" 
                                   Style="{StaticResource DescriptionStyle}"/>
                    </StackPanel>
                </Border>

                <!-- Text Cleaning Section -->
                <Border Style="{StaticResource CardStyle}">
                    <StackPanel>
                        <TextBlock Text="âœ¨ Text Processing" Style="{StaticResource SectionTitleStyle}"/>
                        
                        <CheckBox x:Name="EnableCleaningCheckBox" 
                                  Style="{StaticResource CheckBoxStyle}"
                                  Checked="TextCleaning_Changed"
                                  Unchecked="TextCleaning_Changed">
                            <StackPanel>
                                <TextBlock Text="Enable Text Cleaning" FontWeight="SemiBold" FontSize="14"/>
                                <TextBlock Text="Uses GPT to clean and format transcribed text (removes filler words, fixes grammar). Requires API key." 
                                           Style="{StaticResource DescriptionStyle}"
                                           Margin="0,3,0,0"/>
                            </StackPanel>
                        </CheckBox>
                    </StackPanel>
                </Border>

                <!-- Speed Test Section -->
                <Border Style="{StaticResource CardStyle}">
                    <StackPanel>
                        <TextBlock Text="âš¡ Performance Testing" Style="{StaticResource SectionTitleStyle}"/>
                        
                        <TextBlock Text="Compare the speed and accuracy of local vs cloud transcription on your hardware." 
                                   Style="{StaticResource DescriptionStyle}"
                                   Margin="0,0,0,15"/>
                        
                        <Button x:Name="SpeedTestButton" 
                                Content="ðŸ Run Speed Test" 
                                Style="{StaticResource AccentButtonStyle}"
                                Click="SpeedTest_Click"
                                HorizontalAlignment="Left"/>
                    </StackPanel>
                </Border>

                <!-- Info Section -->
                <Border Style="{StaticResource CardStyle}" Background="#EFF6FF">
                    <StackPanel>
                        <TextBlock Text="â„¹ï¸ Information" Style="{StaticResource SectionTitleStyle}" Foreground="#1E40AF"/>
                        
                        <TextBlock Style="{StaticResource DescriptionStyle}" Foreground="#1E3A8A">
                            <Run Text="â€¢ Hotkey:" FontWeight="SemiBold"/>
                            <Run Text="Press Ctrl+Shift+Q to start/stop recording"/>
                        </TextBlock>
                        
                        <TextBlock Style="{StaticResource DescriptionStyle}" Foreground="#1E3A8A">
                            <Run Text="â€¢ Models:" FontWeight="SemiBold"/>
                            <Run Text="Only downloaded models are shown. Use the download script to get more models."/>
                        </TextBlock>
                        
                        <TextBlock Style="{StaticResource DescriptionStyle}" Foreground="#1E3A8A">
                            <Run Text="â€¢ Settings:" FontWeight="SemiBold"/>
                            <Run Text="Click 'Save &amp; Close' to apply changes. Local models are validated before saving."/>
                        </TextBlock>
                    </StackPanel>
                </Border>

            </StackPanel>
        </ScrollViewer>

        <!-- Action Buttons -->
        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,20,0,0">
            <Button x:Name="SaveCloseButton"
                    Content="Save &amp; Close" 
                    Style="{StaticResource PrimaryButtonStyle}"
                    Click="SaveClose_Click"
                    Margin="0,0,10,0"/>
            <Button x:Name="CloseButton"
                    Content="Close" 
                    Style="{StaticResource SecondaryButtonStyle}"
                    Click="Close_Click"/>
        </StackPanel>
    </Grid>
</Window>
