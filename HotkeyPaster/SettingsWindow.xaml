<Window x:Class="TalkKeys.SettingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Settings - TalkKeys"
        Height="600"
        Width="500"
        WindowStartupLocation="CenterScreen"
        ResizeMode="CanResize"
        Background="{StaticResource BackgroundPrimary}">

    <Grid Margin="25">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <StackPanel Grid.Row="0" Margin="0,0,0,20">
            <TextBlock Text="Settings" Style="{StaticResource DisplayText}"/>
            <TextBlock Text="Configure your OpenAI API key for transcription"
                       Style="{StaticResource BodyText}"
                       Foreground="{StaticResource TextTertiary}"
                       Margin="0,5,0,0"/>
        </StackPanel>

        <!-- Settings Content -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
            <StackPanel>
                
                <!-- API Configuration Section -->
                <Border Style="{StaticResource Card}">
                    <StackPanel>
                        <TextBlock Text="API Configuration" Style="{StaticResource TitleText}"/>

                        <TextBlock Text="OpenAI API Key:" Style="{StaticResource LabelText}" Margin="0,10,0,5"/>
                        <TextBox x:Name="ApiKeyTextBox"
                                 TextChanged="ApiKey_Changed"
                                 Height="36"
                                 Padding="10,8"
                                 FontSize="13"
                                 FontFamily="Segoe UI"
                                 Background="{StaticResource BackgroundSecondary}"
                                 Foreground="{StaticResource TextPrimary}"
                                 BorderBrush="{StaticResource BorderInput}"
                                 BorderThickness="1"
                                 CaretBrush="{StaticResource AccentPrimary}"/>
                        <TextBlock Text="Required for transcription. Get your key from platform.openai.com"
                                   Style="{StaticResource CaptionText}" Foreground="{StaticResource TextTertiary}"
                                   Margin="0,5,0,0"/>
                    </StackPanel>
                </Border>

                <!-- Audio Configuration Section -->
                <Border Style="{StaticResource Card}" Margin="0,20,0,0">
                    <StackPanel>
                        <TextBlock Text="Audio Configuration" Style="{StaticResource TitleText}"/>

                        <TextBlock Text="Input Device:" Style="{StaticResource LabelText}" Margin="0,10,0,5"/>
                        <ComboBox x:Name="AudioDeviceComboBox"
                                  Style="{StaticResource ComboBoxStyle}"
                                  SelectionChanged="AudioDevice_Changed"
                                  Height="36"
                                  Padding="10,8"
                                  FontSize="13"
                                  FontFamily="Segoe UI"
                                  Background="{StaticResource BackgroundSecondary}"
                                  Foreground="{StaticResource TextPrimary}"
                                  BorderBrush="{StaticResource BorderInput}"
                                  BorderThickness="1">
                            <ComboBox.ItemTemplate>
                                <DataTemplate>
                                    <TextBlock Text="{Binding}" 
                                               TextTrimming="CharacterEllipsis" 
                                               ToolTip="{Binding}"
                                               Foreground="{StaticResource TextPrimary}"/>
                                </DataTemplate>
                            </ComboBox.ItemTemplate>
                            <ComboBox.Resources>
                                <SolidColorBrush x:Key="{x:Static SystemColors.WindowBrushKey}" Color="#242424"/>
                                <SolidColorBrush x:Key="{x:Static SystemColors.WindowTextBrushKey}" Color="#E5E7EB"/>
                                <SolidColorBrush x:Key="{x:Static SystemColors.HighlightBrushKey}" Color="#FF6B47"/>
                            </ComboBox.Resources>
                            <ComboBox.ItemContainerStyle>
                                <Style TargetType="ComboBoxItem">
                                    <Setter Property="Background" Value="{StaticResource BackgroundSecondary}"/>
                                    <Setter Property="Foreground" Value="{StaticResource TextPrimary}"/>
                                    <Setter Property="BorderThickness" Value="0"/>
                                    <Setter Property="Padding" Value="10,5"/>
                                    <Style.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter Property="Background" Value="{StaticResource BackgroundTertiary}"/>
                                        </Trigger>
                                        <Trigger Property="IsSelected" Value="True">
                                            <Setter Property="Background" Value="{StaticResource AccentPrimary}"/>
                                            <Setter Property="Foreground" Value="White"/>
                                        </Trigger>
                                    </Style.Triggers>
                                </Style>
                            </ComboBox.ItemContainerStyle>
                        </ComboBox>
                        <TextBlock Text="Select the microphone to use for recording."
                                   Style="{StaticResource CaptionText}" Foreground="{StaticResource TextTertiary}"
                                   Margin="0,5,0,0"/>
                    </StackPanel>
                </Border>

            </StackPanel>
        </ScrollViewer>

        <!-- Action Buttons -->
        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,20,0,0">
            <Button x:Name="SaveCloseButton"
                    Content="Save &amp; Close" 
                    Style="{StaticResource PrimaryButton}"
                    Click="SaveClose_Click"
                    Margin="0,0,10,0"/>
            <Button x:Name="CloseButton"
                    Content="Close" 
                    Style="{StaticResource SecondaryButton}"
                    Click="Close_Click"/>
        </StackPanel>
    </Grid>
</Window>
