<Window x:Class="TalkKeys.SettingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Settings - TalkKeys"
        Height="700"
        Width="800"
        WindowStartupLocation="CenterScreen"
        ResizeMode="CanResize"
        Background="#1A1A1A">

    <Window.Resources>
        <!-- Card Style -->
        <Style x:Key="CardStyle" TargetType="Border">
            <Setter Property="Background" Value="#242424"/>
            <Setter Property="CornerRadius" Value="12"/>
            <Setter Property="Padding" Value="25"/>
            <Setter Property="Margin" Value="0,0,0,20"/>
            <Setter Property="BorderBrush" Value="#333333"/>
            <Setter Property="BorderThickness" Value="1"/>
        </Style>

        <!-- Section Title Style -->
        <Style x:Key="SectionTitleStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="18"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Foreground" Value="#E5E7EB"/>
            <Setter Property="Margin" Value="0,0,0,15"/>
        </Style>

        <!-- Label Style -->
        <Style x:Key="LabelStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Foreground" Value="#D1D5DB"/>
            <Setter Property="Margin" Value="0,0,0,8"/>
        </Style>

        <!-- Description Style -->
        <Style x:Key="DescriptionStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="Foreground" Value="#9CA3AF"/>
            <Setter Property="TextWrapping" Value="Wrap"/>
            <Setter Property="Margin" Value="0,5,0,0"/>
        </Style>

        <!-- Radio Button Style -->
        <Style x:Key="RadioButtonStyle" TargetType="RadioButton">
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Foreground" Value="#D1D5DB"/>
            <Setter Property="Margin" Value="0,0,0,15"/>
            <Setter Property="Cursor" Value="Hand"/>
        </Style>

        <!-- CheckBox Style -->
        <Style x:Key="CheckBoxStyle" TargetType="CheckBox">
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Foreground" Value="#D1D5DB"/>
            <Setter Property="Margin" Value="0,0,0,10"/>
            <Setter Property="Cursor" Value="Hand"/>
        </Style>

        <!-- ComboBox Style -->
        <Style x:Key="ComboBoxStyle" TargetType="ComboBox">
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="Padding" Value="10,8"/>
            <Setter Property="Margin" Value="0,0,0,10"/>
            <Setter Property="Background" Value="#1A1A1A"/>
            <Setter Property="Foreground" Value="#E5E7EB"/>
            <Setter Property="BorderBrush" Value="#444444"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ComboBox">
                        <Grid>
                            <ToggleButton Name="ToggleButton"
                                          Grid.Column="2"
                                          Focusable="false"
                                          IsChecked="{Binding Path=IsDropDownOpen, Mode=TwoWay, RelativeSource={RelativeSource TemplatedParent}}"
                                          ClickMode="Press"
                                          Background="{TemplateBinding Background}"
                                          BorderBrush="{TemplateBinding BorderBrush}"
                                          BorderThickness="1"/>
                            <ContentPresenter Name="ContentSite"
                                              IsHitTestVisible="False"
                                              Content="{TemplateBinding SelectionBoxItem}"
                                              ContentTemplate="{TemplateBinding SelectionBoxItemTemplate}"
                                              ContentTemplateSelector="{TemplateBinding ItemTemplateSelector}"
                                              Margin="10,8"
                                              VerticalAlignment="Center"
                                              HorizontalAlignment="Left"
                                              TextBlock.Foreground="#E5E7EB"/>
                            <Popup Name="Popup"
                                   Placement="Bottom"
                                   IsOpen="{TemplateBinding IsDropDownOpen}"
                                   AllowsTransparency="True"
                                   Focusable="False"
                                   PopupAnimation="Slide">
                                <Grid Name="DropDown"
                                      SnapsToDevicePixels="True"
                                      MinWidth="{TemplateBinding ActualWidth}"
                                      MaxHeight="{TemplateBinding MaxDropDownHeight}">
                                    <Border Background="White"
                                            BorderThickness="1"
                                            BorderBrush="#CCCCCC">
                                        <ScrollViewer Margin="0" SnapsToDevicePixels="True">
                                            <StackPanel IsItemsHost="True" KeyboardNavigation.DirectionalNavigation="Contained"/>
                                        </ScrollViewer>
                                    </Border>
                                </Grid>
                            </Popup>
                        </Grid>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Setter Property="ItemContainerStyle">
                <Setter.Value>
                    <Style TargetType="ComboBoxItem">
                        <Setter Property="Padding" Value="10,8"/>
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="ComboBoxItem">
                                    <Border Name="Border"
                                            Background="White"
                                            BorderThickness="0"
                                            Padding="{TemplateBinding Padding}">
                                        <ContentPresenter>
                                            <ContentPresenter.Resources>
                                                <Style TargetType="TextBlock">
                                                    <Setter Property="Foreground" Value="#1A1A1A"/>
                                                </Style>
                                            </ContentPresenter.Resources>
                                        </ContentPresenter>
                                    </Border>
                                    <ControlTemplate.Triggers>
                                        <Trigger Property="IsHighlighted" Value="True">
                                            <Setter TargetName="Border" Property="Background" Value="#4F46E5"/>
                                            <Setter Property="Foreground" Value="White"/>
                                        </Trigger>
                                        <Trigger Property="IsSelected" Value="True">
                                            <Setter TargetName="Border" Property="Background" Value="#6366F1"/>
                                            <Setter Property="Foreground" Value="White"/>
                                        </Trigger>
                                    </ControlTemplate.Triggers>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                    </Style>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- TextBox Style -->
        <Style x:Key="TextBoxStyle" TargetType="TextBox">
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="Padding" Value="10,8"/>
            <Setter Property="Margin" Value="0,0,0,10"/>
            <Setter Property="Background" Value="#1A1A1A"/>
            <Setter Property="Foreground" Value="#E5E7EB"/>
            <Setter Property="BorderBrush" Value="#444444"/>
            <Setter Property="BorderThickness" Value="1"/>
        </Style>

        <!-- Button Style -->
        <Style x:Key="PrimaryButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#4F46E5"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Padding" Value="24,12"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="6" 
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#6366F1"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="SecondaryButtonStyle" TargetType="Button" BasedOn="{StaticResource PrimaryButtonStyle}">
            <Setter Property="Background" Value="#6B7280"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#9CA3AF"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="AccentButtonStyle" TargetType="Button" BasedOn="{StaticResource PrimaryButtonStyle}">
            <Setter Property="Background" Value="#10B981"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#34D399"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>

    <Grid Margin="25">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <StackPanel Grid.Row="0" Margin="0,0,0,20">
            <TextBlock Text="âš™ï¸ Settings" FontSize="28" FontWeight="Bold" Foreground="#E5E7EB"/>
            <TextBlock Text="Configure transcription and application preferences"
                       FontSize="14"
                       Foreground="#9CA3AF" 
                       Margin="0,5,0,0"/>
        </StackPanel>

        <!-- Settings Content -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
            <StackPanel>
                
                <!-- Pipeline Configuration Section -->
                <Border Style="{StaticResource CardStyle}">
                    <StackPanel>
                        <TextBlock Text="ðŸŽ¯ Pipeline Configuration" Style="{StaticResource SectionTitleStyle}"/>
                        <TextBlock Text="Choose the processing pipeline that works best for your needs:"
                                   Style="{StaticResource DescriptionStyle}"
                                   Margin="0,0,0,12"/>

                        <RadioButton x:Name="MaximumQualityRadio"
                                     GroupName="Pipeline"
                                     Style="{StaticResource RadioButtonStyle}"
                                     Checked="PipelinePreset_Changed">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                <StackPanel Grid.Column="0">
                                    <TextBlock Text="ðŸ† Maximum Quality" FontWeight="SemiBold" FontSize="14"/>
                                    <TextBlock Text="Best accuracy â€¢ Noise reduction + Silence removal + Cloud processing"
                                               Style="{StaticResource DescriptionStyle}"/>
                                </StackPanel>
                                <TextBlock x:Name="MaximumQualityResult"
                                           Grid.Column="1"
                                           Visibility="Collapsed"
                                           FontSize="12"
                                           FontWeight="SemiBold"
                                           Foreground="#10B981"
                                           Margin="10,0,0,0"
                                           VerticalAlignment="Center"/>
                            </Grid>
                        </RadioButton>

                        <RadioButton x:Name="BalancedQualityRadio"
                                     GroupName="Pipeline"
                                     Style="{StaticResource RadioButtonStyle}"
                                     Checked="PipelinePreset_Changed">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                <StackPanel Grid.Column="0">
                                    <TextBlock Text="âš–ï¸ Balanced Quality" FontWeight="SemiBold" FontSize="14"/>
                                    <TextBlock Text="Good accuracy â€¢ Noise reduction + Cloud processing â€¢ Faster than maximum"
                                               Style="{StaticResource DescriptionStyle}"/>
                                </StackPanel>
                                <TextBlock x:Name="BalancedQualityResult"
                                           Grid.Column="1"
                                           Visibility="Collapsed"
                                           FontSize="12"
                                           FontWeight="SemiBold"
                                           Foreground="#10B981"
                                           Margin="10,0,0,0"
                                           VerticalAlignment="Center"/>
                            </Grid>
                        </RadioButton>

                        <RadioButton x:Name="FastCloudRadio"
                                     GroupName="Pipeline"
                                     Style="{StaticResource RadioButtonStyle}"
                                     Checked="PipelinePreset_Changed">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                <StackPanel Grid.Column="0">
                                    <TextBlock Text="âš¡ Fast Cloud" FontWeight="SemiBold" FontSize="14"/>
                                    <TextBlock Text="Fastest cloud option â€¢ No preprocessing â€¢ Best for quiet environments"
                                               Style="{StaticResource DescriptionStyle}"/>
                                </StackPanel>
                                <TextBlock x:Name="FastCloudResult"
                                           Grid.Column="1"
                                           Visibility="Collapsed"
                                           FontSize="12"
                                           FontWeight="SemiBold"
                                           Foreground="#10B981"
                                           Margin="10,0,0,0"
                                           VerticalAlignment="Center"/>
                            </Grid>
                        </RadioButton>

                        <RadioButton x:Name="MaximumPrivacyRadio"
                                     GroupName="Pipeline"
                                     Style="{StaticResource RadioButtonStyle}"
                                     Checked="PipelinePreset_Changed">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                <StackPanel Grid.Column="0">
                                    <TextBlock Text="ðŸ”’ Maximum Privacy" FontWeight="SemiBold" FontSize="14"/>
                                    <TextBlock Text="Best for privacy â€¢ Noise reduction + Silence removal + Local processing â€¢ Runs entirely on your device"
                                               Style="{StaticResource DescriptionStyle}"/>
                                </StackPanel>
                                <TextBlock x:Name="MaximumPrivacyResult"
                                           Grid.Column="1"
                                           Visibility="Collapsed"
                                           FontSize="12"
                                           FontWeight="SemiBold"
                                           Foreground="#10B981"
                                           Margin="10,0,0,0"
                                           VerticalAlignment="Center"/>
                            </Grid>
                        </RadioButton>

                        <RadioButton x:Name="FastLocalRadio"
                                     GroupName="Pipeline"
                                     Style="{StaticResource RadioButtonStyle}"
                                     Checked="PipelinePreset_Changed">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                <StackPanel Grid.Column="0">
                                    <TextBlock Text="ðŸš€ Fast Local" FontWeight="SemiBold" FontSize="14"/>
                                    <TextBlock Text="Fastest offline option â€¢ Local processing only â€¢ Completely private"
                                               Style="{StaticResource DescriptionStyle}"/>
                                </StackPanel>
                                <TextBlock x:Name="FastLocalResult"
                                           Grid.Column="1"
                                           Visibility="Collapsed"
                                           FontSize="12"
                                           FontWeight="SemiBold"
                                           Foreground="#10B981"
                                           Margin="10,0,0,0"
                                           VerticalAlignment="Center"/>
                            </Grid>
                        </RadioButton>

                        <!-- Local Model Selection (shown for privacy options) -->
                        <StackPanel x:Name="LocalModelPanel" Visibility="Collapsed" Margin="0,10,0,0">
                            <TextBlock Text="Select Local Model:" Style="{StaticResource LabelStyle}"/>
                            <ComboBox x:Name="LocalModelComboBox"
                                      Style="{StaticResource ComboBoxStyle}"
                                      SelectionChanged="LocalModel_Changed"/>
                            <TextBlock x:Name="ModelInfoText"
                                       Style="{StaticResource DescriptionStyle}"
                                       Foreground="#34D399"/>

                            <!-- Download Models Button -->
                            <Button x:Name="DownloadModelsButton"
                                    Content="ðŸ“¥ Download More Models"
                                    Click="DownloadModels_Click"
                                    Style="{StaticResource SecondaryButtonStyle}"
                                    HorizontalAlignment="Stretch"
                                    Margin="0,15,0,0"/>
                        </StackPanel>

                        <Button x:Name="DeathmatchButton"
                                Content="ðŸ§ª Pipeline Benchmark - Test &amp; Compare All"
                                Style="{StaticResource PrimaryButtonStyle}"
                                Click="Deathmatch_Click"
                                Margin="0,15,0,0"
                                HorizontalAlignment="Stretch"/>

                        <TextBlock Text="ðŸ’¡ Run the benchmark to test all configurations and find the best one for your needs!"
                                   Style="{StaticResource DescriptionStyle}"
                                   Foreground="#34D399"
                                   FontStyle="Italic"
                                   Margin="0,8,0,0"/>
                    </StackPanel>
                </Border>

                <!-- API Configuration Section -->
                <Border Style="{StaticResource CardStyle}">
                    <StackPanel>
                        <TextBlock Text="ðŸ”‘ API Configuration" Style="{StaticResource SectionTitleStyle}"/>

                        <TextBlock Text="OpenAI API Key:" Style="{StaticResource LabelStyle}"/>
                        <TextBox x:Name="ApiKeyTextBox"
                                 Style="{StaticResource TextBoxStyle}"
                                 TextChanged="ApiKey_Changed"/>
                        <TextBlock Text="Required for Cloud pipelines. Get your key from platform.openai.com"
                                   Style="{StaticResource DescriptionStyle}"/>
                    </StackPanel>
                </Border>

            </StackPanel>
        </ScrollViewer>

        <!-- Action Buttons -->
        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,20,0,0">
            <Button x:Name="SaveCloseButton"
                    Content="Save &amp; Close" 
                    Style="{StaticResource PrimaryButtonStyle}"
                    Click="SaveClose_Click"
                    Margin="0,0,10,0"/>
            <Button x:Name="CloseButton"
                    Content="Close" 
                    Style="{StaticResource SecondaryButtonStyle}"
                    Click="Close_Click"/>
        </StackPanel>
    </Grid>
</Window>
