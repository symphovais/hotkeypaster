<Window x:Class="TalkKeys.SettingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Settings - TalkKeys"
        Height="520"
        Width="700"
        WindowStartupLocation="CenterScreen"
        WindowStyle="None"
        ResizeMode="NoResize"
        AllowsTransparency="True"
        Background="Transparent"
        MouseLeftButtonDown="Window_MouseLeftButtonDown">

    <Window.Resources>
        <!-- Sidebar Navigation Button Style -->
        <Style x:Key="SidebarButtonStyle" TargetType="RadioButton">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="RadioButton">
                        <Border x:Name="bg"
                                Background="Transparent"
                                CornerRadius="8"
                                Padding="12,10"
                                Margin="4,2"
                                Cursor="Hand">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock x:Name="icon"
                                           Text="{Binding Tag, RelativeSource={RelativeSource TemplatedParent}}"
                                           FontSize="14"
                                           Width="20"
                                           Foreground="#6B7280"
                                           VerticalAlignment="Center"/>
                                <TextBlock x:Name="label"
                                           Text="{TemplateBinding Content}"
                                           FontSize="14"
                                           FontWeight="Medium"
                                           Foreground="#374151"
                                           Margin="10,0,0,0"
                                           VerticalAlignment="Center"/>
                            </StackPanel>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsChecked" Value="True">
                                <Setter TargetName="bg" Property="Background" Value="#F3E8FF"/>
                                <Setter TargetName="icon" Property="Foreground" Value="#7C3AED"/>
                                <Setter TargetName="label" Property="Foreground" Value="#7C3AED"/>
                            </Trigger>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="bg" Property="Background" Value="#F9FAFB"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Settings Row Button Style -->
        <Style x:Key="SettingsRowButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#F3F4F6"/>
            <Setter Property="Foreground" Value="#374151"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="FontWeight" Value="Medium"/>
            <Setter Property="Padding" Value="16,8"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="bg"
                                Background="{TemplateBinding Background}"
                                CornerRadius="8"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="bg" Property="Background" Value="#E5E7EB"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Toggle Switch Style -->
        <Style x:Key="ToggleSwitchStyle" TargetType="CheckBox">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="CheckBox">
                        <Grid Cursor="Hand" Width="44" Height="24">
                            <Border x:Name="track"
                                    Width="44"
                                    Height="24"
                                    CornerRadius="12"
                                    Background="#E5E7EB"/>
                            <Border x:Name="thumbOff"
                                    Width="20"
                                    Height="20"
                                    CornerRadius="10"
                                    Background="White"
                                    HorizontalAlignment="Left"
                                    Margin="2,0,0,0">
                                <Border.Effect>
                                    <DropShadowEffect BlurRadius="4" ShadowDepth="1" Opacity="0.2"/>
                                </Border.Effect>
                            </Border>
                            <Border x:Name="thumbOn"
                                    Width="20"
                                    Height="20"
                                    CornerRadius="10"
                                    Background="White"
                                    HorizontalAlignment="Right"
                                    Margin="0,0,2,0"
                                    Visibility="Collapsed">
                                <Border.Effect>
                                    <DropShadowEffect BlurRadius="4" ShadowDepth="1" Opacity="0.2"/>
                                </Border.Effect>
                            </Border>
                        </Grid>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsChecked" Value="True">
                                <Setter TargetName="track" Property="Background" Value="#10B981"/>
                                <Setter TargetName="thumbOff" Property="Visibility" Value="Collapsed"/>
                                <Setter TargetName="thumbOn" Property="Visibility" Value="Visible"/>
                            </Trigger>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="track" Property="Opacity" Value="0.9"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <!-- Main Container -->
    <Border CornerRadius="12" Background="White" BorderBrush="#E5E7EB" BorderThickness="1">
        <Border.Effect>
            <DropShadowEffect BlurRadius="40" ShadowDepth="8" Opacity="0.15" Color="#000000"/>
        </Border.Effect>

        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="200"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Left Sidebar -->
            <Border Grid.Column="0" Background="#FAFAFA" CornerRadius="12,0,0,12">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <!-- Sidebar Header -->
                    <StackPanel Grid.Row="0" Margin="16,20,16,8">
                        <TextBlock Text="SETTINGS"
                                   FontSize="11"
                                   FontWeight="SemiBold"
                                   Foreground="#9CA3AF"/>
                    </StackPanel>

                    <!-- Navigation Items -->
                    <StackPanel Grid.Row="1" Margin="8,8,8,0">
                        <RadioButton x:Name="GeneralTab"
                                     Content="General"
                                     Tag="&#xE713;"
                                     Style="{StaticResource SidebarButtonStyle}"
                                     GroupName="SettingsTabs"
                                     IsChecked="True"
                                     Checked="Tab_Changed"/>
                        <RadioButton x:Name="TriggersTab"
                                     Content="Triggers"
                                     Tag="&#xE765;"
                                     Style="{StaticResource SidebarButtonStyle}"
                                     GroupName="SettingsTabs"
                                     Checked="Tab_Changed"/>
                    </StackPanel>

                    <!-- Version footer -->
                    <StackPanel Grid.Row="2" Margin="16,0,16,16">
                        <TextBlock x:Name="VersionText"
                                   Text="TalkKeys v1.0"
                                   FontSize="11"
                                   Foreground="#9CA3AF"/>
                    </StackPanel>
                </Grid>
            </Border>

            <!-- Main Content Area -->
            <Grid Grid.Column="1">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- Header with close button -->
                <Grid Grid.Row="0" Margin="0,12,12,0">
                    <Button Content="&#xE711;"
                            FontFamily="Segoe MDL2 Assets"
                            HorizontalAlignment="Right"
                            VerticalAlignment="Top"
                            Width="32"
                            Height="32"
                            FontSize="10"
                            Background="Transparent"
                            Foreground="#9CA3AF"
                            BorderThickness="0"
                            Cursor="Hand"
                            Click="Close_Click">
                        <Button.Style>
                            <Style TargetType="Button">
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="Button">
                                            <Border x:Name="bg" Background="{TemplateBinding Background}" CornerRadius="6">
                                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                            </Border>
                                            <ControlTemplate.Triggers>
                                                <Trigger Property="IsMouseOver" Value="True">
                                                    <Setter TargetName="bg" Property="Background" Value="#F3F4F6"/>
                                                    <Setter Property="Foreground" Value="#374151"/>
                                                </Trigger>
                                            </ControlTemplate.Triggers>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                            </Style>
                        </Button.Style>
                    </Button>
                </Grid>

                <!-- Content -->
                <Grid Grid.Row="1">
                    <!-- General Tab Content -->
                    <StackPanel x:Name="GeneralTabContent" Margin="28,8,28,0">
                            <!-- Page Title -->
                            <TextBlock Text="General"
                                       FontSize="22"
                                       FontWeight="SemiBold"
                                       Foreground="#111827"
                                       Margin="0,0,0,16"/>

                            <!-- API Key Card -->
                            <Border x:Name="ApiKeyCard" Background="#FAFAFA" CornerRadius="10" Padding="16" Margin="0,0,0,10">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>
                                    <StackPanel Grid.Column="0" VerticalAlignment="Center">
                                        <TextBlock x:Name="ApiKeyLabel"
                                                   Text="Groq API Key"
                                                   FontSize="15"
                                                   FontWeight="Medium"
                                                   Foreground="#111827"/>
                                        <TextBlock x:Name="ApiKeyHint"
                                                   Text="Required for transcription"
                                                   FontSize="13"
                                                   Foreground="#6B7280"
                                                   Margin="0,4,0,0"/>
                                    </StackPanel>
                                    <Button Grid.Column="1"
                                            Content="Change"
                                            Style="{StaticResource SettingsRowButtonStyle}"
                                            Click="ChangeApiKey_Click"/>
                                </Grid>
                            </Border>

                            <!-- Microphone Card -->
                            <Border Background="#FAFAFA" CornerRadius="10" Padding="16" Margin="0,0,0,10">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>
                                    <StackPanel Grid.Column="0" VerticalAlignment="Center">
                                        <TextBlock Text="Microphone"
                                                   FontSize="15"
                                                   FontWeight="Medium"
                                                   Foreground="#111827"/>
                                        <TextBlock x:Name="MicrophoneHint"
                                                   Text="Default device"
                                                   FontSize="13"
                                                   Foreground="#6B7280"
                                                   Margin="0,4,0,0"
                                                   TextTrimming="CharacterEllipsis"
                                                   MaxWidth="350"/>
                                    </StackPanel>
                                    <Button Grid.Column="1"
                                            Content="Change"
                                            Style="{StaticResource SettingsRowButtonStyle}"
                                            Click="ChangeMicrophone_Click"/>
                                </Grid>
                            </Border>

                            <!-- System Section Title -->
                            <TextBlock Text="System"
                                       FontSize="12"
                                       FontWeight="SemiBold"
                                       Foreground="#9CA3AF"
                                       Margin="0,8,0,8"/>

                            <!-- Start with Windows Toggle -->
                            <Border Background="#FAFAFA" CornerRadius="10" Padding="16">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>
                                    <StackPanel Grid.Column="0" VerticalAlignment="Center">
                                        <TextBlock Text="Launch at startup"
                                                   FontSize="15"
                                                   FontWeight="Medium"
                                                   Foreground="#111827"/>
                                        <TextBlock Text="Start TalkKeys when you sign in to Windows"
                                                   FontSize="13"
                                                   Foreground="#6B7280"
                                                   Margin="0,4,0,0"/>
                                    </StackPanel>
                                    <CheckBox x:Name="StartWithWindowsCheckBox"
                                              Grid.Column="1"
                                              Style="{StaticResource ToggleSwitchStyle}"
                                              Checked="StartWithWindows_Changed"
                                              Unchecked="StartWithWindows_Changed"
                                              VerticalAlignment="Center"/>
                                </Grid>
                            </Border>
                    </StackPanel>

                    <!-- Triggers Tab Content -->
                    <StackPanel x:Name="TriggersTabContent"
                                  Visibility="Collapsed"
                                  Margin="28,8,28,0">
                            <!-- Page Title -->
                            <TextBlock Text="Triggers"
                                       FontSize="22"
                                       FontWeight="SemiBold"
                                       Foreground="#111827"
                                       Margin="0,0,0,16"/>

                            <!-- Plugin tabs -->
                            <StackPanel x:Name="TriggerPluginTabsPanel" Orientation="Horizontal" Margin="0,0,0,12">
                                <!-- Plugin buttons added dynamically -->
                            </StackPanel>

                            <!-- Plugin content area -->
                            <Border x:Name="TriggerPluginContentArea"
                                    Background="#FAFAFA"
                                    CornerRadius="10"
                                    Padding="16"
                                    MinHeight="280">
                                <!-- Plugin settings panels added dynamically -->
                            </Border>
                    </StackPanel>
                </Grid>

                <!-- Footer with Save/Cancel -->
                <Border Grid.Row="2" BorderBrush="#F3F4F6" BorderThickness="0,1,0,0">
                    <StackPanel Orientation="Horizontal"
                                HorizontalAlignment="Right"
                                Margin="28,12,28,12">
                        <Button Content="Cancel"
                                Click="Close_Click"
                                Width="90"
                                Height="38"
                                FontSize="14"
                                FontWeight="Medium"
                                Background="Transparent"
                                Foreground="#6B7280"
                                BorderThickness="1"
                                BorderBrush="#E5E7EB"
                                Cursor="Hand"
                                Margin="0,0,12,0">
                            <Button.Style>
                                <Style TargetType="Button">
                                    <Setter Property="Template">
                                        <Setter.Value>
                                            <ControlTemplate TargetType="Button">
                                                <Border x:Name="bg"
                                                        Background="{TemplateBinding Background}"
                                                        BorderBrush="{TemplateBinding BorderBrush}"
                                                        BorderThickness="{TemplateBinding BorderThickness}"
                                                        CornerRadius="8">
                                                    <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                                </Border>
                                                <ControlTemplate.Triggers>
                                                    <Trigger Property="IsMouseOver" Value="True">
                                                        <Setter TargetName="bg" Property="Background" Value="#F9FAFB"/>
                                                        <Setter TargetName="bg" Property="BorderBrush" Value="#D1D5DB"/>
                                                    </Trigger>
                                                </ControlTemplate.Triggers>
                                            </ControlTemplate>
                                        </Setter.Value>
                                    </Setter>
                                </Style>
                            </Button.Style>
                        </Button>
                        <Button Content="Save Changes"
                                Click="SaveClose_Click"
                                Width="120"
                                Height="38"
                                FontSize="14"
                                FontWeight="Medium"
                                Background="#7C3AED"
                                Foreground="White"
                                BorderThickness="0"
                                Cursor="Hand">
                            <Button.Style>
                                <Style TargetType="Button">
                                    <Setter Property="Template">
                                        <Setter.Value>
                                            <ControlTemplate TargetType="Button">
                                                <Border x:Name="bg" Background="{TemplateBinding Background}" CornerRadius="8">
                                                    <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                                </Border>
                                                <ControlTemplate.Triggers>
                                                    <Trigger Property="IsMouseOver" Value="True">
                                                        <Setter TargetName="bg" Property="Background" Value="#6D28D9"/>
                                                    </Trigger>
                                                </ControlTemplate.Triggers>
                                            </ControlTemplate>
                                        </Setter.Value>
                                    </Setter>
                                </Style>
                            </Button.Style>
                        </Button>
                    </StackPanel>
                </Border>
            </Grid>
        </Grid>
    </Border>

</Window>
