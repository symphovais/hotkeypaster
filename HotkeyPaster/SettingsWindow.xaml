<Window x:Class="TalkKeys.SettingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Settings - TalkKeys"
        Height="580"
        Width="900"
        WindowStartupLocation="CenterScreen"
        WindowStyle="None"
        ResizeMode="NoResize"
        AllowsTransparency="True"
        Background="Transparent"
        MouseLeftButtonDown="Window_MouseLeftButtonDown">

    <Window.Resources>
        <!-- Sidebar Navigation Button Style -->
        <Style x:Key="SidebarButtonStyle" TargetType="RadioButton">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="RadioButton">
                        <Border x:Name="bg"
                                Background="Transparent"
                                CornerRadius="8"
                                Padding="12,10"
                                Margin="0,1"
                                Cursor="Hand">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock x:Name="icon"
                                           Text="{Binding Tag, RelativeSource={RelativeSource TemplatedParent}}"
                                           FontSize="15"
                                           Width="22"
                                           Foreground="#6B7280"
                                           VerticalAlignment="Center"/>
                                <TextBlock x:Name="label"
                                           Text="{TemplateBinding Content}"
                                           FontSize="13"
                                           FontWeight="Medium"
                                           Foreground="#374151"
                                           Margin="10,0,0,0"
                                           VerticalAlignment="Center"/>
                            </StackPanel>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsChecked" Value="True">
                                <Setter TargetName="bg" Property="Background" Value="#F3F4F6"/>
                                <Setter TargetName="label" Property="Foreground" Value="#111827"/>
                                <Setter TargetName="label" Property="FontWeight" Value="SemiBold"/>
                            </Trigger>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="bg" Property="Background" Value="#F9FAFB"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Compact Settings Card Style -->
        <Style x:Key="SettingsCardStyle" TargetType="Border">
            <Setter Property="Background" Value="White"/>
            <Setter Property="BorderBrush" Value="#E5E7EB"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="CornerRadius" Value="10"/>
            <Setter Property="Padding" Value="16,14"/>
            <Setter Property="Margin" Value="0,0,0,12"/>
        </Style>

        <!-- Settings Row Button Style -->
        <Style x:Key="SettingsRowButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#F3F4F6"/>
            <Setter Property="Foreground" Value="#374151"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="FontWeight" Value="Medium"/>
            <Setter Property="Padding" Value="14,8"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="bg"
                                Background="{TemplateBinding Background}"
                                CornerRadius="6"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="bg" Property="Background" Value="#E5E7EB"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Primary Button Style -->
        <Style x:Key="PrimaryButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#7C3AED"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Padding" Value="18,10"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="bg"
                                Background="{TemplateBinding Background}"
                                CornerRadius="6"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="bg" Property="Background" Value="#6D28D9"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Toggle Switch Style -->
        <Style x:Key="ToggleSwitchStyle" TargetType="CheckBox">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="CheckBox">
                        <Grid Cursor="Hand" Width="40" Height="22">
                            <Border x:Name="track"
                                    Width="40"
                                    Height="22"
                                    CornerRadius="11"
                                    Background="#E5E7EB"/>
                            <Border x:Name="thumbOff"
                                    Width="18"
                                    Height="18"
                                    CornerRadius="9"
                                    Background="White"
                                    HorizontalAlignment="Left"
                                    Margin="2,0,0,0">
                                <Border.Effect>
                                    <DropShadowEffect BlurRadius="3" ShadowDepth="1" Opacity="0.15"/>
                                </Border.Effect>
                            </Border>
                            <Border x:Name="thumbOn"
                                    Width="18"
                                    Height="18"
                                    CornerRadius="9"
                                    Background="White"
                                    HorizontalAlignment="Right"
                                    Margin="0,0,2,0"
                                    Visibility="Collapsed">
                                <Border.Effect>
                                    <DropShadowEffect BlurRadius="3" ShadowDepth="1" Opacity="0.15"/>
                                </Border.Effect>
                            </Border>
                        </Grid>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsChecked" Value="True">
                                <Setter TargetName="track" Property="Background" Value="#7C3AED"/>
                                <Setter TargetName="thumbOff" Property="Visibility" Value="Collapsed"/>
                                <Setter TargetName="thumbOn" Property="Visibility" Value="Visible"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Hotkey TextBox Style -->
        <Style x:Key="HotkeyTextBoxStyle" TargetType="TextBox">
            <Setter Property="Background" Value="#F9FAFB"/>
            <Setter Property="Foreground" Value="#111827"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="BorderBrush" Value="#E5E7EB"/>
            <Setter Property="Padding" Value="12,10"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="FontWeight" Value="Medium"/>
            <Setter Property="IsReadOnly" Value="True"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TextBox">
                        <Border x:Name="border"
                                Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="6">
                            <ScrollViewer x:Name="PART_ContentHost" Padding="{TemplateBinding Padding}"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsFocused" Value="True">
                                <Setter TargetName="border" Property="BorderBrush" Value="#7C3AED"/>
                                <Setter TargetName="border" Property="Background" Value="White"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Modern Slim ScrollBar Thumb -->
        <Style x:Key="SlimScrollBarThumb" TargetType="Thumb">
            <Setter Property="OverridesDefaultStyle" Value="True"/>
            <Setter Property="IsTabStop" Value="False"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Thumb">
                        <Border x:Name="thumbBorder"
                                Background="#C4C4C4"
                                CornerRadius="3"
                                Margin="1,0"/>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="thumbBorder" Property="Background" Value="#A0A0A0"/>
                            </Trigger>
                            <Trigger Property="IsDragging" Value="True">
                                <Setter TargetName="thumbBorder" Property="Background" Value="#808080"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Modern Slim Vertical ScrollBar -->
        <Style x:Key="SlimScrollBarStyle" TargetType="ScrollBar">
            <Setter Property="OverridesDefaultStyle" Value="True"/>
            <Setter Property="Width" Value="8"/>
            <Setter Property="MinWidth" Value="8"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ScrollBar">
                        <Grid Background="Transparent">
                            <Track x:Name="PART_Track" IsDirectionReversed="True">
                                <Track.Thumb>
                                    <Thumb Style="{StaticResource SlimScrollBarThumb}"/>
                                </Track.Thumb>
                            </Track>
                        </Grid>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Modern ScrollViewer Style -->
        <Style x:Key="SlimScrollViewerStyle" TargetType="ScrollViewer">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ScrollViewer">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <ScrollContentPresenter Grid.Column="0" Margin="{TemplateBinding Padding}"/>
                            <ScrollBar x:Name="PART_VerticalScrollBar"
                                       Grid.Column="1"
                                       Style="{StaticResource SlimScrollBarStyle}"
                                       Value="{TemplateBinding VerticalOffset}"
                                       Maximum="{TemplateBinding ScrollableHeight}"
                                       ViewportSize="{TemplateBinding ViewportHeight}"
                                       Visibility="{TemplateBinding ComputedVerticalScrollBarVisibility}"
                                       Margin="4,0,2,0"
                                       Opacity="0.6"/>
                        </Grid>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="PART_VerticalScrollBar" Property="Opacity" Value="1"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <!-- Main Container -->
    <Border CornerRadius="12" Background="White" BorderBrush="#E5E7EB" BorderThickness="1">
        <Border.Effect>
            <DropShadowEffect BlurRadius="40" ShadowDepth="8" Opacity="0.12" Color="#000000"/>
        </Border.Effect>

        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="220"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Left Sidebar -->
            <Border Grid.Column="0" Background="#FAFAFA" CornerRadius="12,0,0,12" BorderBrush="#E5E7EB" BorderThickness="0,0,1,0">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <!-- Logo/Brand -->
                    <StackPanel Grid.Row="0" Margin="16,20,16,16">
                        <StackPanel Orientation="Horizontal">
                            <Image Source="icon.ico" Width="32" Height="32" RenderOptions.BitmapScalingMode="HighQuality"/>
                            <StackPanel Margin="10,0,0,0" VerticalAlignment="Center">
                                <TextBlock Text="TalkKeys"
                                           FontSize="15"
                                           FontWeight="Bold"
                                           Foreground="#111827"/>
                                <TextBlock x:Name="VersionText"
                                           Text="v1.0.0"
                                           FontSize="10"
                                           Foreground="#9CA3AF"/>
                            </StackPanel>
                        </StackPanel>
                    </StackPanel>

                    <!-- Navigation -->
                    <StackPanel Grid.Row="1" Margin="10,0,10,0">
                        <TextBlock Text="FEATURES"
                                   FontSize="10"
                                   FontWeight="SemiBold"
                                   Foreground="#9CA3AF"
                                   Margin="6,0,0,6"/>

                        <RadioButton x:Name="TalkKeysTab"
                                     Content="Voice to Text"
                                     Tag="ðŸŽ™ï¸"
                                     Style="{StaticResource SidebarButtonStyle}"
                                     GroupName="SettingsTabs"
                                     IsChecked="True"
                                     Checked="Tab_Changed"/>
                        <RadioButton x:Name="ExplainerTab"
                                     Content="Explainer"
                                     Tag="ðŸ’¡"
                                     Style="{StaticResource SidebarButtonStyle}"
                                     GroupName="SettingsTabs"
                                     Checked="Tab_Changed"/>

                        <TextBlock Text="SYSTEM"
                                   FontSize="10"
                                   FontWeight="SemiBold"
                                   Foreground="#9CA3AF"
                                   Margin="6,16,0,6"/>

                        <RadioButton x:Name="GeneralTab"
                                     Content="General"
                                     Tag="âš™ï¸"
                                     Style="{StaticResource SidebarButtonStyle}"
                                     GroupName="SettingsTabs"
                                     Checked="Tab_Changed"/>
                    </StackPanel>

                    <!-- User Account Section -->
                    <Border Grid.Row="2" Margin="10,0,10,12">
                        <Border x:Name="AccountCard"
                                Background="White"
                                CornerRadius="10"
                                Padding="10"
                                BorderBrush="#E5E7EB"
                                BorderThickness="1"
                                Cursor="Hand"
                                MouseLeftButtonDown="AccountCard_Click">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>

                                <!-- Avatar -->
                                <Border Grid.Column="0" Width="36" Height="36" CornerRadius="18" Background="#F3E8FF">
                                    <TextBlock x:Name="AccountInitial"
                                               Text="T"
                                               FontSize="14"
                                               FontWeight="SemiBold"
                                               Foreground="#7C3AED"
                                               HorizontalAlignment="Center"
                                               VerticalAlignment="Center"/>
                                </Border>

                                <!-- Account Info -->
                                <StackPanel Grid.Column="1" Margin="10,0,0,0" VerticalAlignment="Center">
                                    <TextBlock x:Name="AccountName"
                                               Text="TalkKeys Account"
                                               FontSize="12"
                                               FontWeight="SemiBold"
                                               Foreground="#111827"
                                               TextTrimming="CharacterEllipsis"/>
                                    <TextBlock x:Name="AccountEmail"
                                               Text="Click to sign in"
                                               FontSize="10"
                                               Foreground="#6B7280"
                                               TextTrimming="CharacterEllipsis"/>
                                </StackPanel>

                                <!-- Arrow Icon -->
                                <TextBlock Grid.Column="2"
                                           Text="â€º"
                                           FontSize="16"
                                           Foreground="#9CA3AF"
                                           VerticalAlignment="Center"/>
                            </Grid>
                        </Border>
                    </Border>
                </Grid>
            </Border>

            <!-- Main Content Area -->
            <Grid Grid.Column="1">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- Header -->
                <Grid Grid.Row="0" Margin="24,16,16,0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <StackPanel Grid.Column="0">
                        <TextBlock x:Name="PageTitle"
                                   Text="Settings"
                                   FontSize="22"
                                   FontWeight="Bold"
                                   Foreground="#111827"/>
                        <TextBlock x:Name="PageSubtitle"
                                   Text="Manage your preferences"
                                   FontSize="13"
                                   Foreground="#6B7280"
                                   Margin="0,2,0,0"/>
                    </StackPanel>

                    <!-- Close Button -->
                    <Button Grid.Column="1"
                            Content="&#xE711;"
                            FontFamily="Segoe MDL2 Assets"
                            Width="32"
                            Height="32"
                            FontSize="10"
                            Background="Transparent"
                            Foreground="#9CA3AF"
                            BorderThickness="0"
                            Cursor="Hand"
                            Click="Close_Click"
                            VerticalAlignment="Top">
                        <Button.Style>
                            <Style TargetType="Button">
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="Button">
                                            <Border x:Name="bg" Background="{TemplateBinding Background}" CornerRadius="6">
                                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                            </Border>
                                            <ControlTemplate.Triggers>
                                                <Trigger Property="IsMouseOver" Value="True">
                                                    <Setter TargetName="bg" Property="Background" Value="#F3F4F6"/>
                                                    <Setter Property="Foreground" Value="#374151"/>
                                                </Trigger>
                                            </ControlTemplate.Triggers>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                            </Style>
                        </Button.Style>
                    </Button>
                </Grid>

                <!-- Content Area -->
                <ScrollViewer Grid.Row="1" Margin="24,16,24,0"
                              Style="{StaticResource SlimScrollViewerStyle}"
                              VerticalScrollBarVisibility="Auto"
                              HorizontalScrollBarVisibility="Disabled">
                    <Grid>
                    <!-- Voice to Text Tab Content -->
                    <StackPanel x:Name="TalkKeysTabContent">
                        <!-- Hotkey Section -->
                        <Border Style="{StaticResource SettingsCardStyle}">
                            <StackPanel>
                                <TextBlock Text="Recording Hotkey"
                                           FontSize="14"
                                           FontWeight="SemiBold"
                                           Foreground="#111827"/>
                                <TextBlock Text="Press this hotkey to start/stop voice recording"
                                           FontSize="12"
                                           Foreground="#6B7280"
                                           Margin="0,2,0,12"/>

                                <!-- Trigger plugin tabs -->
                                <StackPanel x:Name="TriggerPluginTabsPanel" Orientation="Horizontal" Margin="0,0,0,12">
                                    <!-- Plugin buttons added dynamically -->
                                </StackPanel>

                                <!-- Plugin content area -->
                                <Border x:Name="TriggerPluginContentArea"
                                        Background="#F9FAFB"
                                        CornerRadius="6"
                                        Padding="14"
                                        MinHeight="70">
                                    <!-- Plugin settings panels added dynamically -->
                                </Border>
                            </StackPanel>
                        </Border>

                        <!-- Microphone Section -->
                        <Border Style="{StaticResource SettingsCardStyle}">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                <StackPanel Grid.Column="0">
                                    <TextBlock Text="Microphone"
                                               FontSize="14"
                                               FontWeight="SemiBold"
                                               Foreground="#111827"/>
                                    <TextBlock x:Name="MicrophoneHint"
                                               Text="Default device"
                                               FontSize="12"
                                               Foreground="#6B7280"
                                               Margin="0,2,0,0"
                                               TextTrimming="CharacterEllipsis"
                                               MaxWidth="380"/>
                                </StackPanel>
                                <Button Grid.Column="1"
                                        Content="Change"
                                        Style="{StaticResource SettingsRowButtonStyle}"
                                        Click="ChangeMicrophone_Click"
                                        VerticalAlignment="Center"/>
                            </Grid>
                        </Border>
                    </StackPanel>

                    <!-- Explainer Tab Content -->
                    <StackPanel x:Name="ExplainerTabContent" Visibility="Collapsed">
                        <!-- Hotkey Section -->
                        <Border Style="{StaticResource SettingsCardStyle}">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                <StackPanel Grid.Column="0">
                                    <TextBlock Text="Explainer Hotkey"
                                               FontSize="14"
                                               FontWeight="SemiBold"
                                               Foreground="#111827"/>
                                    <TextBlock Text="Select text and press this hotkey to explain"
                                               FontSize="12"
                                               Foreground="#6B7280"
                                               Margin="0,2,0,0"/>
                                </StackPanel>
                                <TextBox x:Name="ExplainerHotkeyTextBox"
                                         Grid.Column="1"
                                         Style="{StaticResource HotkeyTextBoxStyle}"
                                         Text="Ctrl+Win+E"
                                         PreviewKeyDown="ExplainerHotkey_PreviewKeyDown"
                                         GotFocus="ExplainerHotkey_GotFocus"
                                         LostFocus="ExplainerHotkey_LostFocus"
                                         Width="140"
                                         VerticalAlignment="Center"/>
                            </Grid>
                        </Border>

                        <!-- How it works - Compact -->
                        <Border Style="{StaticResource SettingsCardStyle}">
                            <StackPanel>
                                <TextBlock Text="How it works"
                                           FontSize="14"
                                           FontWeight="SemiBold"
                                           Foreground="#111827"
                                           Margin="0,0,0,10"/>

                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>

                                    <StackPanel Grid.Column="0" Margin="0,0,8,0">
                                        <Border Width="28" Height="28" CornerRadius="14" Background="#F3E8FF" HorizontalAlignment="Left">
                                            <TextBlock Text="1" FontSize="12" FontWeight="SemiBold" Foreground="#7C3AED" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                        </Border>
                                        <TextBlock Text="Select any text" FontSize="12" Foreground="#374151" Margin="0,6,0,0" TextWrapping="Wrap"/>
                                    </StackPanel>

                                    <StackPanel Grid.Column="1" Margin="4,0">
                                        <Border Width="28" Height="28" CornerRadius="14" Background="#F3E8FF" HorizontalAlignment="Left">
                                            <TextBlock Text="2" FontSize="12" FontWeight="SemiBold" Foreground="#7C3AED" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                        </Border>
                                        <TextBlock Text="Press the hotkey" FontSize="12" Foreground="#374151" Margin="0,6,0,0" TextWrapping="Wrap"/>
                                    </StackPanel>

                                    <StackPanel Grid.Column="2" Margin="8,0,0,0">
                                        <Border Width="28" Height="28" CornerRadius="14" Background="#F3E8FF" HorizontalAlignment="Left">
                                            <TextBlock Text="3" FontSize="12" FontWeight="SemiBold" Foreground="#7C3AED" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                        </Border>
                                        <TextBlock Text="See the explanation" FontSize="12" Foreground="#374151" Margin="0,6,0,0" TextWrapping="Wrap"/>
                                    </StackPanel>
                                </Grid>
                            </StackPanel>
                        </Border>
                    </StackPanel>

                    <!-- General Tab Content -->
                    <StackPanel x:Name="GeneralTabContent" Visibility="Collapsed">
                        <!-- API Key / Account Section -->
                        <Border x:Name="ApiKeyCard" Style="{StaticResource SettingsCardStyle}">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                <StackPanel Grid.Column="0">
                                    <TextBlock x:Name="ApiKeyLabel"
                                               Text="Groq API Key"
                                               FontSize="14"
                                               FontWeight="SemiBold"
                                               Foreground="#111827"/>
                                    <TextBlock x:Name="ApiKeyHint"
                                               Text="Required for transcription"
                                               FontSize="12"
                                               Foreground="#6B7280"
                                               Margin="0,2,0,0"/>
                                </StackPanel>
                                <Button Grid.Column="1"
                                        Content="Change"
                                        Style="{StaticResource SettingsRowButtonStyle}"
                                        Click="ChangeApiKey_Click"
                                        VerticalAlignment="Center"/>
                            </Grid>
                        </Border>

                        <!-- Startup Section -->
                        <Border Style="{StaticResource SettingsCardStyle}">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                <StackPanel Grid.Column="0">
                                    <TextBlock Text="Launch at startup"
                                               FontSize="14"
                                               FontWeight="SemiBold"
                                               Foreground="#111827"/>
                                    <TextBlock Text="Start TalkKeys when you sign in to Windows"
                                               FontSize="12"
                                               Foreground="#6B7280"
                                               Margin="0,2,0,0"/>
                                </StackPanel>
                                <CheckBox x:Name="StartWithWindowsCheckBox"
                                          Grid.Column="1"
                                          Style="{StaticResource ToggleSwitchStyle}"
                                          Checked="StartWithWindows_Changed"
                                          Unchecked="StartWithWindows_Changed"
                                          VerticalAlignment="Center"/>
                            </Grid>
                        </Border>
                    </StackPanel>
                    </Grid>
                </ScrollViewer>

                <!-- Footer -->
                <Border Grid.Row="2" Margin="24,12,24,16">
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                        <Button Content="Cancel"
                                Click="Close_Click"
                                Width="90"
                                Height="36"
                                FontSize="13"
                                FontWeight="Medium"
                                Background="White"
                                Foreground="#374151"
                                BorderThickness="1"
                                BorderBrush="#E5E7EB"
                                Cursor="Hand"
                                Margin="0,0,10,0">
                            <Button.Style>
                                <Style TargetType="Button">
                                    <Setter Property="Template">
                                        <Setter.Value>
                                            <ControlTemplate TargetType="Button">
                                                <Border x:Name="bg"
                                                        Background="{TemplateBinding Background}"
                                                        BorderBrush="{TemplateBinding BorderBrush}"
                                                        BorderThickness="{TemplateBinding BorderThickness}"
                                                        CornerRadius="6">
                                                    <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                                </Border>
                                                <ControlTemplate.Triggers>
                                                    <Trigger Property="IsMouseOver" Value="True">
                                                        <Setter TargetName="bg" Property="Background" Value="#F9FAFB"/>
                                                    </Trigger>
                                                </ControlTemplate.Triggers>
                                            </ControlTemplate>
                                        </Setter.Value>
                                    </Setter>
                                </Style>
                            </Button.Style>
                        </Button>
                        <Button Content="Save Changes"
                                Click="SaveClose_Click"
                                Style="{StaticResource PrimaryButtonStyle}"
                                Width="120"
                                Height="36"/>
                    </StackPanel>
                </Border>
            </Grid>
        </Grid>
    </Border>

</Window>
