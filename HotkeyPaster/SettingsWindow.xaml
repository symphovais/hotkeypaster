<Window x:Class="TalkKeys.SettingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Settings - TalkKeys"
        Height="720"
        Width="520"
        WindowStartupLocation="CenterScreen"
        WindowStyle="None"
        ResizeMode="NoResize"
        AllowsTransparency="True"
        Background="Transparent"
        MouseLeftButtonDown="Window_MouseLeftButtonDown">

    <Window.Resources>
        <!-- Tab button style -->
        <Style x:Key="TabButtonStyle" TargetType="RadioButton">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="RadioButton">
                        <Border x:Name="TabBorder"
                                Background="Transparent"
                                BorderThickness="0,0,0,2"
                                BorderBrush="Transparent"
                                Padding="12,8"
                                Cursor="Hand">
                            <ContentPresenter x:Name="ContentText"
                                              HorizontalAlignment="Center"
                                              VerticalAlignment="Center"
                                              TextBlock.Foreground="#6B7280"
                                              TextBlock.FontSize="13"
                                              TextBlock.FontWeight="Medium"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsChecked" Value="True">
                                <Setter TargetName="TabBorder" Property="BorderBrush" Value="#6366F1"/>
                                <Setter TargetName="ContentText" Property="TextBlock.Foreground" Value="#6366F1"/>
                            </Trigger>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="ContentText" Property="TextBlock.Foreground" Value="#4F46E5"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <!-- Main Container with rounded corners -->
    <Border CornerRadius="16"
            Background="#FAFAFA"
            BorderBrush="#E5E7EB"
            BorderThickness="1">
        <Border.Effect>
            <DropShadowEffect BlurRadius="32" ShadowDepth="4" Opacity="0.15" Color="#000000"/>
        </Border.Effect>

        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- Custom Title Bar -->
            <Border Grid.Row="0" CornerRadius="16,16,0,0" Background="#FFFFFF">
                <Grid Height="48">
                    <TextBlock Text="Settings"
                               Foreground="#111827"
                               FontSize="14"
                               FontWeight="SemiBold"
                               VerticalAlignment="Center"
                               Margin="20,0,0,0"/>
                    <Button Content="âœ•"
                            HorizontalAlignment="Right"
                            VerticalAlignment="Center"
                            Margin="0,0,12,0"
                            Width="28"
                            Height="28"
                            FontSize="12"
                            Background="Transparent"
                            Foreground="#9CA3AF"
                            BorderThickness="0"
                            Cursor="Hand"
                            Click="Close_Click">
                        <Button.Style>
                            <Style TargetType="Button">
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="Button">
                                            <Border x:Name="bg" Background="{TemplateBinding Background}" CornerRadius="6">
                                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                            </Border>
                                            <ControlTemplate.Triggers>
                                                <Trigger Property="IsMouseOver" Value="True">
                                                    <Setter TargetName="bg" Property="Background" Value="#FEE2E2"/>
                                                    <Setter Property="Foreground" Value="#EF4444"/>
                                                </Trigger>
                                            </ControlTemplate.Triggers>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                            </Style>
                        </Button.Style>
                    </Button>
                    <Border Height="1" Background="#F3F4F6" VerticalAlignment="Bottom"/>
                </Grid>
            </Border>

            <!-- Content Area -->
            <Grid Grid.Row="1" Margin="0,0,0,0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- Header -->
                <StackPanel Grid.Row="0" Margin="24,16,24,12">
                    <TextBlock Text="Configure TalkKeys"
                               Foreground="#111827"
                               FontSize="18"
                               FontWeight="Bold"/>
                    <TextBlock Text="Set up your API, triggers, and preferences"
                               Foreground="#6B7280"
                               FontSize="12"
                               Margin="0,4,0,0"/>
                </StackPanel>

                <!-- Tab Navigation -->
                <Border Grid.Row="1" Background="#FFFFFF" BorderBrush="#E5E7EB" BorderThickness="0,1,0,1">
                    <StackPanel x:Name="TabNavigationPanel" Orientation="Horizontal" Margin="24,0,24,0">
                        <RadioButton x:Name="GeneralTab"
                                     Content="General"
                                     Style="{StaticResource TabButtonStyle}"
                                     GroupName="SettingsTabs"
                                     IsChecked="True"
                                     Checked="Tab_Changed"/>
                        <RadioButton x:Name="TriggersTab"
                                     Content="Triggers"
                                     Style="{StaticResource TabButtonStyle}"
                                     GroupName="SettingsTabs"
                                     Checked="Tab_Changed"/>
                    </StackPanel>
                </Border>

                <!-- Tab Content -->
                <Grid Grid.Row="2" Margin="24,16,24,0">
                    <!-- General Tab Content -->
                    <ScrollViewer x:Name="GeneralTabContent" VerticalScrollBarVisibility="Auto">
                        <StackPanel>

                            <!-- API Configuration Section -->
                            <Border Background="#FFFFFF" CornerRadius="12" Padding="16" BorderBrush="#E5E7EB" BorderThickness="1">
                                <StackPanel>
                                    <TextBlock Text="API Configuration"
                                               Foreground="#111827"
                                               FontSize="14"
                                               FontWeight="SemiBold"/>

                                    <!-- Transcription Provider Selection -->
                                    <TextBlock Text="Transcription Provider"
                                               Foreground="#374151"
                                               FontSize="12"
                                               FontWeight="Medium"
                                               Margin="0,12,0,6"/>
                                    <ComboBox x:Name="TranscriptionProviderComboBox"
                                              SelectionChanged="TranscriptionProvider_Changed"
                                              Height="36"
                                              Padding="10,8"
                                              FontSize="13"
                                              Background="#F9FAFB"
                                              Foreground="#111827"
                                              BorderBrush="#E5E7EB"
                                              BorderThickness="1">
                                        <ComboBox.Resources>
                                            <Style TargetType="Border">
                                                <Setter Property="CornerRadius" Value="8"/>
                                            </Style>
                                        </ComboBox.Resources>
                                        <ComboBoxItem Content="OpenAI Whisper" Tag="OpenAI"/>
                                        <ComboBoxItem Content="Groq Whisper (Faster)" Tag="Groq"/>
                                    </ComboBox>

                                    <!-- OpenAI API Key -->
                                    <StackPanel x:Name="OpenAIKeyPanel">
                                        <TextBlock Text="OpenAI API Key"
                                                   Foreground="#374151"
                                                   FontSize="12"
                                                   FontWeight="Medium"
                                                   Margin="0,12,0,6"/>
                                        <Border Background="#F9FAFB" CornerRadius="8" BorderBrush="#E5E7EB" BorderThickness="1">
                                            <PasswordBox x:Name="ApiKeyTextBox"
                                                     PasswordChanged="ApiKey_Changed"
                                                     Height="36"
                                                     Padding="10,8"
                                                     FontSize="13"
                                                     FontFamily="Segoe UI"
                                                     Background="Transparent"
                                                     Foreground="#111827"
                                                     BorderThickness="0"
                                                     CaretBrush="#6366F1"/>
                                        </Border>
                                        <TextBlock Text="Required for transcription. Get your key from platform.openai.com"
                                                   Foreground="#9CA3AF"
                                                   FontSize="11"
                                                   Margin="0,6,0,0"/>
                                    </StackPanel>

                                    <!-- Groq API Key -->
                                    <StackPanel x:Name="GroqKeyPanel" Visibility="Collapsed">
                                        <TextBlock Text="Groq API Key"
                                                   Foreground="#374151"
                                                   FontSize="12"
                                                   FontWeight="Medium"
                                                   Margin="0,12,0,6"/>
                                        <Border Background="#F9FAFB" CornerRadius="8" BorderBrush="#E5E7EB" BorderThickness="1">
                                            <PasswordBox x:Name="GroqApiKeyTextBox"
                                                     PasswordChanged="GroqApiKey_Changed"
                                                     Height="36"
                                                     Padding="10,8"
                                                     FontSize="13"
                                                     FontFamily="Segoe UI"
                                                     Background="Transparent"
                                                     Foreground="#111827"
                                                     BorderThickness="0"
                                                     CaretBrush="#6366F1"/>
                                        </Border>
                                        <TextBlock Text="Required for Groq. Get your key from console.groq.com"
                                                   Foreground="#9CA3AF"
                                                   FontSize="11"
                                                   Margin="0,6,0,0"/>
                                        <TextBlock Text="Uses Whisper + Llama for fastest transcription"
                                                   Foreground="#10B981"
                                                   FontSize="11"
                                                   Margin="0,4,0,0"/>
                                    </StackPanel>
                                </StackPanel>
                            </Border>

                            <!-- Audio Configuration Section -->
                            <Border Background="#FFFFFF" CornerRadius="12" Padding="16" BorderBrush="#E5E7EB" BorderThickness="1" Margin="0,12,0,0">
                                <StackPanel>
                                    <TextBlock Text="Audio Configuration"
                                               Foreground="#111827"
                                               FontSize="14"
                                               FontWeight="SemiBold"/>

                                    <TextBlock Text="Input Device"
                                               Foreground="#374151"
                                               FontSize="12"
                                               FontWeight="Medium"
                                               Margin="0,12,0,6"/>
                                    <ComboBox x:Name="AudioDeviceComboBox"
                                              SelectionChanged="AudioDevice_Changed"
                                              Height="36"
                                              Padding="10,8"
                                              FontSize="13"
                                              FontFamily="Segoe UI"
                                              Background="#F9FAFB"
                                              Foreground="#111827"
                                              BorderBrush="#E5E7EB"
                                              BorderThickness="1">
                                        <ComboBox.Resources>
                                            <Style TargetType="Border">
                                                <Setter Property="CornerRadius" Value="8"/>
                                            </Style>
                                        </ComboBox.Resources>
                                        <ComboBox.ItemTemplate>
                                            <DataTemplate>
                                                <TextBlock Text="{Binding}"
                                                           TextTrimming="CharacterEllipsis"
                                                           ToolTip="{Binding}"
                                                           Foreground="#111827"/>
                                            </DataTemplate>
                                        </ComboBox.ItemTemplate>
                                        <ComboBox.ItemContainerStyle>
                                            <Style TargetType="ComboBoxItem">
                                                <Setter Property="Background" Value="#FFFFFF"/>
                                                <Setter Property="Foreground" Value="#111827"/>
                                                <Setter Property="BorderThickness" Value="0"/>
                                                <Setter Property="Padding" Value="10,8"/>
                                                <Style.Triggers>
                                                    <Trigger Property="IsMouseOver" Value="True">
                                                        <Setter Property="Background" Value="#F3F4F6"/>
                                                    </Trigger>
                                                    <Trigger Property="IsSelected" Value="True">
                                                        <Setter Property="Background" Value="#6366F1"/>
                                                        <Setter Property="Foreground" Value="White"/>
                                                    </Trigger>
                                                </Style.Triggers>
                                            </Style>
                                        </ComboBox.ItemContainerStyle>
                                    </ComboBox>
                                    <TextBlock Text="Select the microphone to use for recording"
                                               Foreground="#9CA3AF"
                                               FontSize="11"
                                               Margin="0,6,0,0"/>
                                </StackPanel>
                            </Border>

                            <!-- General Settings Section -->
                            <Border Background="#FFFFFF" CornerRadius="12" Padding="16" BorderBrush="#E5E7EB" BorderThickness="1" Margin="0,12,0,0">
                                <StackPanel>
                                    <TextBlock Text="General"
                                               Foreground="#111827"
                                               FontSize="14"
                                               FontWeight="SemiBold"/>

                                    <CheckBox x:Name="StartWithWindowsCheckBox"
                                              Checked="StartWithWindows_Changed"
                                              Unchecked="StartWithWindows_Changed"
                                              Margin="0,14,0,0"
                                              Cursor="Hand">
                                        <CheckBox.Template>
                                            <ControlTemplate TargetType="CheckBox">
                                                <StackPanel Orientation="Horizontal">
                                                    <Border x:Name="CheckBorder"
                                                            Width="18"
                                                            Height="18"
                                                            Background="#F9FAFB"
                                                            BorderBrush="#D1D5DB"
                                                            BorderThickness="1"
                                                            CornerRadius="4"
                                                            Margin="0,0,10,0">
                                                        <Path x:Name="CheckMark"
                                                              Data="M 2 6 L 6 10 L 12 2"
                                                              Stroke="White"
                                                              StrokeThickness="2"
                                                              Visibility="Collapsed"
                                                              VerticalAlignment="Center"
                                                              HorizontalAlignment="Center"/>
                                                    </Border>
                                                    <TextBlock Text="Start TalkKeys with Windows"
                                                               Foreground="#374151"
                                                               FontSize="13"
                                                               VerticalAlignment="Center"/>
                                                </StackPanel>
                                                <ControlTemplate.Triggers>
                                                    <Trigger Property="IsChecked" Value="True">
                                                        <Setter TargetName="CheckBorder" Property="Background" Value="#6366F1"/>
                                                        <Setter TargetName="CheckBorder" Property="BorderBrush" Value="#6366F1"/>
                                                        <Setter TargetName="CheckMark" Property="Visibility" Value="Visible"/>
                                                    </Trigger>
                                                    <Trigger Property="IsMouseOver" Value="True">
                                                        <Setter TargetName="CheckBorder" Property="BorderBrush" Value="#6366F1"/>
                                                    </Trigger>
                                                </ControlTemplate.Triggers>
                                            </ControlTemplate>
                                        </CheckBox.Template>
                                    </CheckBox>
                                    <TextBlock Text="Automatically launch TalkKeys when you sign in"
                                               Foreground="#9CA3AF"
                                               FontSize="11"
                                               Margin="28,6,0,0"/>
                                </StackPanel>
                            </Border>

                        </StackPanel>
                    </ScrollViewer>

                    <!-- Triggers Tab Content -->
                    <ScrollViewer x:Name="TriggersTabContent" VerticalScrollBarVisibility="Auto" Visibility="Collapsed">
                        <StackPanel>
                            <!-- Plugin tabs will be inserted here dynamically -->
                            <StackPanel x:Name="TriggerPluginTabsPanel" Orientation="Horizontal" Margin="0,0,0,16">
                                <!-- Plugin buttons added dynamically -->
                            </StackPanel>

                            <!-- Plugin content area -->
                            <Border x:Name="TriggerPluginContentArea"
                                    Background="#FFFFFF"
                                    CornerRadius="12"
                                    Padding="16"
                                    BorderBrush="#E5E7EB"
                                    BorderThickness="1"
                                    MinHeight="300">
                                <!-- Plugin settings panels added dynamically -->
                            </Border>
                        </StackPanel>
                    </ScrollViewer>
                </Grid>

                <!-- Action Buttons -->
                <StackPanel Grid.Row="3" Orientation="Horizontal" HorizontalAlignment="Right" Margin="24,16,24,20">
                    <Button x:Name="CloseButton"
                            Content="Cancel"
                            Click="Close_Click"
                            Width="80"
                            Height="36"
                            FontSize="13"
                            FontWeight="SemiBold"
                            Background="#F3F4F6"
                            Foreground="#374151"
                            BorderThickness="0"
                            Cursor="Hand"
                            Margin="0,0,10,0">
                        <Button.Style>
                            <Style TargetType="Button">
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="Button">
                                            <Border x:Name="bg" Background="{TemplateBinding Background}" CornerRadius="8">
                                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                            </Border>
                                            <ControlTemplate.Triggers>
                                                <Trigger Property="IsMouseOver" Value="True">
                                                    <Setter TargetName="bg" Property="Background" Value="#E5E7EB"/>
                                                </Trigger>
                                            </ControlTemplate.Triggers>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                            </Style>
                        </Button.Style>
                    </Button>
                    <Button x:Name="SaveCloseButton"
                            Content="Save"
                            Click="SaveClose_Click"
                            Width="80"
                            Height="36"
                            FontSize="13"
                            FontWeight="SemiBold"
                            Background="#6366F1"
                            Foreground="White"
                            BorderThickness="0"
                            Cursor="Hand">
                        <Button.Style>
                            <Style TargetType="Button">
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="Button">
                                            <Border x:Name="bg" Background="{TemplateBinding Background}" CornerRadius="8">
                                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                            </Border>
                                            <ControlTemplate.Triggers>
                                                <Trigger Property="IsMouseOver" Value="True">
                                                    <Setter TargetName="bg" Property="Background" Value="#4F46E5"/>
                                                </Trigger>
                                            </ControlTemplate.Triggers>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                            </Style>
                        </Button.Style>
                    </Button>
                </StackPanel>
            </Grid>
        </Grid>
    </Border>
</Window>
