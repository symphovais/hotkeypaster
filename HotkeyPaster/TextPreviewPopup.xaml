<Window x:Class="TalkKeys.TextPreviewPopup"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Transcription"
        Width="400"
        Height="200"
        WindowStyle="None"
        ResizeMode="NoResize"
        Topmost="True"
        ShowInTaskbar="False"
        Background="Transparent"
        AllowsTransparency="True"
        WindowStartupLocation="CenterScreen">
    
    <Border CornerRadius="8" 
            BorderThickness="1" 
            Margin="10"
            Background="#FFFFFF"
            BorderBrush="#D1D5DB">
        <Border.Effect>
            <DropShadowEffect BlurRadius="20" ShadowDepth="2" Opacity="0.2" Color="#000000"/>
        </Border.Effect>
        
        <Grid Margin="16">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            
            <!-- Header -->
            <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,12">
                <TextBlock Text="âœ“" 
                           Foreground="#10B981" 
                           FontSize="18" 
                           FontWeight="Bold"
                           Margin="0,0,8,0"/>
                <TextBlock Text="Transcription Complete" 
                           Foreground="#111827" 
                           FontSize="14" 
                           FontWeight="SemiBold"/>
                <TextBlock x:Name="AutoCloseText"
                           Text="â€¢ Closing in 5s"
                           Foreground="#6B7280"
                           FontSize="12"
                           Margin="8,2,0,0"/>
            </StackPanel>
            
            <!-- Text Content -->
            <Border Grid.Row="1" 
                    Background="#F9FAFB" 
                    CornerRadius="6" 
                    BorderThickness="1"
                    BorderBrush="#E5E7EB"
                    Padding="12"
                    Margin="0,0,0,12">
                <ScrollViewer VerticalScrollBarVisibility="Auto" 
                              HorizontalScrollBarVisibility="Disabled">
                    <TextBlock x:Name="TranscribedText" 
                               Text="Sample transcribed text..." 
                               Foreground="#374151"
                               FontSize="13"
                               TextWrapping="Wrap"
                               LineHeight="20"/>
                </ScrollViewer>
            </Border>
            
            <!-- Actions -->
            <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right">
                <Button Content="ðŸ“‹ Copy" 
                        Click="CopyButton_Click"
                        Background="#F3F4F6"
                        Foreground="#374151"
                        BorderThickness="1"
                        BorderBrush="#D1D5DB"
                        Padding="12,6"
                        Margin="0,0,8,0"
                        Cursor="Hand">
                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="Button">
                                        <Border Background="{TemplateBinding Background}"
                                                BorderBrush="{TemplateBinding BorderBrush}"
                                                BorderThickness="{TemplateBinding BorderThickness}"
                                                CornerRadius="6"
                                                Padding="{TemplateBinding Padding}">
                                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                        </Border>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="#E5E7EB"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                </Button>
                
                <Button Content="Close" 
                        Click="CloseButton_Click"
                        Background="#EF4444"
                        Foreground="White"
                        BorderThickness="0"
                        Padding="12,6"
                        Cursor="Hand">
                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="Button">
                                        <Border Background="{TemplateBinding Background}"
                                                CornerRadius="6"
                                                Padding="{TemplateBinding Padding}">
                                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                        </Border>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="#DC2626"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                </Button>
            </StackPanel>
        </Grid>
    </Border>
</Window>
