<Window x:Class="TalkKeys.AboutWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="About TalkKeys"
        Height="500"
        Width="780"
        WindowStartupLocation="CenterScreen"
        WindowStyle="None"
        ResizeMode="NoResize"
        AllowsTransparency="True"
        Background="Transparent"
        MouseLeftButtonDown="Window_MouseLeftButtonDown">

    <Window.Resources>
        <!-- Sidebar Navigation Button Style (matching Settings) -->
        <Style x:Key="SidebarButtonStyle" TargetType="RadioButton">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="RadioButton">
                        <Border x:Name="bg"
                                Background="Transparent"
                                CornerRadius="8"
                                Padding="12,10"
                                Margin="0,1"
                                Cursor="Hand">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock x:Name="icon"
                                           Text="{Binding Tag, RelativeSource={RelativeSource TemplatedParent}}"
                                           FontSize="15"
                                           Width="22"
                                           Foreground="#6B7280"
                                           VerticalAlignment="Center"/>
                                <TextBlock x:Name="label"
                                           Text="{TemplateBinding Content}"
                                           FontSize="13"
                                           FontWeight="Medium"
                                           Foreground="#374151"
                                           Margin="10,0,0,0"
                                           VerticalAlignment="Center"/>
                            </StackPanel>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsChecked" Value="True">
                                <Setter TargetName="bg" Property="Background" Value="#F3F4F6"/>
                                <Setter TargetName="label" Property="Foreground" Value="#111827"/>
                                <Setter TargetName="label" Property="FontWeight" Value="SemiBold"/>
                            </Trigger>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="bg" Property="Background" Value="#F9FAFB"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Navigation Dot Style for Carousel -->
        <Style x:Key="NavDotStyle" TargetType="RadioButton">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="RadioButton">
                        <Border x:Name="dot"
                                Width="8" Height="8"
                                CornerRadius="4"
                                Background="#D1D5DB"
                                Margin="3,0"
                                Cursor="Hand"/>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsChecked" Value="True">
                                <Setter TargetName="dot" Property="Background" Value="#6B7280"/>
                                <Setter TargetName="dot" Property="Width" Value="20"/>
                                <Setter TargetName="dot" Property="CornerRadius" Value="4"/>
                            </Trigger>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="dot" Property="Background" Value="#9CA3AF"/>
                            </Trigger>
                            <MultiTrigger>
                                <MultiTrigger.Conditions>
                                    <Condition Property="IsMouseOver" Value="True"/>
                                    <Condition Property="IsChecked" Value="True"/>
                                </MultiTrigger.Conditions>
                                <Setter TargetName="dot" Property="Background" Value="#4B5563"/>
                            </MultiTrigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Navigation Arrow Button Style -->
        <Style x:Key="NavArrowStyle" TargetType="Button">
            <Setter Property="Width" Value="32"/>
            <Setter Property="Height" Value="32"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="bg"
                                Background="White"
                                CornerRadius="16"
                                BorderBrush="#E5E7EB"
                                BorderThickness="1">
                            <Border.Effect>
                                <DropShadowEffect BlurRadius="4" ShadowDepth="1" Opacity="0.1"/>
                            </Border.Effect>
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="bg" Property="Background" Value="#F9FAFB"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter TargetName="bg" Property="Opacity" Value="0.4"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Primary Button Style -->
        <Style x:Key="PrimaryButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#7C3AED"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Padding" Value="18,10"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="bg"
                                Background="{TemplateBinding Background}"
                                CornerRadius="6"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="bg" Property="Background" Value="#6D28D9"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

    </Window.Resources>

    <!-- Main Container -->
    <Border CornerRadius="12" Background="White" BorderBrush="#E5E7EB" BorderThickness="1">
        <Border.Effect>
            <DropShadowEffect BlurRadius="40" ShadowDepth="8" Opacity="0.12" Color="#000000"/>
        </Border.Effect>

        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="170"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Left Sidebar -->
            <Border Grid.Column="0" Background="#FAFAFA" CornerRadius="12,0,0,12" BorderBrush="#E5E7EB" BorderThickness="0,0,1,0">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <!-- Logo/Brand (using icon.ico like Settings) -->
                    <StackPanel Grid.Row="0" Margin="12,16,12,12">
                        <StackPanel Orientation="Horizontal">
                            <Image Source="icon.ico" Width="28" Height="28" RenderOptions.BitmapScalingMode="HighQuality"/>
                            <StackPanel Margin="8,0,0,0" VerticalAlignment="Center">
                                <TextBlock Text="TalkKeys"
                                           FontSize="14"
                                           FontWeight="Bold"
                                           Foreground="#111827"/>
                                <TextBlock x:Name="VersionText"
                                           Text="v1.0.0"
                                           FontSize="10"
                                           Foreground="#9CA3AF"/>
                            </StackPanel>
                        </StackPanel>
                    </StackPanel>

                    <!-- Navigation -->
                    <StackPanel Grid.Row="1" Margin="8,0,8,0">
                        <RadioButton x:Name="NavAbout"
                                     Style="{StaticResource SidebarButtonStyle}"
                                     Content="About"
                                     Tag="ℹ️"
                                     IsChecked="True"
                                     Click="NavButton_Click"/>
                        <RadioButton x:Name="NavWhatsNew"
                                     Style="{StaticResource SidebarButtonStyle}"
                                     Content="What's New"
                                     Tag="✨"
                                     Click="NavButton_Click"/>
                    </StackPanel>

                    <!-- Close Button -->
                    <StackPanel Grid.Row="2" Margin="12,0,12,16">
                        <Button Content="Close"
                                Style="{StaticResource PrimaryButtonStyle}"
                                Click="CloseButton_Click"
                                HorizontalAlignment="Stretch"/>
                    </StackPanel>
                </Grid>
            </Border>

            <!-- Content Area -->
            <Grid Grid.Column="1">
                <!-- About Page -->
                <ScrollViewer x:Name="AboutPage" VerticalScrollBarVisibility="Auto" Padding="24,20">
                    <StackPanel>
                        <TextBlock Text="About TalkKeys"
                                   FontSize="20"
                                   FontWeight="Bold"
                                   Foreground="#111827"
                                   Margin="0,0,0,4"/>
                        <TextBlock x:Name="TaglineText"
                                   Text="A voice-to-text application for Windows"
                                   FontSize="13"
                                   Foreground="#6B7280"
                                   Margin="0,0,0,16"/>

                        <!-- Made with love section -->
                        <Border Background="#F9FAFB" CornerRadius="8" Padding="14" Margin="0,0,0,16" BorderBrush="#E5E7EB" BorderThickness="1">
                            <StackPanel>
                                <TextBlock Text="Made with love"
                                           FontSize="13"
                                           FontWeight="SemiBold"
                                           Foreground="#374151"
                                           Margin="0,0,0,4"/>
                                <TextBlock x:Name="MadeWithLoveText"
                                           Text="This app was built purely for the joy of creating software."
                                           FontSize="12"
                                           Foreground="#6B7280"
                                           TextWrapping="Wrap"
                                           LineHeight="18"/>
                            </StackPanel>
                        </Border>

                        <!-- Libraries section -->
                        <TextBlock Text="Built with these amazing libraries"
                                   FontSize="13"
                                   FontWeight="SemiBold"
                                   Foreground="#374151"
                                   Margin="0,0,0,10"/>

                        <ItemsControl x:Name="LibrariesList" Margin="0,0,0,16">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Border Background="#F9FAFB" CornerRadius="6" Padding="10,8" Margin="0,0,0,4" BorderBrush="#E5E7EB" BorderThickness="1">
                                        <StackPanel Orientation="Horizontal">
                                            <TextBlock Text="{Binding Name}"
                                                       FontSize="12"
                                                       FontWeight="SemiBold"
                                                       Foreground="#374151"
                                                       Width="100"/>
                                            <TextBlock Text="{Binding Description}"
                                                       FontSize="12"
                                                       Foreground="#6B7280"/>
                                        </StackPanel>
                                    </Border>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>

                        <!-- Links section -->
                        <TextBlock Text="Links"
                                   FontSize="13"
                                   FontWeight="SemiBold"
                                   Foreground="#374151"
                                   Margin="0,0,0,10"/>

                        <Border Background="#F9FAFB" CornerRadius="8" Padding="14" BorderBrush="#E5E7EB" BorderThickness="1">
                            <ItemsControl x:Name="LinksList">
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <TextBlock FontSize="12" Margin="0,0,0,6">
                                            <Hyperlink Foreground="#7C3AED"
                                                       TextDecorations="None"
                                                       NavigateUri="{Binding Url}"
                                                       RequestNavigate="Hyperlink_RequestNavigate">
                                                <Run Text="{Binding Title}"/>
                                            </Hyperlink>
                                            <Run Text=" - " Foreground="#9CA3AF"/>
                                            <Run Text="{Binding Description}" Foreground="#6B7280"/>
                                        </TextBlock>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>
                        </Border>
                    </StackPanel>
                </ScrollViewer>

                <!-- What's New Page (Carousel) -->
                <Grid x:Name="WhatsNewPage" Visibility="Collapsed">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <!-- Header -->
                    <Border Grid.Row="0" Padding="24,16,24,0">
                        <StackPanel>
                            <TextBlock Text="What's New"
                                       FontSize="20"
                                       FontWeight="Bold"
                                       Foreground="#111827"
                                       Margin="0,0,0,2"/>
                            <TextBlock x:Name="ReleaseVersionText"
                                       Text="v1.2.0 - Remote Control &amp; WTF"
                                       FontSize="13"
                                       Foreground="#6B7280"/>
                        </StackPanel>
                    </Border>

                    <!-- Hero Features -->
                    <StackPanel x:Name="HeroFeaturesPanel" Grid.Row="1" Orientation="Horizontal"
                                HorizontalAlignment="Center" Margin="24,12,24,0"/>

                    <!-- Carousel Content with Navigation -->
                    <Grid Grid.Row="2" Margin="20,8,20,0">
                        <!-- Navigation Arrows (outside clipped area) -->
                        <Button x:Name="PrevButton"
                                Style="{StaticResource NavArrowStyle}"
                                Click="PrevButton_Click"
                                VerticalAlignment="Center"
                                HorizontalAlignment="Left"
                                Margin="0,0,0,0">
                            <TextBlock Text="‹" FontSize="18" Foreground="#6B7280" Margin="0,-2,1,0"/>
                        </Button>

                        <Button x:Name="NextButton"
                                Style="{StaticResource NavArrowStyle}"
                                Click="NextButton_Click"
                                VerticalAlignment="Center"
                                HorizontalAlignment="Right"
                                Margin="0,0,0,0">
                            <TextBlock Text="›" FontSize="18" Foreground="#6B7280" Margin="1,-2,0,0"/>
                        </Button>

                        <!-- Slides (clipped area) -->
                        <Grid Margin="36,0,36,0" ClipToBounds="True">
                            <Canvas x:Name="SlideCanvas">
                                <StackPanel x:Name="SlidePanel" Orientation="Horizontal">
                                    <StackPanel.RenderTransform>
                                        <TranslateTransform x:Name="SlideTransform"/>
                                    </StackPanel.RenderTransform>
                                </StackPanel>
                            </Canvas>
                        </Grid>
                    </Grid>

                    <!-- Navigation Dots -->
                    <StackPanel x:Name="DotsPanel"
                                Grid.Row="3"
                                Orientation="Horizontal"
                                HorizontalAlignment="Center"
                                Margin="0,0,0,16"/>
                </Grid>

                <!-- Loading Indicator -->
                <Border x:Name="LoadingIndicator" Background="White" Visibility="Collapsed">
                    <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                        <TextBlock Text="Loading..." FontSize="14" Foreground="#6B7280"/>
                    </StackPanel>
                </Border>
            </Grid>
        </Grid>
    </Border>
</Window>
