<Window x:Class="TalkKeys.WhatsNewWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="What's New in TalkKeys"
        Height="520"
        Width="460"
        WindowStartupLocation="CenterScreen"
        WindowStyle="None"
        ResizeMode="NoResize"
        AllowsTransparency="True"
        Background="Transparent"
        MouseLeftButtonDown="Window_MouseLeftButtonDown">

    <Border Background="White" CornerRadius="12" BorderBrush="#E5E7EB" BorderThickness="1">
        <Border.Effect>
            <DropShadowEffect Color="#000000" Opacity="0.15" BlurRadius="20" ShadowDepth="0"/>
        </Border.Effect>

        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Header -->
            <Border Grid.Row="0" Background="#7C3AED" CornerRadius="12,12,0,0" Padding="24,20">
                <StackPanel HorizontalAlignment="Center">
                    <TextBlock Text="What's New"
                               FontSize="28"
                               FontWeight="Bold"
                               Foreground="White"
                               HorizontalAlignment="Center"/>
                    <TextBlock x:Name="VersionText"
                               Text="Version 1.1.0"
                               FontSize="13"
                               Foreground="#E9D5FF"
                               HorizontalAlignment="Center"
                               Margin="0,4,0,0"/>
                </StackPanel>
            </Border>

            <!-- Content -->
            <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" Padding="24,20">
                <StackPanel>
                    <!-- Welcome message for new installs -->
                    <Border x:Name="WelcomeSection" Background="#F0FDF4" CornerRadius="8" Padding="16" Margin="0,0,0,20" Visibility="Collapsed">
                        <StackPanel>
                            <TextBlock Text="Welcome to TalkKeys!"
                                       FontSize="14"
                                       FontWeight="SemiBold"
                                       Foreground="#059669"
                                       Margin="0,0,0,8"/>
                            <TextBlock Text="Thank you for installing TalkKeys. Press Ctrl+Shift+Space to start recording, speak naturally, and your words will be typed automatically."
                                       FontSize="12"
                                       Foreground="#4B5563"
                                       TextWrapping="Wrap"
                                       LineHeight="18"/>
                        </StackPanel>
                    </Border>

                    <!-- Bug Fixes -->
                    <TextBlock Text="Bug Fixes"
                               FontSize="14"
                               FontWeight="SemiBold"
                               Foreground="#DC2626"
                               Margin="0,0,0,12"/>

                    <StackPanel Margin="0,0,0,20">
                        <Border Background="#FEF2F2" CornerRadius="6" Padding="12" Margin="0,0,0,8">
                            <StackPanel>
                                <TextBlock Text="Hotkeys Now Persist"
                                           FontSize="13"
                                           FontWeight="SemiBold"
                                           Foreground="#374151"/>
                                <TextBlock Text="Your custom hotkey settings are now saved correctly and won't reset after restarting the app"
                                           FontSize="12"
                                           Foreground="#6B7280"
                                           TextWrapping="Wrap"
                                           Margin="0,4,0,0"/>
                            </StackPanel>
                        </Border>

                        <Border Background="#FEF2F2" CornerRadius="6" Padding="12" Margin="0,0,0,8">
                            <StackPanel>
                                <TextBlock Text="More Reliable Pasting"
                                           FontSize="13"
                                           FontWeight="SemiBold"
                                           Foreground="#374151"/>
                                <TextBlock Text="Text now pastes correctly in more applications including Excel, browsers, and code editors"
                                           FontSize="12"
                                           Foreground="#6B7280"
                                           TextWrapping="Wrap"
                                           Margin="0,4,0,0"/>
                            </StackPanel>
                        </Border>
                    </StackPanel>

                    <!-- Improvements -->
                    <TextBlock Text="Improvements"
                               FontSize="14"
                               FontWeight="SemiBold"
                               Foreground="#7C3AED"
                               Margin="0,0,0,12"/>

                    <StackPanel Margin="0,0,0,20">
                        <TextBlock FontSize="12" Foreground="#4B5563" Margin="0,4">
                            <Run FontWeight="SemiBold">Stable Recording</Run>
                            <Run> - No more accidental double-triggers when pressing hotkeys</Run>
                        </TextBlock>
                        <TextBlock FontSize="12" Foreground="#4B5563" Margin="0,4">
                            <Run FontWeight="SemiBold">Better Error Messages</Run>
                            <Run> - Clear feedback when microphone access is blocked or unavailable</Run>
                        </TextBlock>
                        <TextBlock FontSize="12" Foreground="#4B5563" Margin="0,4">
                            <Run FontWeight="SemiBold">Network Resilience</Run>
                            <Run> - Automatic retry if network connection is briefly interrupted</Run>
                        </TextBlock>
                    </StackPanel>

                    <!-- Link to full release notes -->
                    <Border Background="#F3E8FF" CornerRadius="8" Padding="16">
                        <TextBlock FontSize="12" TextWrapping="Wrap">
                            <Hyperlink Click="ReleaseNotesLink_Click" Foreground="#7C3AED" TextDecorations="None">
                                <Run Text="View full release notes"/>
                            </Hyperlink>
                            <Run Foreground="#6B7280"> on our website for the complete changelog.</Run>
                        </TextBlock>
                    </Border>
                </StackPanel>
            </ScrollViewer>

            <!-- Footer -->
            <Border Grid.Row="2" BorderBrush="#E5E7EB" BorderThickness="0,1,0,0" Padding="24,16">
                <Button x:Name="ContinueButton"
                        Content="Get Started"
                        Click="ContinueButton_Click"
                        Background="#7C3AED"
                        Foreground="White"
                        FontSize="13"
                        FontWeight="Medium"
                        Padding="32,10"
                        Cursor="Hand"
                        HorizontalAlignment="Center">
                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <Border x:Name="bg"
                                    Background="{TemplateBinding Background}"
                                    CornerRadius="8"
                                    Padding="{TemplateBinding Padding}">
                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </Border>
                            <ControlTemplate.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter TargetName="bg" Property="Background" Value="#6D28D9"/>
                                </Trigger>
                            </ControlTemplate.Triggers>
                        </ControlTemplate>
                    </Button.Template>
                </Button>
            </Border>
        </Grid>
    </Border>
</Window>
