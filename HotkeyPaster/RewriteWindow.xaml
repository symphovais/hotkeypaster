<Window x:Class="TalkKeys.RewriteWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Rewrite"
        Width="420"
        SizeToContent="Height"
        MaxHeight="600"
        WindowStartupLocation="CenterScreen"
        WindowStyle="None"
        ResizeMode="NoResize"
        AllowsTransparency="True"
        Background="Transparent"
        ShowInTaskbar="False"
        Topmost="True"
        PreviewKeyDown="Window_PreviewKeyDown"
        Focusable="True">

    <Window.Resources>
        <!-- Entrance animation -->
        <Storyboard x:Key="FadeIn">
            <DoubleAnimation Storyboard.TargetName="RootSurface"
                             Storyboard.TargetProperty="Opacity"
                             From="0" To="1" Duration="0:0:0.15"/>
            <DoubleAnimation Storyboard.TargetName="RootSurface"
                             Storyboard.TargetProperty="(UIElement.RenderTransform).(TranslateTransform.Y)"
                             From="8" To="0" Duration="0:0:0.15">
                <DoubleAnimation.EasingFunction>
                    <CubicEase EasingMode="EaseOut"/>
                </DoubleAnimation.EasingFunction>
            </DoubleAnimation>
        </Storyboard>

        <!-- Colors -->
        <SolidColorBrush x:Key="SurfaceBg" Color="#1F2937" Opacity="0.97"/>
        <SolidColorBrush x:Key="SurfaceBorder" Color="#374151"/>
        <SolidColorBrush x:Key="CardBg" Color="#374151"/>
        <SolidColorBrush x:Key="CardBorder" Color="#4B5563"/>
        <SolidColorBrush x:Key="FieldBg" Color="#111827"/>
        <SolidColorBrush x:Key="FieldBorder" Color="#4B5563"/>
        <SolidColorBrush x:Key="TextPrimary" Color="#F3F4F6"/>
        <SolidColorBrush x:Key="TextSecondary" Color="#D1D5DB"/>
        <SolidColorBrush x:Key="TextMuted" Color="#9CA3AF"/>
        <SolidColorBrush x:Key="TextDim" Color="#6B7280"/>
        <SolidColorBrush x:Key="AccentPurple" Color="#8B5CF6"/>
        <SolidColorBrush x:Key="AccentPurpleHover" Color="#A78BFA"/>
        <SolidColorBrush x:Key="AccentSuccess" Color="#22C55E"/>

        <LinearGradientBrush x:Key="AccentGradient" StartPoint="0,0" EndPoint="1,0">
            <GradientStop Color="#8B5CF6" Offset="0"/>
            <GradientStop Color="#A78BFA" Offset="1"/>
        </LinearGradientBrush>

        <DropShadowEffect x:Key="WindowShadow" BlurRadius="24" ShadowDepth="4" Opacity="0.5" Color="#000000"/>
        <DropShadowEffect x:Key="ButtonGlow" BlurRadius="16" ShadowDepth="0" Opacity="0.3" Color="#8B5CF6"/>

        <!-- Pill Button Style (for Target/Tone selection) -->
        <Style x:Key="PillButton" TargetType="RadioButton">
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="RadioButton">
                        <Border x:Name="pill"
                                Background="#2D3748"
                                BorderBrush="#4B5563"
                                BorderThickness="1"
                                CornerRadius="16"
                                Padding="14,7"
                                Margin="0,0,8,6">
                            <TextBlock x:Name="text"
                                       Text="{TemplateBinding Content}"
                                       FontSize="12"
                                       FontWeight="Medium"
                                       Foreground="#9CA3AF"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsChecked" Value="True">
                                <Setter TargetName="pill" Property="Background" Value="#8B5CF6"/>
                                <Setter TargetName="pill" Property="BorderBrush" Value="#8B5CF6"/>
                                <Setter TargetName="text" Property="Foreground" Value="White"/>
                                <Setter TargetName="text" Property="FontWeight" Value="SemiBold"/>
                            </Trigger>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="pill" Property="BorderBrush" Value="#8B5CF6"/>
                            </Trigger>
                            <MultiTrigger>
                                <MultiTrigger.Conditions>
                                    <Condition Property="IsMouseOver" Value="True"/>
                                    <Condition Property="IsChecked" Value="True"/>
                                </MultiTrigger.Conditions>
                                <Setter TargetName="pill" Property="Background" Value="#A78BFA"/>
                            </MultiTrigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Icon Button -->
        <Style x:Key="IconBtn" TargetType="Button">
            <Setter Property="Width" Value="28"/>
            <Setter Property="Height" Value="28"/>
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="#6B7280"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="bg" Background="{TemplateBinding Background}" CornerRadius="6">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="bg" Property="Background" Value="#374151"/>
                                <Setter Property="Foreground" Value="#F3F4F6"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Primary Action Button -->
        <Style x:Key="PrimaryBtn" TargetType="Button">
            <Setter Property="Height" Value="36"/>
            <Setter Property="Padding" Value="20,0"/>
            <Setter Property="Background" Value="{StaticResource AccentGradient}"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="bg"
                                Background="{TemplateBinding Background}"
                                CornerRadius="8"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="bg" Property="Effect" Value="{StaticResource ButtonGlow}"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter TargetName="bg" Property="Opacity" Value="0.5"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Secondary Button -->
        <Style x:Key="SecondaryBtn" TargetType="Button">
            <Setter Property="Height" Value="36"/>
            <Setter Property="Padding" Value="16,0"/>
            <Setter Property="Background" Value="#374151"/>
            <Setter Property="Foreground" Value="#D1D5DB"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="FontWeight" Value="Medium"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="BorderBrush" Value="#4B5563"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="bg"
                                Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="8"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="bg" Property="Background" Value="#4B5563"/>
                                <Setter Property="Foreground" Value="White"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Slim Scrollbar -->
        <Style x:Key="SlimThumb" TargetType="Thumb">
            <Setter Property="OverridesDefaultStyle" Value="True"/>
            <Setter Property="IsTabStop" Value="False"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Thumb">
                        <Border x:Name="tb" Background="#4B5563" CornerRadius="2" Margin="1,0"/>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="tb" Property="Background" Value="#6B7280"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="SlimScrollBar" TargetType="ScrollBar">
            <Setter Property="OverridesDefaultStyle" Value="True"/>
            <Setter Property="Width" Value="6"/>
            <Setter Property="MinWidth" Value="6"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ScrollBar">
                        <Grid Background="Transparent">
                            <Track x:Name="PART_Track" IsDirectionReversed="True">
                                <Track.Thumb>
                                    <Thumb Style="{StaticResource SlimThumb}"/>
                                </Track.Thumb>
                            </Track>
                        </Grid>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Window.Triggers>
        <EventTrigger RoutedEvent="Window.Loaded">
            <BeginStoryboard Storyboard="{StaticResource FadeIn}"/>
        </EventTrigger>
    </Window.Triggers>

    <Border x:Name="RootSurface"
            Margin="12"
            CornerRadius="16"
            Background="{StaticResource SurfaceBg}"
            BorderBrush="{StaticResource SurfaceBorder}"
            BorderThickness="1"
            Effect="{StaticResource WindowShadow}"
            Opacity="0">
        <Border.RenderTransform>
            <TranslateTransform Y="8"/>
        </Border.RenderTransform>

        <Grid Margin="20,20,20,20">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- Header -->
                <Grid Grid.Row="0" Margin="0,0,0,16" MouseDown="Header_MouseDown" Cursor="SizeAll">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <StackPanel Grid.Column="0" Orientation="Horizontal">
                        <TextBlock Text="âœ" FontSize="16" VerticalAlignment="Center" Margin="0,0,8,0"/>
                        <TextBlock Text="Rewrite"
                                   FontSize="16"
                                   FontWeight="SemiBold"
                                   Foreground="{StaticResource TextPrimary}"
                                   VerticalAlignment="Center"/>
                    </StackPanel>

                    <Button Grid.Column="2"
                            Content="âœ•"
                            Style="{StaticResource IconBtn}"
                            Click="CloseButton_Click"
                            ToolTip="Close (Esc)"/>
                </Grid>

                <!-- Target Selection -->
                <StackPanel Grid.Row="1" Margin="0,0,0,12">
                    <TextBlock Text="TARGET"
                               FontSize="10"
                               FontWeight="Bold"
                               Foreground="{StaticResource TextDim}"
                               Margin="0,0,0,8"/>
                    <WrapPanel x:Name="TargetPanel">
                        <RadioButton x:Name="TargetEmail" Content="Email" Style="{StaticResource PillButton}" GroupName="Target" IsChecked="True" Click="Target_Click"/>
                        <RadioButton x:Name="TargetChat" Content="Chat" Style="{StaticResource PillButton}" GroupName="Target" Click="Target_Click"/>
                        <RadioButton x:Name="TargetDocument" Content="Document" Style="{StaticResource PillButton}" GroupName="Target" Click="Target_Click"/>
                        <RadioButton x:Name="TargetCode" Content="Code" Style="{StaticResource PillButton}" GroupName="Target" Click="Target_Click"/>
                        <RadioButton x:Name="TargetOther" Content="Other" Style="{StaticResource PillButton}" GroupName="Target" Click="Target_Click"/>
                    </WrapPanel>
                </StackPanel>

                <!-- Tone Selection -->
                <StackPanel Grid.Row="2" Margin="0,0,0,16">
                    <TextBlock Text="TONE"
                               FontSize="10"
                               FontWeight="Bold"
                               Foreground="{StaticResource TextDim}"
                               Margin="0,0,0,8"/>
                    <WrapPanel x:Name="TonePanel">
                        <RadioButton x:Name="ToneNeutral" Content="Neutral" Style="{StaticResource PillButton}" GroupName="Tone" IsChecked="True" Click="Tone_Click"/>
                        <RadioButton x:Name="ToneProfessional" Content="Professional" Style="{StaticResource PillButton}" GroupName="Tone" Click="Tone_Click"/>
                        <RadioButton x:Name="ToneFriendly" Content="Friendly" Style="{StaticResource PillButton}" GroupName="Tone" Click="Tone_Click"/>
                        <RadioButton x:Name="ToneDirect" Content="Direct" Style="{StaticResource PillButton}" GroupName="Tone" Click="Tone_Click"/>
                        <RadioButton x:Name="ToneFormal" Content="Formal" Style="{StaticResource PillButton}" GroupName="Tone" Click="Tone_Click"/>
                    </WrapPanel>
                </StackPanel>

                <!-- Custom Instruction (collapsed by default, expand on focus) -->
                <Border Grid.Row="3"
                        Background="{StaticResource CardBg}"
                        CornerRadius="10"
                        Padding="12,10"
                        Margin="0,0,0,12">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock Grid.Column="0"
                                   Text="ðŸ’¡"
                                   FontSize="12"
                                   VerticalAlignment="Center"
                                   Margin="0,0,8,0"/>
                        <TextBox x:Name="CustomInstructionTextBox"
                                 Grid.Column="1"
                                 Background="Transparent"
                                 BorderThickness="0"
                                 Foreground="{StaticResource TextSecondary}"
                                 CaretBrush="{StaticResource AccentPurple}"
                                 FontSize="13"
                                 VerticalAlignment="Center"
                                 Text=""
                                 GotFocus="CustomInstruction_GotFocus"
                                 LostFocus="CustomInstruction_LostFocus"/>
                        <TextBlock x:Name="CustomInstructionPlaceholder"
                                   Grid.Column="1"
                                   Text="Add custom instructions (optional)"
                                   FontSize="13"
                                   Foreground="{StaticResource TextMuted}"
                                   VerticalAlignment="Center"
                                   IsHitTestVisible="False"/>
                    </Grid>
                </Border>

                <!-- Output Area -->
                <Border Grid.Row="4"
                        Background="{StaticResource FieldBg}"
                        CornerRadius="10"
                        Padding="14"
                        MinHeight="180"
                        Margin="0,0,0,16">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>

                        <!-- Status -->
                        <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,8">
                            <TextBlock x:Name="StatusIcon" Text="" FontSize="12" Margin="0,0,6,0" VerticalAlignment="Center"/>
                            <TextBlock x:Name="StatusText"
                                       Text="Original text"
                                       FontSize="11"
                                       Foreground="{StaticResource TextMuted}"
                                       VerticalAlignment="Center"/>
                        </StackPanel>

                        <!-- Text Content -->
                        <ScrollViewer Grid.Row="1"
                                      VerticalScrollBarVisibility="Auto"
                                      HorizontalScrollBarVisibility="Disabled">
                            <ScrollViewer.Resources>
                                <Style TargetType="ScrollBar" BasedOn="{StaticResource SlimScrollBar}"/>
                            </ScrollViewer.Resources>
                            <TextBox x:Name="OutputTextBox"
                                     AcceptsReturn="True"
                                     TextWrapping="Wrap"
                                     Background="Transparent"
                                     BorderThickness="0"
                                     Foreground="{StaticResource TextPrimary}"
                                     CaretBrush="{StaticResource AccentPurple}"
                                     SelectionBrush="{StaticResource AccentPurple}"
                                     SelectionOpacity="0.3"
                                     FontSize="14"
                                     VerticalScrollBarVisibility="Disabled"/>
                        </ScrollViewer>
                    </Grid>
                </Border>

                <!-- Actions -->
                <Grid Grid.Row="5">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <!-- Character count -->
                    <TextBlock x:Name="CharCountText"
                               Grid.Column="0"
                               Text=""
                               FontSize="11"
                               Foreground="{StaticResource TextDim}"
                               VerticalAlignment="Center"/>

                    <Button x:Name="CopyButton"
                            Grid.Column="2"
                            Content="ðŸ“‹ Copy"
                            Style="{StaticResource SecondaryBtn}"
                            Click="CopyButton_Click"
                            Margin="0,0,8,0"/>

                    <Button x:Name="GenerateButton"
                            Grid.Column="3"
                            Content="âœ¨ Rewrite"
                            Style="{StaticResource PrimaryBtn}"
                            Click="GenerateButton_Click"/>
                </Grid>
            </Grid>
    </Border>
</Window>
