<Window x:Class="TalkKeys.ModelDownloadWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Download Whisper Models"
        Height="550"
        Width="600"
        WindowStartupLocation="CenterScreen"
        Background="{StaticResource BackgroundPrimary}"
        Foreground="{StaticResource TextPrimary}"
        ResizeMode="NoResize"
        WindowStyle="None"
        AllowsTransparency="True">

    <Border CornerRadius="12" Background="{StaticResource BackgroundPrimary}" BorderThickness="1" BorderBrush="{StaticResource BorderDefault}">
        <Grid Margin="30">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Header -->
            <StackPanel Grid.Row="0" Margin="0,0,0,25">
                <TextBlock Text="ðŸ“¥ Download Whisper Models" FontSize="24" FontWeight="Bold" Foreground="{StaticResource TextPrimary}"/>
                <TextBlock Text="Download AI models for offline speech recognition" FontSize="14" Foreground="#9CA3AF" Margin="0,5,0,0"/>
            </StackPanel>

            <!-- Content -->
            <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
                <StackPanel>
                    <!-- Model Selection -->
                    <Border Background="{StaticResource BackgroundSecondary}" CornerRadius="8" Padding="20" BorderBrush="{StaticResource BorderDefault}" BorderThickness="1">
                        <StackPanel>
                            <TextBlock Text="Select Model to Download:" FontSize="14" FontWeight="SemiBold" Foreground="{StaticResource TextSecondary}" Margin="0,0,0,10"/>

                            <ComboBox x:Name="DownloadModelComboBox"
                                      Style="{StaticResource ComboBoxStyle}"
                                      DisplayMemberPath="Description"
                                      Margin="0,0,0,15"/>

                            <Button x:Name="DownloadModelButton"
                                    Content="Download Selected Model"
                                    Click="DownloadModel_Click"
                                    Style="{StaticResource ButtonPrimary}"
                                    HorizontalAlignment="Stretch"/>
                        </StackPanel>
                    </Border>

                    <!-- Progress Panel -->
                    <Border x:Name="ProgressPanel"
                            Background="{StaticResource BackgroundSecondary}"
                            CornerRadius="8"
                            Padding="20"
                            Margin="0,15,0,0"
                            BorderBrush="{StaticResource BorderDefault}"
                            BorderThickness="1"
                            Visibility="Collapsed">
                        <StackPanel>
                            <TextBlock Text="Download Progress" FontSize="14" FontWeight="SemiBold" Foreground="{StaticResource TextSecondary}" Margin="0,0,0,10"/>

                            <ProgressBar x:Name="DownloadProgressBar"
                                         Height="8"
                                         Minimum="0"
                                         Maximum="100"
                                         Foreground="{StaticResource AccentSuccess}"
                                         Background="{StaticResource BackgroundPrimary}"
                                         Margin="0,0,0,10"/>

                            <TextBlock x:Name="DownloadStatusText"
                                       FontSize="13"
                                       Foreground="#9CA3AF"
                                       TextAlignment="Center"/>
                        </StackPanel>
                    </Border>

                    <!-- Info Section -->
                    <Border Background="{StaticResource BackgroundElevated}" CornerRadius="8" Padding="15" Margin="0,15,0,0" BorderBrush="{StaticResource BorderSubtle}" BorderThickness="1">
                        <StackPanel>
                            <TextBlock Text="ðŸ’¡ Model Information" FontSize="13" FontWeight="SemiBold" Foreground="#60A5FA" Margin="0,0,0,8"/>
                            <TextBlock TextWrapping="Wrap" FontSize="12" Foreground="#9CA3AF" LineHeight="18">
                                <Run Text="â€¢ Models are downloaded from Hugging Face ("/>
                                <Run Text="huggingface.co/sandrohanea/whisper.net" FontWeight="SemiBold"/>
                                <Run Text=")"/>
                                <LineBreak/>
                                <Run Text="â€¢ Larger models are more accurate but slower"/>
                                <LineBreak/>
                                <Run Text="â€¢ English-only models are faster for English content"/>
                                <LineBreak/>
                                <Run Text="â€¢ Models are stored in %LOCALAPPDATA%\TalkKeys\Models"/>
                            </TextBlock>
                        </StackPanel>
                    </Border>
                </StackPanel>
            </ScrollViewer>

            <!-- Footer Buttons -->
            <Grid Grid.Row="2" Margin="0,20,0,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <Button x:Name="CloseButton"
                        Content="Close"
                        Click="Close_Click"
                        Style="{StaticResource ButtonSecondary}"
                        Grid.Column="1"
                        MinWidth="100"/>
            </Grid>
        </Grid>
    </Border>
</Window>
