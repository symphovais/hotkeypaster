<Window x:Class="TalkKeys.SpeedTestWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Transcription Speed Test" 
        Height="600" 
        Width="700"
        WindowStartupLocation="CenterScreen"
        ResizeMode="CanResize"
        Background="#F5F5F5">

    <Window.Resources>
        <!-- Card Style -->
        <Style x:Key="CardStyle" TargetType="Border">
            <Setter Property="Background" Value="White"/>
            <Setter Property="CornerRadius" Value="8"/>
            <Setter Property="Padding" Value="20"/>
            <Setter Property="Margin" Value="0,0,0,15"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect Color="#000000" Opacity="0.1" BlurRadius="10" ShadowDepth="2"/>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Title Style -->
        <Style x:Key="TitleStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="18"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Foreground" Value="#333333"/>
            <Setter Property="Margin" Value="0,0,0,10"/>
        </Style>

        <!-- Subtitle Style -->
        <Style x:Key="SubtitleStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Foreground" Value="#555555"/>
            <Setter Property="Margin" Value="0,0,0,5"/>
        </Style>

        <!-- Value Style -->
        <Style x:Key="ValueStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="Foreground" Value="#666666"/>
            <Setter Property="Margin" Value="0,0,0,3"/>
        </Style>

        <!-- Button Style -->
        <Style x:Key="ButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#4F46E5"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Padding" Value="20,10"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="6" 
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#6366F1"/>
                </Trigger>
                <Trigger Property="IsEnabled" Value="False">
                    <Setter Property="Background" Value="#CCCCCC"/>
                    <Setter Property="Cursor" Value="Arrow"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" Style="{StaticResource CardStyle}">
            <StackPanel>
                <TextBlock Text="ðŸ Transcription Speed Test" Style="{StaticResource TitleStyle}" FontSize="22"/>
                <TextBlock x:Name="StatusText" 
                           Text="Click 'Start Test' to begin recording and comparison" 
                           Style="{StaticResource ValueStyle}"
                           Foreground="#888888"/>
            </StackPanel>
        </Border>

        <!-- Results Area -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
            <StackPanel x:Name="ResultsPanel">
                
                <!-- Progress Card (Initially Hidden) -->
                <Border x:Name="ProgressCard" Style="{StaticResource CardStyle}" Visibility="Collapsed">
                    <StackPanel>
                        <TextBlock Text="â³ Testing in Progress..." Style="{StaticResource SubtitleStyle}"/>
                        <ProgressBar x:Name="ProgressBar" 
                                     Height="8" 
                                     IsIndeterminate="True" 
                                     Margin="0,10,0,0"
                                     Foreground="#4F46E5"/>
                        <TextBlock x:Name="ProgressText" 
                                   Text="Initializing..." 
                                   Style="{StaticResource ValueStyle}"
                                   Margin="0,10,0,0"
                                   TextAlignment="Center"/>
                    </StackPanel>
                </Border>

                <!-- Local Results Card -->
                <Border x:Name="LocalCard" Style="{StaticResource CardStyle}" Visibility="Collapsed">
                    <StackPanel>
                        <TextBlock Text="ðŸ“ Local (Whisper.net)" Style="{StaticResource SubtitleStyle}" Foreground="#10B981"/>
                        <Grid Margin="0,10,0,0">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            
                            <StackPanel Grid.Column="0">
                                <TextBlock Text="Time" FontWeight="SemiBold" FontSize="12" Foreground="#888"/>
                                <TextBlock x:Name="LocalTime" Text="--" Style="{StaticResource ValueStyle}" FontSize="20" FontWeight="Bold" Foreground="#10B981"/>
                            </StackPanel>
                            
                            <StackPanel Grid.Column="1">
                                <TextBlock Text="Words" FontWeight="SemiBold" FontSize="12" Foreground="#888"/>
                                <TextBlock x:Name="LocalWords" Text="--" Style="{StaticResource ValueStyle}" FontSize="20" FontWeight="Bold" Foreground="#10B981"/>
                            </StackPanel>
                            
                            <StackPanel Grid.Column="2">
                                <TextBlock Text="Speed" FontWeight="SemiBold" FontSize="12" Foreground="#888"/>
                                <TextBlock x:Name="LocalSpeed" Text="--" Style="{StaticResource ValueStyle}" FontSize="20" FontWeight="Bold" Foreground="#10B981"/>
                            </StackPanel>
                        </Grid>
                        
                        <TextBlock Text="Transcription:" FontWeight="SemiBold" FontSize="12" Foreground="#888" Margin="0,15,0,5"/>
                        <Border Background="#F9FAFB" CornerRadius="4" Padding="10">
                            <TextBlock x:Name="LocalText" 
                                       Text="--" 
                                       TextWrapping="Wrap" 
                                       FontSize="12"
                                       Foreground="#333"/>
                        </Border>
                    </StackPanel>
                </Border>

                <!-- Cloud Results Card -->
                <Border x:Name="CloudCard" Style="{StaticResource CardStyle}" Visibility="Collapsed">
                    <StackPanel>
                        <TextBlock Text="â˜ï¸ Cloud (OpenAI)" Style="{StaticResource SubtitleStyle}" Foreground="#3B82F6"/>
                        <Grid Margin="0,10,0,0">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            
                            <StackPanel Grid.Column="0">
                                <TextBlock Text="Time" FontWeight="SemiBold" FontSize="12" Foreground="#888"/>
                                <TextBlock x:Name="CloudTime" Text="--" Style="{StaticResource ValueStyle}" FontSize="20" FontWeight="Bold" Foreground="#3B82F6"/>
                            </StackPanel>
                            
                            <StackPanel Grid.Column="1">
                                <TextBlock Text="Words" FontWeight="SemiBold" FontSize="12" Foreground="#888"/>
                                <TextBlock x:Name="CloudWords" Text="--" Style="{StaticResource ValueStyle}" FontSize="20" FontWeight="Bold" Foreground="#3B82F6"/>
                            </StackPanel>
                            
                            <StackPanel Grid.Column="2">
                                <TextBlock Text="Speed" FontWeight="SemiBold" FontSize="12" Foreground="#888"/>
                                <TextBlock x:Name="CloudSpeed" Text="--" Style="{StaticResource ValueStyle}" FontSize="20" FontWeight="Bold" Foreground="#3B82F6"/>
                            </StackPanel>
                        </Grid>
                        
                        <TextBlock Text="Transcription:" FontWeight="SemiBold" FontSize="12" Foreground="#888" Margin="0,15,0,5"/>
                        <Border Background="#F9FAFB" CornerRadius="4" Padding="10">
                            <TextBlock x:Name="CloudText" 
                                       Text="--" 
                                       TextWrapping="Wrap" 
                                       FontSize="12"
                                       Foreground="#333"/>
                        </Border>
                    </StackPanel>
                </Border>

                <!-- Comparison Card -->
                <Border x:Name="ComparisonCard" Style="{StaticResource CardStyle}" Visibility="Collapsed">
                    <StackPanel>
                        <TextBlock Text="ðŸ“Š Comparison" Style="{StaticResource SubtitleStyle}" Foreground="#8B5CF6"/>
                        <TextBlock x:Name="WinnerText" 
                                   Text="--" 
                                   Style="{StaticResource ValueStyle}"
                                   FontSize="16"
                                   FontWeight="Bold"
                                   Foreground="#8B5CF6"
                                   Margin="0,10,0,5"/>
                        <TextBlock x:Name="SpeedupText" 
                                   Text="--" 
                                   Style="{StaticResource ValueStyle}"
                                   FontSize="14"/>
                        <TextBlock x:Name="DifferenceText" 
                                   Text="--" 
                                   Style="{StaticResource ValueStyle}"
                                   FontSize="14"/>
                    </StackPanel>
                </Border>

            </StackPanel>
        </ScrollViewer>

        <!-- Action Buttons -->
        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,15,0,0">
            <Button x:Name="StartButton" 
                    Content="Start Test" 
                    Style="{StaticResource ButtonStyle}"
                    Click="StartButton_Click"
                    Width="150"
                    Margin="0,0,10,0"/>
            <Button x:Name="CloseButton" 
                    Content="Close" 
                    Style="{StaticResource ButtonStyle}"
                    Background="#6B7280"
                    Click="CloseButton_Click"
                    Width="150"/>
        </StackPanel>
    </Grid>
</Window>
